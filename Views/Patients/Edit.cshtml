@model InfertilityApp.Models.Patient

@{
    ViewData["Title"] = "Chỉnh sửa thông tin bệnh nhân";
}

<div class="container mx-auto px-4 py-8">
    <div class="flex justify-between items-center mb-6">
        <h2 class="text-3xl font-bold text-gray-900">Chỉnh sửa thông tin bệnh nhân</h2>
        <a asp-action="Index" class="bg-gray-600 text-white px-4 py-2 rounded-lg hover:bg-gray-700 transition-colors duration-200 flex items-center">
            <i class="bi bi-arrow-left mr-2"></i> Quay lại
        </a>
    </div>

    <div class="bg-white rounded-lg shadow-lg">
        <div class="p-6">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="mb-6 p-4 bg-red-50 border border-red-200 rounded-lg text-red-700"></div>
                <input type="hidden" asp-for="Id" />

                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div>
                        <label asp-for="FullName" class="block text-sm font-medium text-gray-700 mb-2">Họ và tên <span class="text-red-500">*</span></label>
                        <input asp-for="FullName" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent" />
                        <span asp-validation-for="FullName" class="text-red-500 text-sm"></span>
                    </div>

                    <div>
                        <label asp-for="Email" class="block text-sm font-medium text-gray-700 mb-2">Email <span class="text-red-500">*</span></label>
                        <input asp-for="Email" type="email" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent" />
                        <span asp-validation-for="Email" class="text-red-500 text-sm"></span>
                    </div>

                    <div>
                        <label asp-for="DateOfBirth" class="block text-sm font-medium text-gray-700 mb-2">Ngày sinh <span class="text-red-500">*</span></label>
                        <input asp-for="DateOfBirth" type="date" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent" />
                        <span asp-validation-for="DateOfBirth" class="text-red-500 text-sm"></span>
                    </div>

                    <div>
                        <label asp-for="PhoneNumber" class="block text-sm font-medium text-gray-700 mb-2">Số điện thoại <span class="text-red-500">*</span></label>
                        <input asp-for="PhoneNumber" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent" />
                        <span asp-validation-for="PhoneNumber" class="text-red-500 text-sm"></span>
                    </div>

                    <div>
                        <label asp-for="Gender" class="block text-sm font-medium text-gray-700 mb-2">Giới tính <span class="text-red-500">*</span></label>
                        <select asp-for="Gender" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent">
                            <option value="">-- Chọn giới tính --</option>
                            <option value="Nam">Nam</option>
                            <option value="Nữ">Nữ</option>
                        </select>
                        <span asp-validation-for="Gender" class="text-red-500 text-sm"></span>
                    </div>

                    <div>
                        <label asp-for="Occupation" class="block text-sm font-medium text-gray-700 mb-2">Nghề nghiệp</label>
                        <input asp-for="Occupation" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent" />
                        <span asp-validation-for="Occupation" class="text-red-500 text-sm"></span>
                    </div>

                    <div class="md:col-span-2">
                        <label asp-for="Address" class="block text-sm font-medium text-gray-700 mb-2">Địa chỉ</label>
                        <textarea asp-for="Address" rows="3" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent resize-none"></textarea>
                        <span asp-validation-for="Address" class="text-red-500 text-sm"></span>
                    </div>

                    <div class="md:col-span-2">
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                            <div>
                                <label asp-for="MedicalHistory" class="block text-sm font-medium text-gray-700 mb-2">Tiền sử bệnh</label>
                                <textarea asp-for="MedicalHistory" rows="4" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent resize-none" placeholder="Mô tả tiền sử bệnh của bệnh nhân (nếu có)"></textarea>
                                <span asp-validation-for="MedicalHistory" class="text-red-500 text-sm"></span>
                            </div>

                            <div>
                                <label asp-for="AllergiesInfo" class="block text-sm font-medium text-gray-700 mb-2">Thông tin dị ứng</label>
                                <textarea asp-for="AllergiesInfo" rows="4" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent resize-none" placeholder="Thông tin về các dị ứng (nếu có)"></textarea>
                                <span asp-validation-for="AllergiesInfo" class="text-red-500 text-sm"></span>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="flex justify-end space-x-4 mt-8 pt-6 border-t border-gray-200">
                    <a asp-action="Index" class="bg-gray-500 text-white px-6 py-2 rounded-lg hover:bg-gray-600 transition-colors duration-200">
                        Hủy
                    </a>
                    <button type="submit" class="bg-blue-600 text-white px-6 py-2 rounded-lg hover:bg-blue-700 transition-colors duration-200 flex items-center">
                        <i class="bi bi-check-circle mr-2"></i> Lưu thay đổi
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
