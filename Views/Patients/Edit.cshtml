@model InfertilityApp.Models.Patient

@{
    ViewData["Title"] = "Chỉnh sửa thông tin bệnh nhân";
}

<div class="max-w-5xl mx-auto p-6">
    <h1 class="text-2xl font-bold mb-6">Chỉnh sửa thông tin bệnh nhân</h1>

    <div class="bg-white shadow-md rounded-md p-6">
        <form asp-action="Edit" class="space-y-6">
            <div asp-validation-summary="ModelOnly" class="text-red-600 text-sm"></div>
            <input type="hidden" asp-for="Id" />

            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                    <label asp-for="FullName" class="block font-medium mb-1">Họ và tên</label>
                    <input asp-for="FullName" class="w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500" />
                    <span asp-validation-for="FullName" class="text-red-500 text-sm"></span>

                    <label asp-for="DateOfBirth" class="block font-medium mt-4 mb-1">Ngày sinh</label>
                    <input asp-for="DateOfBirth" type="date" class="w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500" />
                    <span asp-validation-for="DateOfBirth" class="text-red-500 text-sm"></span>

                    <label asp-for="Gender" class="block font-medium mt-4 mb-1">Giới tính</label>
                    <select asp-for="Gender" class="w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500">
                        <option value="">-- Chọn giới tính --</option>
                        <option value="Nam">Nam</option>
                        <option value="Nữ">Nữ</option>
                    </select>
                    <span asp-validation-for="Gender" class="text-red-500 text-sm"></span>

                    <label asp-for="PhoneNumber" class="block font-medium mt-4 mb-1">Số điện thoại</label>
                    <input asp-for="PhoneNumber" class="w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500" />
                    <span asp-validation-for="PhoneNumber" class="text-red-500 text-sm"></span>
                </div>

                <div>
                    <label asp-for="Email" class="block font-medium mb-1">Email</label>
                    <input asp-for="Email" type="email" class="w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500" />
                    <span asp-validation-for="Email" class="text-red-500 text-sm"></span>

                    <label asp-for="Address" class="block font-medium mt-4 mb-1">Địa chỉ</label>
                    <textarea asp-for="Address" rows="3" class="w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500"></textarea>
                    <span asp-validation-for="Address" class="text-red-500 text-sm"></span>

                    <label asp-for="Occupation" class="block font-medium mt-4 mb-1">Nghề nghiệp</label>
                    <input asp-for="Occupation" class="w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500" />
                    <span asp-validation-for="Occupation" class="text-red-500 text-sm"></span>

                    <label asp-for="MedicalHistory" class="block font-medium mt-4 mb-1">Tiền sử bệnh</label>
                    <textarea asp-for="MedicalHistory" rows="2" class="w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500"></textarea>
                    <span asp-validation-for="MedicalHistory" class="text-red-500 text-sm"></span>

                    <label asp-for="AllergiesInfo" class="block font-medium mt-4 mb-1">Thông tin dị ứng</label>
                    <textarea asp-for="AllergiesInfo" rows="2" class="w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500"></textarea>
                    <span asp-validation-for="AllergiesInfo" class="text-red-500 text-sm"></span>
                </div>
            </div>

            <div class="flex items-center justify-end space-x-4 pt-6">
                <input type="submit" value="Lưu thay đổi" class="px-5 py-2 bg-blue-600 text-white rounded hover:bg-blue-700 transition" />
                <a asp-action="Index" class="px-5 py-2 bg-gray-500 text-white rounded hover:bg-gray-600 transition">Quay lại danh sách</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
