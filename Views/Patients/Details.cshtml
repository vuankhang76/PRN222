@model InfertilityApp.Models.Patient

@{
    ViewData["Title"] = "Chi tiết bệnh nhân";
}

<div class="p-6 space-y-6 bg-gray-50 min-h-screen">
    <!-- Header Section -->
    <div class="bg-white rounded-2xl shadow-lg border border-green-200 overflow-hidden">
        <div class="bg-gradient-to-r from-green-600 via-emerald-600 to-teal-600 text-white p-6">
            <div class="flex items-center justify-between">
                <div class="flex items-center space-x-4">
                    <div class="w-16 h-16 bg-white/20 rounded-2xl flex items-center justify-center backdrop-blur-sm">
                        <i class="bi bi-person-check text-3xl text-white"></i>
                    </div>
                    <div>
                        <h1 class="text-3xl font-bold mb-2">Chi tiết bệnh nhân</h1>
                        <p class="text-green-100 text-lg">Thông tin chi tiết và hồ sơ y tế</p>
                    </div>
                </div>
                <div class="flex items-center space-x-3">
                    <a asp-action="Edit" asp-route-id="@Model.Id" 
                       class="bg-white/20 backdrop-blur-sm text-white px-4 py-2 rounded-xl hover:bg-white/30 transition-all duration-300 flex items-center space-x-2">
                        <i class="bi bi-pencil"></i>
                        <span>Chỉnh sửa</span>
                    </a>
                    <a asp-action="Index" 
                       class="bg-white/20 backdrop-blur-sm text-white px-4 py-2 rounded-xl hover:bg-white/30 transition-all duration-300 flex items-center space-x-2">
                        <i class="bi bi-arrow-left"></i>
                        <span>Quay lại</span>
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
        <!-- Personal Information Card -->
        <div class="lg:col-span-1">
            <div class="bg-white rounded-2xl shadow-lg border border-green-200 overflow-hidden h-fit">
                <div class="bg-gradient-to-r from-green-50 to-emerald-50 border-b border-green-100 p-6">
                    <h3 class="text-lg font-semibold text-gray-800 flex items-center space-x-2">
                        <div class="w-8 h-8 bg-green-100 rounded-lg flex items-center justify-center">
                            <i class="bi bi-person text-green-600"></i>
                        </div>
                        <span>Thông tin cá nhân</span>
                    </h3>
                </div>
                
                <div class="p-6">
                    <div class="text-center mb-6">
                        <div class="w-24 h-24 bg-green-50 rounded-full flex items-center justify-center mx-auto mb-4">
                            <i class="bi bi-person-circle text-5xl text-green-600"></i>
                        </div>
                        <h3 class="text-xl font-semibold text-gray-800">@Model.FullName</h3>
                        <p class="text-gray-600">Mã bệnh nhân: #@Model.Id</p>
                    </div>
                    
                    <div class="space-y-4">
                        <div class="flex justify-between">
                            <span class="font-medium text-gray-700">Ngày sinh:</span>
                            <span class="text-gray-600">@Model.DateOfBirth.ToString("dd/MM/yyyy") (@((int)((DateTime.Now - Model.DateOfBirth).TotalDays / 365.25)) tuổi)</span>
                        </div>
                        
                        <div class="flex justify-between">
                            <span class="font-medium text-gray-700">Giới tính:</span>
                            <span class="text-gray-600">@Model.Gender</span>
                        </div>
                        
                        <div class="flex justify-between">
                            <span class="font-medium text-gray-700">Số điện thoại:</span>
                            <span class="text-gray-600">@Model.PhoneNumber</span>
                        </div>
                        
                        <div class="flex justify-between">
                            <span class="font-medium text-gray-700">Email:</span>
                            <span class="text-gray-600">@Model.Email</span>
                        </div>
                        
                        <div class="flex justify-between">
                            <span class="font-medium text-gray-700">Địa chỉ:</span>
                            <span class="text-gray-600">@Model.Address</span>
                        </div>
                        
                        <div class="flex justify-between">
                            <span class="font-medium text-gray-700">Nghề nghiệp:</span>
                            <span class="text-gray-600">@Model.Occupation</span>
                        </div>
                        
                        <div class="flex justify-between">
                            <span class="font-medium text-gray-700">Ngày đăng ký:</span>
                            <span class="text-gray-600">@Model.RegistrationDate.ToString("dd/MM/yyyy")</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="lg:col-span-2 space-y-6">
            <!-- Partner Information -->
            <div class="bg-white rounded-2xl shadow-lg border border-green-200 overflow-hidden">
                <div class="bg-gradient-to-r from-green-50 to-emerald-50 border-b border-green-100 p-6 flex justify-between items-center">
                    <h3 class="text-lg font-semibold text-gray-800 flex items-center space-x-2">
                        <div class="w-8 h-8 bg-green-100 rounded-lg flex items-center justify-center">
                            <i class="bi bi-people text-green-600"></i>
                        </div>
                        <span>Người phối ngẫu</span>
                    </h3>
                    <a asp-controller="Partners" asp-action="PatientPartner" asp-route-id="@Model.Id" 
                       class="text-green-600 hover:text-green-700 transition-colors duration-200 flex items-center space-x-1">
                        <i class="bi bi-people"></i>
                        <span>Chi tiết</span>
                    </a>
                </div>
                
                <div class="p-6">
                    @if (Model.Partner != null)
                    {
                        <div class="flex items-center space-x-4 mb-4">
                            <div class="w-16 h-16 bg-green-50 rounded-full flex items-center justify-center">
                                <i class="bi bi-person-circle text-2xl text-green-600"></i>
                            </div>
                            <div>
                                <h5 class="text-lg font-semibold text-gray-800">@Model.Partner.FullName</h5>
                                <p class="text-gray-600">@Model.Partner.DateOfBirth.ToString("dd/MM/yyyy") (@((int)((DateTime.Now - Model.Partner.DateOfBirth).TotalDays / 365.25)) tuổi)</p>
                            </div>
                        </div>
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                            <div class="flex justify-between">
                                <span class="font-medium text-gray-700">Giới tính:</span>
                                <span class="text-gray-600">@Model.Partner.Gender</span>
                            </div>
                            <div class="flex justify-between">
                                <span class="font-medium text-gray-700">Số điện thoại:</span>
                                <span class="text-gray-600">@Model.Partner.PhoneNumber</span>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-8">
                            <div class="w-16 h-16 bg-gray-100 rounded-full flex items-center justify-center mx-auto mb-4">
                                <i class="bi bi-person-plus text-2xl text-gray-400"></i>
                            </div>
                            <p class="text-gray-600 mb-4">Chưa có thông tin người phối ngẫu</p>
                            <a asp-controller="Partners" asp-action="Create" asp-route-patientId="@Model.Id" 
                               class="bg-green-600 text-white px-4 py-2 rounded-xl hover:bg-green-700 transition-colors duration-200">
                                Thêm người phối ngẫu
                            </a>
                        </div>
                    }
                </div>
            </div>
            
            <!-- Medical Information -->
            <div class="bg-white rounded-2xl shadow-lg border border-green-200 overflow-hidden">
                <div class="bg-gradient-to-r from-green-50 to-emerald-50 border-b border-green-100 p-6 flex justify-between items-center">
                    <h3 class="text-lg font-semibold text-gray-800 flex items-center space-x-2">
                        <div class="w-8 h-8 bg-green-100 rounded-lg flex items-center justify-center">
                            <i class="bi bi-file-earmark-medical text-green-600"></i>
                        </div>
                        <span>Thông tin y tế</span>
                    </h3>
                    <a asp-controller="MedicalRecords" asp-action="PatientMedicalRecords" asp-route-id="@Model.Id" 
                       class="text-green-600 hover:text-green-700 transition-colors duration-200 flex items-center space-x-1">
                        <i class="bi bi-file-earmark-medical"></i>
                        <span>Xem hồ sơ</span>
                    </a>
                </div>
                
                <div class="p-6">
                    <div class="space-y-4">
                        <div>
                            <span class="font-medium text-gray-700">Tiền sử bệnh:</span>
                            <p class="text-gray-600 mt-1">@(string.IsNullOrEmpty(Model.MedicalHistory) ? "Không có" : Model.MedicalHistory)</p>
                        </div>
                        
                        <div>
                            <span class="font-medium text-gray-700">Thông tin dị ứng:</span>
                            <p class="text-gray-600 mt-1">@(string.IsNullOrEmpty(Model.AllergiesInfo) ? "Không có" : Model.AllergiesInfo)</p>
                        </div>
                    </div>
                    
                    <div class="text-center mt-6">
                        <a asp-controller="MedicalRecords" asp-action="Create" asp-route-patientId="@Model.Id" 
                           class="bg-green-600 text-white px-4 py-2 rounded-xl hover:bg-green-700 transition-colors duration-200 flex items-center justify-center space-x-2 max-w-max mx-auto">
                            <i class="bi bi-plus-circle"></i>
                            <span>Thêm hồ sơ y tế</span>
                        </a>
                    </div>
                </div>
            </div>
            
            <!-- Treatment Process -->
            <div class="bg-white rounded-2xl shadow-lg border border-green-200 overflow-hidden">
                <div class="bg-gradient-to-r from-green-50 to-emerald-50 border-b border-green-100 p-6 flex justify-between items-center">
                    <h3 class="text-lg font-semibold text-gray-800 flex items-center space-x-2">
                        <div class="w-8 h-8 bg-green-100 rounded-lg flex items-center justify-center">
                            <i class="bi bi-clipboard2-pulse text-green-600"></i>
                        </div>
                        <span>Quá trình điều trị</span>
                    </h3>
                    <div class="flex items-center space-x-3">
                        <a asp-controller="Treatments" asp-action="PatientTreatments" asp-route-id="@Model.Id" 
                           class="text-green-600 hover:text-green-700 transition-colors duration-200 flex items-center space-x-1">
                            <i class="bi bi-clipboard2-pulse"></i>
                            <span>Xem tất cả</span>
                        </a>
                        <a asp-controller="Treatments" asp-action="Create" asp-route-patientId="@Model.Id" 
                           class="bg-green-600 text-white px-3 py-1 rounded-lg hover:bg-green-700 transition-colors duration-200 flex items-center space-x-1">
                            <i class="bi bi-plus-circle"></i>
                            <span>Thêm mới</span>
                        </a>
                    </div>
                </div>
                
                <div class="p-6">
                    @if (Model.Treatments != null && Model.Treatments.Any())
                    {
                        <div class="overflow-x-auto">
                            <table class="w-full">
                                <thead class="bg-gray-50">
                                    <tr class="border-b border-gray-200">
                                        <th class="text-left py-3 px-4 font-medium text-gray-700">Tên điều trị</th>
                                        <th class="text-left py-3 px-4 font-medium text-gray-700">Loại</th>
                                        <th class="text-left py-3 px-4 font-medium text-gray-700">Bác sĩ</th>
                                        <th class="text-left py-3 px-4 font-medium text-gray-700">Ngày bắt đầu</th>
                                        <th class="text-left py-3 px-4 font-medium text-gray-700">Trạng thái</th>
                                        <th class="text-left py-3 px-4 font-medium text-gray-700"></th>
                                    </tr>
                                </thead>
                                <tbody class="divide-y divide-gray-100">
                                    @foreach (var treatment in Model.Treatments.OrderByDescending(t => t.StartDate))
                                    {
                                        <tr class="hover:bg-gray-50 transition-colors duration-200">
                                            <td class="py-3 px-4 text-gray-800">@treatment.TreatmentName</td>
                                            <td class="py-3 px-4 text-gray-600">@treatment.TreatmentType</td>
                                            <td class="py-3 px-4 text-gray-600">@treatment.Doctor.FullName</td>
                                            <td class="py-3 px-4 text-gray-600">@treatment.StartDate.ToString("dd/MM/yyyy")</td>
                                            <td class="py-3 px-4">
                                                @switch (treatment.Status)
                                                {
                                                    case "In Progress":
                                                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">Đang tiến hành</span>
                                                        break;
                                                    case "Completed":
                                                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">Hoàn thành</span>
                                                        break;
                                                    case "Cancelled":
                                                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800">Đã hủy</span>
                                                        break;
                                                    default:
                                                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800">@treatment.Status</span>
                                                        break;
                                                }
                                            </td>
                                            <td class="py-3 px-4">
                                                <a asp-controller="Treatments" asp-action="Details" asp-route-id="@treatment.Id" 
                                                   class="text-green-600 hover:text-green-800 font-medium">
                                                    Chi tiết
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-8">
                            <div class="w-16 h-16 bg-gray-100 rounded-full flex items-center justify-center mx-auto mb-4">
                                <i class="bi bi-clipboard-x text-2xl text-gray-400"></i>
                            </div>
                            <p class="text-gray-600">Chưa có quá trình điều trị nào</p>
                        </div>
                    }
                </div>
            </div>
            
            <!-- Appointments -->
            <div class="bg-white rounded-2xl shadow-lg border border-green-200 overflow-hidden">
                <div class="bg-gradient-to-r from-green-50 to-emerald-50 border-b border-green-100 p-6 flex justify-between items-center">
                    <h3 class="text-lg font-semibold text-gray-800 flex items-center space-x-2">
                        <div class="w-8 h-8 bg-green-100 rounded-lg flex items-center justify-center">
                            <i class="bi bi-calendar-check text-green-600"></i>
                        </div>
                        <span>Lịch hẹn</span>
                    </h3>
                    <div class="flex items-center space-x-3">
                        <a asp-controller="Appointments" asp-action="PatientAppointments" asp-route-id="@Model.Id" 
                           class="text-green-600 hover:text-green-700 transition-colors duration-200 flex items-center space-x-1">
                            <i class="bi bi-calendar-check"></i>
                            <span>Xem tất cả</span>
                        </a>
                        <a asp-controller="Appointments" asp-action="Create" asp-route-patientId="@Model.Id" 
                           class="bg-green-600 text-white px-3 py-1 rounded-lg hover:bg-green-700 transition-colors duration-200 flex items-center space-x-1">
                            <i class="bi bi-plus-circle"></i>
                            <span>Thêm mới</span>
                        </a>
                    </div>
                </div>
                
                <div class="p-6">
                    @if (Model.Appointments != null && Model.Appointments.Any())
                    {
                        <div class="overflow-x-auto">
                            <table class="w-full">
                                <thead class="bg-gray-50">
                                    <tr class="border-b border-gray-200">
                                        <th class="text-left py-3 px-4 font-medium text-gray-700">Bác sĩ</th>
                                        <th class="text-left py-3 px-4 font-medium text-gray-700">Ngày</th>
                                        <th class="text-left py-3 px-4 font-medium text-gray-700">Giờ</th>
                                        <th class="text-left py-3 px-4 font-medium text-gray-700">Loại</th>
                                        <th class="text-left py-3 px-4 font-medium text-gray-700">Trạng thái</th>
                                        <th class="text-left py-3 px-4 font-medium text-gray-700"></th>
                                    </tr>
                                </thead>
                                <tbody class="divide-y divide-gray-100">
                                    @foreach (var appointment in Model.Appointments.OrderByDescending(a => a.AppointmentDate).ThenBy(a => a.AppointmentTime).Take(5))
                                    {
                                        <tr class="hover:bg-gray-50 transition-colors duration-200">
                                            <td class="py-3 px-4 text-gray-800">
                                                @(appointment.Doctor != null ? appointment.Doctor.FullName : "Không xác định")
                                            </td>
                                            <td class="py-3 px-4 text-gray-600">@appointment.AppointmentDate.ToString("dd/MM/yyyy")</td>
                                            <td class="py-3 px-4 text-gray-600">@appointment.AppointmentTime.ToString(@"hh\:mm")</td>
                                            <td class="py-3 px-4 text-gray-600">@appointment.AppointmentType</td>
                                            <td class="py-3 px-4">
                                                @switch (appointment.Status)
                                                {
                                                    case "Scheduled":
                                                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">Đã lên lịch</span>
                                                        break;
                                                    case "Completed":
                                                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">Hoàn thành</span>
                                                        break;
                                                    case "Cancelled":
                                                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800">Đã hủy</span>
                                                        break;
                                                    case "Rescheduled":
                                                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800">Đổi lịch</span>
                                                        break;
                                                    default:
                                                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800">@appointment.Status</span>
                                                        break;
                                                }
                                            </td>
                                            <td class="py-3 px-4">
                                                <a asp-controller="Appointments" asp-action="Details" asp-route-id="@appointment.Id" 
                                                   class="text-green-600 hover:text-green-800 font-medium">
                                                    Chi tiết
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-8">
                            <div class="w-16 h-16 bg-gray-100 rounded-full flex items-center justify-center mx-auto mb-4">
                                <i class="bi bi-calendar-x text-2xl text-gray-400"></i>
                            </div>
                            <p class="text-gray-600">Chưa có lịch hẹn nào</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>