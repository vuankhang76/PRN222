@model InfertilityApp.Models.Patient

@{
    ViewData["Title"] = "Chi tiết bệnh nhân";
}

<div class="flex justify-between items-center mb-4">
    <h2>Chi tiết bệnh nhân</h2>
    <div>
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
            <i class="bi bi-pencil"></i> Chỉnh sửa
        </a>
        <a asp-action="Index" asp-route-id="@Model.Id" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Quay lại danh sách
        </a>
    </div>
</div>

<div class="grid grid-cols-1 md:grid-cols-3 gap-4">
    <div class="mb-4">
        <div class="bg-white shadow-md rounded-lg">
            <div class="bg-gray-200 p-4 rounded-t-lg">
                <h5 class="mb-0">Thông tin cá nhân</h5>
            </div>
            <div class="p-4">
                <div class="text-center mb-4">
                    <div class="avatar-placeholder mb-3">
                        <i class="bi bi-person-circle display-1"></i>
                    </div>
                    <h3>@Model.FullName</h3>
                    <p class="text-muted mb-0">Mã bệnh nhân: #@Model.Id</p>
                </div>
                
                <div class="mb-3">
                    <label class="font-bold">Ngày sinh:</label>
                    <p>@Model.DateOfBirth.ToString("dd/MM/yyyy") (@((int)((DateTime.Now - Model.DateOfBirth).TotalDays / 365.25)) tuổi)</p>
                </div>
                
                <div class="mb-3">
                    <label class="font-bold">Giới tính:</label>
                    <p>@Model.Gender</p>
                </div>
                
                <div class="mb-3">
                    <label class="font-bold">Số điện thoại:</label>
                    <p>@Model.PhoneNumber</p>
                </div>
                
                <div class="mb-3">
                    <label class="font-bold">Email:</label>
                    <p>@Model.Email</p>
                </div>
                
                <div class="mb-3">
                    <label class="font-bold">Địa chỉ:</label>
                    <p>@Model.Address</p>
                </div>
                
                <div class="mb-3">
                    <label class="font-bold">Nghề nghiệp:</label>
                    <p>@Model.Occupation</p>
                </div>
                
                <div class="mb-3">
                    <label class="font-bold">Ngày đăng ký:</label>
                    <p>@Model.RegistrationDate.ToString("dd/MM/yyyy")</p>
                </div>
            </div>
        </div>
    </div>
    
    <div class="md:col-span-2">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div class="mb-4">
                <div class="bg-white shadow-md rounded-lg">
                    <div class="bg-gray-200 p-4 rounded-t-lg">
                        <h5 class="mb-0">Người phối ngẫu</h5>
                        <a asp-controller="Partners" asp-action="ByPatient" asp-route-id="@Model.Id" class="btn btn-sm btn-outline-primary">
                            <i class="bi bi-people"></i> Chi tiết
                        </a>
                    </div>
                    <div class="p-4">
                        @if (Model.Partner != null)
                        {
                            <div class="flex items-center mb-3">
                                <div class="avatar-placeholder me-3">
                                    <i class="bi bi-person-circle fs-1"></i>
                                </div>
                                <div>
                                    <h5 class="mb-0">@Model.Partner.FullName</h5>
                                    <p class="text-muted mb-0">@Model.Partner.DateOfBirth.ToString("dd/MM/yyyy") (@((int)((DateTime.Now - Model.Partner.DateOfBirth).TotalDays / 365.25)) tuổi)</p>
                                </div>
                            </div>
                            <div class="mb-2">
                                <label class="font-bold">Giới tính:</label>
                                <p>@Model.Partner.Gender</p>
                            </div>
                            <div class="mb-2">
                                <label class="font-bold">Số điện thoại:</label>
                                <p>@Model.Partner.PhoneNumber</p>
                            </div>
                        }
                        else
                        {
                            <div class="text-center py-4">
                                <i class="bi bi-person-plus display-4"></i>
                                <p class="mt-3">Chưa có thông tin người phối ngẫu</p>
                                <a asp-controller="Partners" asp-action="Create" asp-route-patientId="@Model.Id" class="btn btn-sm btn-primary">
                                    Thêm người phối ngẫu
                                </a>
                            </div>
                        }
                    </div>
                </div>
            </div>
            
            <div class="mb-4">
                <div class="bg-white shadow-md rounded-lg">
                    <div class="bg-gray-200 p-4 rounded-t-lg">
                        <h5 class="mb-0">Thông tin y tế</h5>
                        <a asp-controller="MedicalRecords" asp-action="PatientMedicalRecords" asp-route-id="@Model.Id" class="btn btn-sm btn-outline-primary">
                            <i class="bi bi-file-earmark-medical"></i> Xem hồ sơ
                        </a>
                    </div>
                    <div class="p-4">
                        <div class="mb-3">
                            <label class="font-bold">Tiền sử bệnh:</label>
                            <p>@(string.IsNullOrEmpty(Model.MedicalHistory) ? "Không có" : Model.MedicalHistory)</p>
                        </div>
                        
                        <div class="mb-3">
                            <label class="font-bold">Thông tin dị ứng:</label>
                            <p>@(string.IsNullOrEmpty(Model.AllergiesInfo) ? "Không có" : Model.AllergiesInfo)</p>
                        </div>
                        
                        <div class="text-center mt-4">
                            <a asp-controller="MedicalRecords" asp-action="Create" asp-route-patientId="@Model.Id" class="btn btn-sm btn-primary">
                                <i class="bi bi-plus-circle"></i> Thêm hồ sơ y tế
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="col-span-2 mb-4">
                <div class="bg-white shadow-md rounded-lg">
                    <div class="bg-gray-200 p-4 rounded-t-lg">
                        <h5 class="mb-0">Quá trình điều trị</h5>
                        <div class="d-flex justify-content-between align-items-center">
                            <a asp-controller="Treatments" asp-action="PatientTreatments" asp-route-id="@Model.Id" class="btn btn-sm btn-outline-primary me-2">
                                <i class="bi bi-clipboard2-pulse"></i> Xem tất cả
                            </a>
                            <a asp-controller="Treatments" asp-action="Create" asp-route-patientId="@Model.Id" class="btn btn-sm btn-primary">
                                <i class="bi bi-plus-circle"></i> Thêm mới
                            </a>
                        </div>
                    </div>
                    <div class="p-4">
                        @if (Model.Treatments != null && Model.Treatments.Any())
                        {
                            <div class="overflow-x-auto">
                                <table class="min-w-full divide-y divide-gray-200">
                                    <thead>
                                        <tr>
                                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Tên điều trị</th>
                                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Loại</th>
                                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Bác sĩ</th>
                                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Ngày bắt đầu</th>
                                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Trạng thái</th>
                                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var treatment in Model.Treatments.OrderByDescending(t => t.StartDate))
                                        {
                                            <tr>
                                                <td class="px-6 py-4 whitespace-nowrap">@treatment.TreatmentName</td>
                                                <td class="px-6 py-4 whitespace-nowrap">@treatment.TreatmentType</td>
                                                <td class="px-6 py-4 whitespace-nowrap">@(treatment.Doctor?.FullName ?? "Chưa chỉ định")</td>
                                                <td class="px-6 py-4 whitespace-nowrap">@treatment.StartDate.ToString("dd/MM/yyyy")</td>
                                                <td class="px-6 py-4 whitespace-nowrap">
                                                    @switch (treatment.Status)
                                                    {
                                                        case "In Progress":
                                                            <span class="bg-blue-500 text-white px-2 py-1 rounded">Đang tiến hành</span>
                                                            break;
                                                        case "Completed":
                                                            <span class="bg-green-500 text-white px-2 py-1 rounded">Hoàn thành</span>
                                                            break;
                                                        case "Cancelled":
                                                            <span class="bg-red-500 text-white px-2 py-1 rounded">Đã hủy</span>
                                                            break;
                                                        default:
                                                            <span class="bg-gray-500 text-white px-2 py-1 rounded">@treatment.Status</span>
                                                            break;
                                                    }
                                                </td>
                                                <td class="px-6 py-4 whitespace-nowrap">
                                                    <a asp-controller="Treatments" asp-action="Details" asp-route-id="@treatment.Id" class="btn btn-sm btn-outline-primary">
                                                        Chi tiết
                                                    </a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        }
                        else
                        {
                            <div class="text-center py-4">
                                <i class="bi bi-clipboard-x display-4"></i>
                                <p class="mt-3">Chưa có quá trình điều trị nào</p>
                            </div>
                        }
                    </div>
                </div>
            </div>
            
            <div class="col-span-2 mb-4">
                <div class="bg-white shadow-md rounded-lg">
                    <div class="bg-gray-200 p-4 rounded-t-lg">
                        <h5 class="mb-0">Lịch hẹn</h5>
                        <div class="d-flex justify-content-between align-items-center">
                            <a asp-controller="Appointments" asp-action="PatientAppointments" asp-route-id="@Model.Id" class="btn btn-sm btn-outline-primary me-2">
                                <i class="bi bi-calendar-check"></i> Xem tất cả
                            </a>
                            <a asp-controller="Appointments" asp-action="Create" asp-route-patientId="@Model.Id" class="btn btn-sm btn-primary">
                                <i class="bi bi-plus-circle"></i> Thêm mới
                            </a>
                        </div>
                    </div>
                    <div class="p-4">
                        @if (Model.Appointments != null && Model.Appointments.Any())
                        {
                            <div class="overflow-x-auto">
                                <table class="min-w-full divide-y divide-gray-200">
                                    <thead>
                                        <tr>
                                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Bác sĩ</th>
                                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Ngày</th>
                                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Giờ</th>
                                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Loại</th>
                                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Trạng thái</th>
                                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var appointment in Model.Appointments.OrderByDescending(a => a.AppointmentDate).ThenBy(a => a.AppointmentTime).Take(5))
                                        {
                                            <tr>
                                                <td class="px-6 py-4 whitespace-nowrap">@(appointment.Doctor?.FullName ?? "Chưa chỉ định")</td>
                                                <td class="px-6 py-4 whitespace-nowrap">@appointment.AppointmentDate.ToString("dd/MM/yyyy")</td>
                                                <td class="px-6 py-4 whitespace-nowrap">@appointment.AppointmentTime.ToString(@"hh\:mm")</td>
                                                <td class="px-6 py-4 whitespace-nowrap">@appointment.AppointmentType</td>
                                                <td class="px-6 py-4 whitespace-nowrap">
                                                    @switch (appointment.Status)
                                                    {
                                                        case "Scheduled":
                                                            <span class="bg-blue-500 text-white px-2 py-1 rounded">Đã lên lịch</span>
                                                            break;
                                                        case "Completed":
                                                            <span class="bg-green-500 text-white px-2 py-1 rounded">Hoàn thành</span>
                                                            break;
                                                        case "Cancelled":
                                                            <span class="bg-red-500 text-white px-2 py-1 rounded">Đã hủy</span>
                                                            break;
                                                        case "Rescheduled":
                                                            <span class="bg-yellow-500 text-white px-2 py-1 rounded">Đổi lịch</span>
                                                            break;
                                                        default:
                                                            <span class="bg-gray-500 text-white px-2 py-1 rounded">@appointment.Status</span>
                                                            break;
                                                    }
                                                </td>
                                                <td class="px-6 py-4 whitespace-nowrap">
                                                    <a asp-controller="Appointments" asp-action="Details" asp-route-id="@appointment.Id" class="btn btn-sm btn-outline-primary">
                                                        Chi tiết
                                                    </a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        }
                        else
                        {
                            <div class="text-center py-4">
                                <i class="bi bi-calendar-x display-4"></i>
                                <p class="mt-3">Chưa có lịch hẹn nào</p>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .avatar-placeholder {
        width: 100px;
        height: 100px;
        background-color: #f8f9fa;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto;
    }
</style>