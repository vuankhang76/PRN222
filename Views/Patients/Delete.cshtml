@model InfertilityApp.Models.Patient

@{
    ViewData["Title"] = "Xóa bệnh nhân";
}

<div class="max-w-2xl mx-auto mt-10 bg-white p-6 rounded-lg shadow-lg">
    <h2 class="text-2xl font-semibold text-red-600 mb-4">Xác nhận xóa bệnh nhân</h2>

    <p class="mb-4 text-gray-700">Bạn có chắc chắn muốn xóa bệnh nhân sau không?</p>

    <div class="mb-4">
        <strong>Họ và tên:</strong> @Model.FullName<br />
        <strong>Ngày sinh:</strong> @Model.DateOfBirth.ToString("dd/MM/yyyy")<br />
        <strong>Giới tính:</strong> @Model.Gender<br />
        <strong>Email:</strong> @Model.Email<br />
        <strong>Số điện thoại:</strong> @Model.PhoneNumber
    </div>

    <form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="bg-red-600 text-white px-4 py-2 rounded hover:bg-red-700">
        Xóa
    </button>
    <a asp-action="Index" class="bg-gray-300 text-gray-800 px-4 py-2 rounded hover:bg-gray-400">
        Hủy bỏ
    </a>
</form>
</div>
