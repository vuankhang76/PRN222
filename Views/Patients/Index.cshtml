@model IEnumerable<InfertilityApp.Models.Patient>

@{
    ViewData["Title"] = "Quản lý bệnh nhân";
}

<!-- Page Header -->
<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1 class="page-title mb-2">Quản lý bệnh nhân</h1>
        <p class="text-muted">Danh sách và quản lý thông tin bệnh nhân trong hệ thống</p>
    </div>
    <div class="d-flex gap-2">
        <button class="btn btn-outline-secondary btn-sm">
            <i class="bi bi-download"></i> Xuất Excel
        </button>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Thêm bệnh nhân mới
        </a>
    </div>
</div>

<!-- Search and Filter Section -->
<div class="card mb-4">
    <div class="card-body">
        <div class="row align-items-center">
            <div class="col-md-6">
                <div class="input-group">
                    <span class="input-group-text bg-white border-end-0">
                        <i class="bi bi-search text-muted"></i>
                    </span>
                    <input type="text" id="searchInput" class="form-control border-start-0" placeholder="Tìm kiếm theo tên, email, hoặc số điện thoại...">
                </div>
            </div>
            <div class="col-md-6">
                <div class="d-flex gap-2 justify-content-md-end">
                    <select class="form-select" style="width: auto;">
                        <option>Tất cả giới tính</option>
                        <option>Nam</option>
                        <option>Nữ</option>
                    </select>
                    <select class="form-select" style="width: auto;">
                        <option>Tất cả trạng thái</option>
                        <option>Đang điều trị</option>
                        <option>Hoàn thành</option>
                        <option>Tạm dừng</option>
                    </select>
                    <button class="btn btn-outline-secondary">
                        <i class="bi bi-funnel"></i>
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Patients Table -->
<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <div>
            <h5 class="mb-1">Danh sách bệnh nhân</h5>
            <small class="text-muted">Tổng cộng @Model.Count() bệnh nhân</small>
        </div>
        <div class="d-flex gap-2">
            <button class="btn btn-outline-secondary btn-sm">
                <i class="bi bi-grid-3x3-gap"></i>
            </button>
            <button class="btn btn-outline-secondary btn-sm active">
                <i class="bi bi-list-ul"></i>
            </button>
        </div>
    </div>
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover mb-0" id="patientsTable">
                <thead>
                    <tr>
                        <th class="border-0">Bệnh nhân</th>
                        <th class="border-0">Ngày sinh</th>
                        <th class="border-0">Giới tính</th>
                        <th class="border-0">Liên hệ</th>
                        <th class="border-0">Ngày đăng ký</th>
                        <th class="border-0">Trạng thái</th>
                        <th class="border-0 text-center">Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="border-0">
                                <div class="d-flex align-items-center">
                                    <div>
                                        <h6 class="mb-0 fw-semibold">@(item.FullName ?? "N/A")</h6>
                                        <small class="text-muted">ID: #@item.Id.ToString().PadLeft(6, '0')</small>
                                    </div>
                                </div>
                            </td>
                            <td class="border-0">
                                <div class="fw-semibold">@item.DateOfBirth.ToString("dd/MM/yyyy")</div>
                                <small class="text-muted">@((DateTime.Now.Year - item.DateOfBirth.Year)) tuổi</small>
                            </td>
                            <td class="border-0">
                                <span class="badge @((item.Gender ?? "").Equals("Nam", StringComparison.OrdinalIgnoreCase) ? "bg-primary" : "bg-info") bg-opacity-10 text-primary">
                                    <i class="bi @((item.Gender ?? "").Equals("Nam", StringComparison.OrdinalIgnoreCase) ? "bi-gender-male" : "bi-gender-female") me-1"></i>
                                    @(item.Gender ?? "N/A")
                                </span>
                            </td>
                            <td class="border-0">
                                <div>
                                    <div class="fw-semibold">@(item.PhoneNumber ?? "N/A")</div>
                                    <small class="text-muted">@(item.Email ?? "N/A")</small>
                                </div>
                            </td>
                            <td class="border-0">
                                <div class="fw-semibold">@item.RegistrationDate.ToString("dd/MM/yyyy")</div>
                                <small class="text-muted">@item.RegistrationDate.ToString("HH:mm")</small>
                            </td>
                            <td class="border-0">
                                <span class="badge bg-success bg-opacity-10 text-success">
                                    <i class="bi bi-check-circle me-1"></i>
                                    Đang điều trị
                                </span>
                            </td>
                            <td class="border-0 text-center">
                                <div class="d-flex gap-1 justify-content-center">
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-primary btn-sm" title="Xem chi tiết">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-warning btn-sm" title="Chỉnh sửa">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <div class="dropdown">
                                        <button type="button" class="btn btn-outline-secondary btn-sm dropdown-toggle dropdown-toggle-split" data-bs-toggle="dropdown" aria-expanded="false" title="Thêm tùy chọn">
                                            <i class="bi bi-three-dots-vertical"></i>
                                        </button>
                                        <ul class="dropdown-menu dropdown-menu-end">
                                            <li>
                                                <a class="dropdown-item" asp-controller="Partners" asp-action="ByPatient" asp-route-id="@item.Id">
                                                    <i class="bi bi-people me-2"></i> Người phối ngẫu
                                                </a>
                                            </li>
                                            <li>
                                                <a class="dropdown-item" asp-controller="MedicalRecords" asp-action="PatientHistory" asp-route-id="@item.Id">
                                                    <i class="bi bi-file-earmark-medical me-2"></i> Hồ sơ y tế
                                                </a>
                                            </li>
                                            <li>
                                                <a class="dropdown-item" asp-controller="Treatments" asp-action="Index" asp-route-patientId="@item.Id">
                                                    <i class="bi bi-clipboard2-pulse me-2"></i> Điều trị
                                                </a>
                                            </li>
                                            <li>
                                                <a class="dropdown-item" asp-controller="Appointments" asp-action="Index" asp-route-patientId="@item.Id">
                                                    <i class="bi bi-calendar-check me-2"></i> Lịch hẹn
                                                </a>
                                            </li>
                                            <li><hr class="dropdown-divider"></li>
                                            <li>
                                                <a class="dropdown-item text-danger" asp-action="Delete" asp-route-id="@item.Id">
                                                    <i class="bi bi-trash me-2"></i> Xóa bệnh nhân
                                                </a>
                                            </li>
                                        </ul>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        
        <!-- Empty State -->
        @if (!Model.Any())
        {
            <div class="text-center py-5">
                <div class="empty-state">
                    <i class="bi bi-people display-1 text-muted mb-3"></i>
                    <h5 class="text-muted">Chưa có bệnh nhân nào</h5>
                    <p class="text-muted mb-4">Bắt đầu bằng cách thêm bệnh nhân đầu tiên vào hệ thống</p>
                    <a asp-action="Create" class="btn btn-primary">
                        <i class="bi bi-plus-circle me-2"></i> Thêm bệnh nhân mới
                    </a>
                </div>
            </div>
        }
    </div>
    
    <!-- Pagination -->
    @if (Model.Any())
    {
        <div class="card-footer bg-white border-top-0">
            <div class="d-flex justify-content-between align-items-center">
                <div class="text-muted">
                    Hiển thị 1-@Model.Count() trong tổng số @Model.Count() bệnh nhân
                </div>
                <nav aria-label="Pagination">
                    <ul class="pagination pagination-sm mb-0">
                        <li class="page-item disabled">
                            <a class="page-link" href="#" tabindex="-1" aria-disabled="true">
                                <i class="bi bi-chevron-left"></i>
                            </a>
                        </li>
                        <li class="page-item active">
                            <a class="page-link" href="#">1</a>
                        </li>
                        <li class="page-item">
                            <a class="page-link" href="#">2</a>
                        </li>
                        <li class="page-item">
                            <a class="page-link" href="#">3</a>
                        </li>
                        <li class="page-item">
                            <a class="page-link" href="#">
                                <i class="bi bi-chevron-right"></i>
                            </a>
                        </li>
                    </ul>
                </nav>
            </div>
        </div>
    }
</div>

<style>
    .avatar-circle {
        width: 40px;
        height: 40px;
        background: linear-gradient(135deg, var(--primary-color), var(--primary-hover));
        color: white;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: 600;
        font-size: 0.875rem;
        flex-shrink: 0;
    }

    .input-group-text {
        background-color: transparent;
    }

    .form-control {
        transition: all 0.2s ease;
    }

    .form-control:focus {
        box-shadow: none;
        border-color: var(--primary-color);
    }

    .dropdown-toggle-split {
        border: none !important;
        background: transparent !important;
    }

    .dropdown-toggle-split:focus {
        box-shadow: none !important;
    }

    .table th {
        font-weight: 600;
        color: var(--gray-600);
        text-transform: uppercase;
        font-size: 0.75rem;
        letter-spacing: 0.05em;
        padding: 1rem 0.75rem;
    }

    .table td {
        padding: 1rem 0.75rem;
        vertical-align: middle;
    }

    .table tbody tr:hover {
        background-color: var(--gray-50);
        transform: none;
    }

    .pagination .page-link {
        border: 1px solid var(--gray-200);
        color: var(--gray-600);
        margin: 0 2px;
        border-radius: var(--border-radius);
    }

    .pagination .page-link:hover {
        background-color: var(--primary-light);
        border-color: var(--primary-color);
        color: var(--primary-color);
    }

    .pagination .page-item.active .page-link {
        background-color: var(--primary-color);
        border-color: var(--primary-color);
        color: white;
    }

    .badge {
        font-size: 0.75rem;
        padding: 0.375rem 0.75rem;
        font-weight: 500;
    }

    .empty-state {
        padding: 3rem 2rem;
    }

    .btn-outline-secondary.active {
        background-color: var(--primary-color);
        border-color: var(--primary-color);
        color: white;
    }

    .form-check-input:checked {
        background-color: var(--primary-color);
        border-color: var(--primary-color);
    }
</style>

@section Scripts {
    <script>
        $(document).ready(function () {
            // Search functionality
            $("#searchInput").on("keyup", function () {
                var value = $(this).val().toLowerCase();
                $("#patientsTable tbody tr").filter(function () {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                });
            });

            // Select all checkbox
            $("#selectAll").change(function() {
                $(".patient-checkbox").prop('checked', $(this).prop('checked'));
                updateBulkActions();
            });

            // Individual checkbox
            $(".patient-checkbox").change(function() {
                updateBulkActions();
                
                // Update select all checkbox
                var total = $(".patient-checkbox").length;
                var checked = $(".patient-checkbox:checked").length;
                
                $("#selectAll").prop('checked', checked === total);
                $("#selectAll").prop('indeterminate', checked > 0 && checked < total);
            });

            function updateBulkActions() {
                var selectedCount = $(".patient-checkbox:checked").length;
                
                if (selectedCount > 0) {
                    // Show bulk actions toolbar
                    if (!$(".bulk-actions").length) {
                        $(".card-header").after(`
                            <div class="bulk-actions bg-primary text-white p-3 d-flex justify-content-between align-items-center">
                                <span><i class="bi bi-check-square me-2"></i>${selectedCount} bệnh nhân được chọn</span>
                                <div class="d-flex gap-2">
                                    <button class="btn btn-light btn-sm">
                                        <i class="bi bi-download me-1"></i> Xuất dữ liệu
                                    </button>
                                    <button class="btn btn-outline-light btn-sm">
                                        <i class="bi bi-envelope me-1"></i> Gửi email
                                    </button>
                                    <button class="btn btn-outline-light btn-sm text-warning">
                                        <i class="bi bi-archive me-1"></i> Lưu trữ
                                    </button>
                                    <button class="btn btn-outline-light btn-sm text-danger">
                                        <i class="bi bi-trash me-1"></i> Xóa
                                    </button>
                                </div>
                            </div>
                        `);
                    } else {
                        $(".bulk-actions span").html(`<i class="bi bi-check-square me-2"></i>${selectedCount} bệnh nhân được chọn`);
                    }
                } else {
                    $(".bulk-actions").remove();
                }
            }

            // Initialize tooltips
            var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'))
            var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
                return new bootstrap.Tooltip(tooltipTriggerEl)
            });

            // Add fade-in animation
            $('.card').addClass('fade-in');
        });
    </script>
} 