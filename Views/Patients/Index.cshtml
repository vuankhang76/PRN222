@model IEnumerable<InfertilityApp.Models.Patient>

@{
    ViewData["Title"] = "Danh sách bệnh nhân";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>Danh sách bệnh nhân</h2>
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> Thêm bệnh nhân mới
    </a>
</div>

<div class="card">
    <div class="card-body">
        <div class="mb-3">
            <div class="input-group">
                <input type="text" id="searchInput" class="form-control" placeholder="Tìm kiếm bệnh nhân...">
                <button class="btn btn-outline-secondary" type="button">
                    <i class="bi bi-search"></i>
                </button>
            </div>
        </div>
        
        <div class="table-responsive">
            <table class="table table-hover" id="patientsTable">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.FullName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.DateOfBirth)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Gender)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.PhoneNumber)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Email)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.RegistrationDate)
                        </th>
                        <th>Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.FullName)
                            </td>
                            <td>
                                @item.DateOfBirth.ToString("dd/MM/yyyy")
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Gender)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.PhoneNumber)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Email)
                            </td>
                            <td>
                                @item.RegistrationDate.ToString("dd/MM/yyyy")
                            </td>
                            <td>
                                <div class="dropdown">
                                    <button class="btn btn-sm btn-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown">
                                        Thao tác
                                    </button>
                                    <ul class="dropdown-menu">
                                        <li><a class="dropdown-item" asp-action="Details" asp-route-id="@item.Id"><i class="bi bi-eye"></i> Chi tiết</a></li>
                                        <li><a class="dropdown-item" asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil"></i> Chỉnh sửa</a></li>
                                        <li><a class="dropdown-item" asp-controller="Partners" asp-action="PatientPartner" asp-route-id="@item.Id"><i class="bi bi-people"></i> Người phối ngẫu</a></li>
                                        <li><a class="dropdown-item" asp-controller="MedicalRecords" asp-action="PatientMedicalRecords" asp-route-id="@item.Id"><i class="bi bi-file-earmark-medical"></i> Hồ sơ y tế</a></li>
                                        <li><a class="dropdown-item" asp-controller="Treatments" asp-action="PatientTreatments" asp-route-id="@item.Id"><i class="bi bi-clipboard2-pulse"></i> Điều trị</a></li>
                                        <li><a class="dropdown-item" asp-controller="Appointments" asp-action="PatientAppointments" asp-route-id="@item.Id"><i class="bi bi-calendar-check"></i> Lịch hẹn</a></li>
                                        <li><hr class="dropdown-divider"></li>
                                        <li><a class="dropdown-item text-danger" asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-trash"></i> Xóa</a></li>
                                    </ul>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $("#searchInput").on("keyup", function () {
                var value = $(this).val().toLowerCase();
                $("#patientsTable tbody tr").filter(function () {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                });
            });
        });
    </script>
} 