@model IEnumerable<InfertilityApp.Models.Patient>

@{
    ViewData["Title"] = "Danh sách bệnh nhân";
}

<div class="flex justify-between items-center mb-6">
    <h2 class="text-3xl font-bold text-gray-900">Danh sách bệnh nhân</h2>
    <a asp-action="Create" class="bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700 transition-colors duration-200 flex items-center">
        <i class="bi bi-plus-circle mr-2"></i> Thêm bệnh nhân mới
    </a>
</div>

<div class="bg-white rounded-lg shadow-lg">
    <div class="p-6">
        <div class="mb-6">
            <div class="relative">
                <input type="text" id="searchInput" class="w-full pl-10 pr-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent" placeholder="Tìm kiếm bệnh nhân...">
                <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                    <i class="bi bi-search text-gray-400"></i>
                </div>
            </div>
        </div>
        
        <div class="overflow-x-auto">
            <table class="w-full" id="patientsTable">
                <thead>
                    <tr class="border-b border-gray-200">
                        <th class="text-left py-3 px-4 font-semibold text-gray-700">
                            @Html.DisplayNameFor(model => model.FullName)
                        </th>
                        <th class="text-left py-3 px-4 font-semibold text-gray-700">
                            @Html.DisplayNameFor(model => model.DateOfBirth)
                        </th>
                        <th class="text-left py-3 px-4 font-semibold text-gray-700">
                            @Html.DisplayNameFor(model => model.Gender)
                        </th>
                        <th class="text-left py-3 px-4 font-semibold text-gray-700">
                            @Html.DisplayNameFor(model => model.PhoneNumber)
                        </th>
                        <th class="text-left py-3 px-4 font-semibold text-gray-700">
                            @Html.DisplayNameFor(model => model.Email)
                        </th>
                        <th class="text-left py-3 px-4 font-semibold text-gray-700">
                            @Html.DisplayNameFor(model => model.RegistrationDate)
                        </th>
                        <th class="text-left py-3 px-4 font-semibold text-gray-700 w-32">Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr class="border-b border-gray-100 hover:bg-gray-50 transition-colors duration-200">
                            <td class="py-3 px-4 text-gray-900">
                                @Html.DisplayFor(modelItem => item.FullName)
                            </td>
                            <td class="py-3 px-4 text-gray-700">
                                @item.DateOfBirth.ToString("dd/MM/yyyy")
                            </td>
                            <td class="py-3 px-4 text-gray-700">
                                @Html.DisplayFor(modelItem => item.Gender)
                            </td>
                            <td class="py-3 px-4 text-gray-700">
                                @Html.DisplayFor(modelItem => item.PhoneNumber)
                            </td>
                            <td class="py-3 px-4 text-gray-700">
                                @Html.DisplayFor(modelItem => item.Email)
                            </td>
                            <td class="py-3 px-4 text-gray-700">
                                @item.RegistrationDate.ToString("dd/MM/yyyy")
                            </td>
                            <td class="py-3 px-4">
                                <div class="flex items-center space-x-1">
                                    <a asp-action="Details" asp-route-id="@item.Id" class="bg-blue-100 text-blue-600 p-2 rounded hover:bg-blue-200 transition-colors duration-200" title="Chi tiết">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="bg-yellow-100 text-yellow-600 p-2 rounded hover:bg-yellow-200 transition-colors duration-200" title="Chỉnh sửa">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <div class="relative">
                                        <button type="button" class="bg-gray-100 text-gray-600 p-2 rounded hover:bg-gray-200 transition-colors duration-200 dropdown-toggle" onclick="togglePatientDropdown('@item.Id')" title="Thêm tùy chọn">
                                            <i class="bi bi-three-dots-vertical"></i>
                                        </button>
                                        <div class="absolute right-0 mt-2 w-56 bg-white rounded-md shadow-lg z-50 hidden" id="dropdown-@item.Id">
                                            <div class="py-1">
                                                <a class="flex items-center px-4 py-2 text-sm text-gray-700 hover:bg-gray-100" asp-controller="Partners" asp-action="ByPatient" asp-route-id="@item.Id">
                                                    <i class="bi bi-people mr-3 w-4"></i> Người phối ngẫu
                                                </a>
                                                <a class="flex items-center px-4 py-2 text-sm text-gray-700 hover:bg-gray-100" asp-controller="MedicalRecords" asp-action="PatientHistory" asp-route-id="@item.Id">
                                                    <i class="bi bi-file-earmark-medical mr-3 w-4"></i> Hồ sơ y tế
                                                </a>
                                                <a class="flex items-center px-4 py-2 text-sm text-gray-700 hover:bg-gray-100" asp-controller="Treatments" asp-action="Index" asp-route-patientId="@item.Id">
                                                    <i class="bi bi-clipboard2-pulse mr-3 w-4"></i> Điều trị
                                                </a>
                                                <a class="flex items-center px-4 py-2 text-sm text-gray-700 hover:bg-gray-100" asp-controller="Appointments" asp-action="Index" asp-route-patientId="@item.Id">
                                                    <i class="bi bi-calendar-check mr-3 w-4"></i> Lịch hẹn
                                                </a>
                                                <hr class="border-gray-200 my-1">
                                                <a class="flex items-center px-4 py-2 text-sm text-red-600 hover:bg-red-50" asp-action="Delete" asp-route-id="@item.Id">
                                                    <i class="bi bi-trash mr-3 w-4"></i> Xóa
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // Search functionality
            $("#searchInput").on("keyup", function () {
                var value = $(this).val().toLowerCase();
                $("#patientsTable tbody tr").filter(function () {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                });
            });
        });

        function togglePatientDropdown(patientId) {
            const dropdown = document.getElementById('dropdown-' + patientId);
            
            // Hide all other dropdowns
            document.querySelectorAll('[id^="dropdown-"]').forEach(function(menu) {
                if (menu.id !== 'dropdown-' + patientId) {
                    menu.classList.add('hidden');
                }
            });
            
            // Toggle current dropdown
            dropdown.classList.toggle('hidden');
        }

        // Close dropdown when clicking outside
        document.addEventListener('click', function(event) {
            if (!event.target.closest('.dropdown-toggle') && !event.target.closest('[id^="dropdown-"]')) {
                document.querySelectorAll('[id^="dropdown-"]').forEach(function(menu) {
                    menu.classList.add('hidden');
                });
            }
        });
    </script>
} 