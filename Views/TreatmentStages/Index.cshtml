@model IEnumerable<InfertilityApp.Models.TreatmentStage>

@{
    ViewData["Title"] = "Danh sách giai đoạn điều trị";
    string? treatmentName = ViewData["TreatmentName"] as string ?? "Không xác định";
    int treatmentId = ViewData["TreatmentId"] as int? ?? 0;
}

<div class="container mx-auto px-4 py-8">
    <div class="flex justify-between items-center mb-6">
        <div>
            <h2 class="text-3xl font-bold text-gray-900">Danh sách giai đoạn điều trị</h2>
            <p class="text-gray-600 mt-1">Điều trị: <span class="font-semibold">@treatmentName</span></p>
        </div>
        <div class="flex space-x-3">
            <a asp-controller="Treatments" asp-action="Details" asp-route-id="@treatmentId" class="bg-gray-600 text-white px-4 py-2 rounded-lg hover:bg-gray-700 transition-colors duration-200 flex items-center">
                <i class="bi bi-clipboard2-pulse mr-2"></i> Xem chi tiết điều trị
            </a>
            <a asp-action="Create" asp-route-treatmentId="@treatmentId" class="bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700 transition-colors duration-200 flex items-center">
                <i class="bi bi-plus-circle mr-2"></i> Thêm giai đoạn mới
            </a>
        </div>
    </div>

    <div class="bg-white rounded-lg shadow-lg">
        <div class="p-6">
            <div class="mb-6">
                <div class="relative">
                    <input type="text" id="searchInput" class="w-full pl-10 pr-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent" placeholder="Tìm kiếm giai đoạn điều trị...">
                    <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                        <i class="bi bi-search text-gray-400"></i>
                    </div>
                </div>
            </div>
            
            <div class="overflow-x-auto">
                <table class="w-full" id="treatmentStagesTable">
                    <thead>
                        <tr class="border-b border-gray-200">
                            <th class="text-left py-3 px-4 font-semibold text-gray-700">STT</th>
                            <th class="text-left py-3 px-4 font-semibold text-gray-700">Tên giai đoạn</th>
                            <th class="text-left py-3 px-4 font-semibold text-gray-700">Ngày bắt đầu</th>
                            <th class="text-left py-3 px-4 font-semibold text-gray-700">Ngày kết thúc</th>
                            <th class="text-left py-3 px-4 font-semibold text-gray-700">Trạng thái</th>
                            <th class="text-left py-3 px-4 font-semibold text-gray-700">Mô tả</th>
                            <th class="text-left py-3 px-4 font-semibold text-gray-700 w-32">Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            @foreach (var item in Model.OrderBy(s => s.StageOrder))
                            {
                                <tr class="border-b border-gray-100 hover:bg-gray-50 transition-colors duration-150">
                                    <td class="py-4 px-4 text-sm text-gray-900 font-medium">
                                        @item.StageOrder
                                    </td>
                                    <td class="py-4 px-4 text-sm text-gray-900 font-medium">
                                        @item.StageName
                                    </td>
                                    <td class="py-4 px-4 text-sm text-gray-900">
                                        @item.StartDate.ToString("dd/MM/yyyy")
                                    </td>
                                    <td class="py-4 px-4 text-sm text-gray-900">
                                        @(item.EndDate?.ToString("dd/MM/yyyy") ?? "-")
                                    </td>
                                    <td class="py-4 px-4 text-sm">
                                        @switch (item.Status)
                                        {
                                            case "Planned":
                                                <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-gray-100 text-gray-800">Đã lên kế hoạch</span>
                                                break;
                                            case "In Progress":
                                                <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-blue-100 text-blue-800">Đang thực hiện</span>
                                                break;
                                            case "Completed":
                                                <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-green-100 text-green-800">Hoàn thành</span>
                                                break;
                                            case "Cancelled":
                                                <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-red-100 text-red-800">Đã hủy</span>
                                                break;
                                            default:
                                                <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-gray-100 text-gray-800">@item.Status</span>
                                                break;
                                        }
                                    </td>
                                    <td class="py-4 px-4 text-sm text-gray-600">
                                        @(string.IsNullOrEmpty(item.Description) ? "-" : 
                                          (item.Description.Length > 50 ? item.Description.Substring(0, 50) + "..." : item.Description))
                                    </td>
                                    <td class="py-4 px-4 text-sm">
                                        <div class="flex space-x-2">
                                            <a asp-action="Details" asp-route-id="@item.Id" class="text-blue-600 hover:text-blue-900 text-xs font-medium" title="Chi tiết">
                                                Chi tiết
                                            </a>
                                            <a asp-action="Edit" asp-route-id="@item.Id" class="text-yellow-600 hover:text-yellow-900 text-xs font-medium" title="Sửa">
                                                Sửa
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@item.Id" class="text-red-600 hover:text-red-900 text-xs font-medium" title="Xóa" onclick="return confirm('Bạn có chắc chắn muốn xóa giai đoạn này?')">
                                                Xóa
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="7" class="py-12 text-center">
                                    <div class="flex flex-col items-center">
                                        <i class="bi bi-list-check text-4xl text-gray-400 mb-4"></i>
                                        <p class="text-gray-600 text-lg">Chưa có giai đoạn điều trị nào</p>
                                        <p class="text-gray-400 text-sm mt-1">Hãy thêm giai đoạn điều trị đầu tiên</p>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Initialize search functionality
            $('#searchInput').on('keyup', function() {
                var value = $(this).val().toLowerCase();
                $('#treatmentStagesTable tbody tr').filter(function() {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                });
            });
        });
    </script>
}
