@model InfertilityApp.Models.Medication

@{
    ViewData["Title"] = "Kê đơn thuốc";
}

<div class="container mx-auto px-4 py-8">
    <div class="flex justify-between items-center mb-6">
        <h2 class="text-3xl font-bold text-gray-900">Kê đơn thuốc mới</h2>
        <a asp-action="Index" class="bg-gray-600 text-white px-4 py-2 rounded-lg hover:bg-gray-700 transition-colors duration-200 flex items-center">
            <i class="bi bi-arrow-left mr-2"></i> Quay lại
        </a>
    </div>

    <div class="bg-white rounded-lg shadow-lg">
        <div class="p-6">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-6"></div>
                <input type="hidden" asp-for="TreatmentId" value="@ViewBag.TreatmentId" />
                
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div>
                        <label asp-for="MedicationName" class="block text-sm font-medium text-gray-700 mb-2">Tên thuốc <span class="text-red-500">*</span></label>
                        <input asp-for="MedicationName" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent" />
                        <span asp-validation-for="MedicationName" class="text-red-500 text-sm"></span>
                    </div>

                    <div>
                        <label asp-for="Dosage" class="block text-sm font-medium text-gray-700 mb-2">Liều lượng</label>
                        <input asp-for="Dosage" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent" placeholder="VD: 1 viên/lần" />
                        <span asp-validation-for="Dosage" class="text-red-500 text-sm"></span>
                    </div>

                    <div>
                        <label asp-for="Frequency" class="block text-sm font-medium text-gray-700 mb-2">Tần suất sử dụng</label>
                        <input asp-for="Frequency" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent" placeholder="VD: 3 lần/ngày" />
                        <span asp-validation-for="Frequency" class="text-red-500 text-sm"></span>
                    </div>

                    <div>
                        <label asp-for="Status" class="block text-sm font-medium text-gray-700 mb-2">Trạng thái <span class="text-red-500">*</span></label>
                        <select asp-for="Status" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent">
                            <option value="Active">Đang sử dụng</option>
                            <option value="Completed">Đã hoàn thành</option>
                            <option value="Discontinued">Đã ngưng</option>
                        </select>
                        <span asp-validation-for="Status" class="text-red-500 text-sm"></span>
                    </div>

                    <div>
                        <label asp-for="StartDate" class="block text-sm font-medium text-gray-700 mb-2">Ngày bắt đầu <span class="text-red-500">*</span></label>
                        <input asp-for="StartDate" type="date" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent" value="@DateTime.Today.ToString("yyyy-MM-dd")" />
                        <span asp-validation-for="StartDate" class="text-red-500 text-sm"></span>
                    </div>

                    <div>
                        <label asp-for="EndDate" class="block text-sm font-medium text-gray-700 mb-2">Ngày kết thúc</label>
                        <input asp-for="EndDate" type="date" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent" />
                        <span asp-validation-for="EndDate" class="text-red-500 text-sm"></span>
                    </div>
                </div>

                <div class="mt-6">
                    <label asp-for="Instructions" class="block text-sm font-medium text-gray-700 mb-2">Hướng dẫn sử dụng</label>
                    <textarea asp-for="Instructions" rows="3" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent" placeholder="Hướng dẫn chi tiết cách sử dụng thuốc..."></textarea>
                    <span asp-validation-for="Instructions" class="text-red-500 text-sm"></span>
                </div>

                <div class="mt-6">
                    <label asp-for="Notes" class="block text-sm font-medium text-gray-700 mb-2">Ghi chú</label>
                    <textarea asp-for="Notes" rows="3" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent" placeholder="Ghi chú bổ sung về thuốc..."></textarea>
                    <span asp-validation-for="Notes" class="text-red-500 text-sm"></span>
                </div>

                <div class="flex justify-end space-x-4 mt-8">
                    <a asp-action="Index" class="bg-gray-500 text-white px-6 py-2 rounded-lg hover:bg-gray-600 transition-colors duration-200">
                        Quay lại danh sách
                    </a>
                    <button type="submit" class="bg-blue-600 text-white px-6 py-2 rounded-lg hover:bg-blue-700 transition-colors duration-200">
                        Tạo đơn thuốc
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
