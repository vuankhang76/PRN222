@model InfertilityApp.Models.Medication

@{
    ViewData["Title"] = "Chi tiết đơn thuốc";
}

<div class="container mx-auto px-4 py-8">
    <div class="flex justify-between items-center mb-6">
        <h2 class="text-3xl font-bold text-gray-900">Chi tiết đơn thuốc</h2>
        <div class="flex items-center space-x-4">
            <a asp-action="Index" class="bg-gray-600 text-white px-4 py-2 rounded-lg hover:bg-gray-700 transition-colors duration-200 flex items-center">
                <i class="bi bi-arrow-left mr-2"></i> Quay lại danh sách
            </a>
            <a asp-action="Edit" asp-route-id="@Model.Id" class="bg-yellow-600 text-white px-4 py-2 rounded-lg hover:bg-yellow-700 transition-colors duration-200 flex items-center">
                <i class="bi bi-pencil mr-2"></i> Chỉnh sửa
            </a>
        </div>
    </div>

    <div class="bg-white rounded-lg shadow-lg p-6">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
                <h3 class="text-lg font-semibold mb-4">Thông tin cơ bản</h3>
                <dl class="grid grid-cols-1 gap-4">
                    <div>
                        <dt class="text-sm font-medium text-gray-500">Tên thuốc</dt>
                        <dd class="mt-1 text-lg text-gray-900">@Model.MedicationName</dd>
                    </div>
                    <div>
                        <dt class="text-sm font-medium text-gray-500">Liều lượng</dt>
                        <dd class="mt-1 text-lg text-gray-900">@Model.Dosage</dd>
                    </div>
                    <div>
                        <dt class="text-sm font-medium text-gray-500">Tần suất sử dụng</dt>
                        <dd class="mt-1 text-lg text-gray-900">@Model.Frequency</dd>
                    </div>
                    <div>
                        <dt class="text-sm font-medium text-gray-500">Trạng thái</dt>
                        <dd class="mt-1">
                            @switch (Model.Status)
                            {
                                case "Active":
                                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-sm font-medium bg-green-100 text-green-800">
                                        Đang sử dụng
                                    </span>
                                    break;
                                case "Completed":
                                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-sm font-medium bg-blue-100 text-blue-800">
                                        Đã hoàn thành
                                    </span>
                                    break;
                                case "Discontinued":
                                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-sm font-medium bg-red-100 text-red-800">
                                        Đã ngưng
                                    </span>
                                    break;
                                default:
                                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-sm font-medium bg-gray-100 text-gray-800">
                                        @Model.Status
                                    </span>
                                    break;
                            }
                        </dd>
                    </div>
                </dl>
            </div>

            <div>
                <h3 class="text-lg font-semibold mb-4">Thời gian sử dụng</h3>
                <dl class="grid grid-cols-1 gap-4">
                    <div>
                        <dt class="text-sm font-medium text-gray-500">Ngày bắt đầu</dt>
                        <dd class="mt-1 text-lg text-gray-900">@Model.StartDate.ToString("dd/MM/yyyy")</dd>
                    </div>
                    <div>
                        <dt class="text-sm font-medium text-gray-500">Ngày kết thúc</dt>
                        <dd class="mt-1 text-lg text-gray-900">
                            @(Model.EndDate.HasValue ? Model.EndDate.Value.ToString("dd/MM/yyyy") : "Chưa xác định")
                        </dd>
                    </div>
                </dl>
            </div>
        </div>

        <div class="mt-8">
            <h3 class="text-lg font-semibold mb-4">Hướng dẫn sử dụng</h3>
            <div class="bg-gray-50 rounded-lg p-4">
                <p class="text-gray-900 whitespace-pre-line">@(Model.Instructions ?? "Không có hướng dẫn cụ thể")</p>
            </div>
        </div>

        @if (!string.IsNullOrEmpty(Model.Notes))
        {
            <div class="mt-8">
                <h3 class="text-lg font-semibold mb-4">Ghi chú</h3>
                <div class="bg-gray-50 rounded-lg p-4">
                    <p class="text-gray-900 whitespace-pre-line">@Model.Notes</p>
                </div>
            </div>
        }
    </div>
</div>
