@model IEnumerable<InfertilityApp.Models.User>

@{
    ViewData["Title"] = "Quản lý người dùng";
}

<div class="p-6 space-y-6 bg-gray-50 min-h-screen">
    <div class="bg-white rounded-lg shadow-sm border border-gray-200 overflow-hidden">
        <div class="bg-white border-b border-gray-200 p-6">
            <div class="flex items-center justify-between">
                <div class="flex items-center space-x-4">
                    <div class="w-12 h-12 bg-purple-50 rounded-lg flex items-center justify-center">
                        <i class="bi bi-people text-2xl text-purple-600"></i>
                    </div>
                    <div>
                        <h1 class="text-2xl font-semibold text-gray-900">Quản lý người dùng</h1>
                        <p class="text-gray-600">Quản lý tài khoản hệ thống</p>
                    </div>
                </div>
                <div class="hidden md:flex items-center space-x-3">
                    <div class="bg-gray-50 rounded-lg px-4 py-2 border border-gray-200">
                        <span class="text-sm font-medium text-gray-700">Tổng số: @Model.Count() người dùng</span>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="p-6 bg-white">
            <div class="flex flex-col md:flex-row justify-between items-start md:items-center space-y-4 md:space-y-0">
                <div class="flex flex-wrap gap-3">
                    <a asp-action="Create" class="bg-purple-600 text-white px-4 py-2 rounded-md font-medium hover:bg-purple-700 transition-colors duration-200 flex items-center space-x-2">
                        <i class="bi bi-plus-circle"></i>
                        <span>Thêm người dùng mới</span>
                    </a>
                    <button class="bg-gray-100 text-gray-700 px-4 py-2 rounded-md font-medium hover:bg-gray-200 transition-colors duration-200 flex items-center space-x-2 border border-gray-300">
                        <i class="bi bi-funnel"></i>
                        <span>Bộ lọc</span>
                    </button>
                </div>
                
                <div class="relative">
                    <input type="text" id="searchInput" placeholder="Tìm kiếm người dùng..." 
                           class="pl-10 pr-4 py-2 border border-gray-300 rounded-md focus:border-purple-500 focus:outline-none focus:ring-1 focus:ring-purple-500 transition-colors duration-200 bg-white w-full md:w-80">
                    <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                        <i class="bi bi-search text-gray-400"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="bg-green-50 border border-green-200 text-green-800 px-4 py-3 rounded-md" role="alert">
            <div class="flex">
                <div class="flex-shrink-0">
                    <i class="bi bi-check-circle text-green-400"></i>
                </div>
                <div class="ml-3">
                    <p class="text-sm font-medium">@TempData["Success"]</p>
                </div>
            </div>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="bg-red-50 border border-red-200 text-red-800 px-4 py-3 rounded-md" role="alert">
            <div class="flex">
                <div class="flex-shrink-0">
                    <i class="bi bi-exclamation-triangle text-red-400"></i>
                </div>
                <div class="ml-3">
                    <p class="text-sm font-medium">@TempData["Error"]</p>
                </div>
            </div>
        </div>
    }

    <div class="bg-white rounded-lg shadow-sm border border-gray-200 overflow-hidden">
        <div class="overflow-x-auto">
            <table class="w-full" id="usersTable">
                <thead class="bg-gray-50">
                    <tr class="border-b border-gray-200">
                        <th class="text-left py-3 px-6 font-medium text-gray-700 text-sm">
                            @Html.DisplayNameFor(model => model.Username)
                        </th>
                        <th class="text-left py-3 px-6 font-medium text-gray-700 text-sm">
                            @Html.DisplayNameFor(model => model.FullName)
                        </th>
                        <th class="text-left py-3 px-6 font-medium text-gray-700 text-sm">
                            @Html.DisplayNameFor(model => model.Email)
                        </th>
                        <th class="text-left py-3 px-6 font-medium text-gray-700 text-sm">
                            @Html.DisplayNameFor(model => model.Role)
                        </th>
                        <th class="text-left py-3 px-6 font-medium text-gray-700 text-sm">
                            @Html.DisplayNameFor(model => model.IsActive)
                        </th>
                        <th class="text-left py-3 px-6 font-medium text-gray-700 text-sm">
                            @Html.DisplayNameFor(model => model.LastLogin)
                        </th>
                        <th class="text-left py-3 px-6 font-medium text-gray-700 text-sm w-32">Thao tác</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-gray-100">
                    @foreach (var item in Model)
                    {
                        <tr class="hover:bg-gray-50 transition-colors duration-200">
                            <td class="py-4 px-6 text-gray-900 font-medium">
                                @Html.DisplayFor(modelItem => item.Username)
                            </td>
                            <td class="py-4 px-6 text-gray-700">
                                @Html.DisplayFor(modelItem => item.FullName)
                            </td>
                            <td class="py-4 px-6 text-gray-700">
                                @Html.DisplayFor(modelItem => item.Email)
                            </td>
                            <td class="py-4 px-6">
                                @switch (item.Role)
                                {
                                    case "Admin":
                                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800">Quản trị viên</span>
                                        break;
                                    case "Doctor":
                                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">Bác sĩ</span>
                                        break;
                                    case "Staff":
                                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">Nhân viên</span>
                                        break;
                                    default:
                                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800">@item.Role</span>
                                        break;
                                }
                            </td>
                            <td class="py-4 px-6">
                                @if (item.IsActive)
                                {
                                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">Hoạt động</span>
                                }
                                else
                                {
                                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800">Vô hiệu</span>
                                }
                            </td>
                            <td class="py-4 px-6 text-gray-700">
                                @(item.LastLogin.HasValue ? item.LastLogin.Value.ToString("dd/MM/yyyy HH:mm") : "Chưa đăng nhập")
                            </td>
                            <td class="py-4 px-6">
                                <div class="flex items-center space-x-2">
                                    <a asp-action="Details" asp-route-id="@item.Id" class="text-blue-600 hover:text-blue-800 text-sm font-medium" title="Chi tiết">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="text-green-600 hover:text-green-800 text-sm font-medium" title="Chỉnh sửa">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    @if (item.IsActive)
                                    {
                                        <button class="text-yellow-600 hover:text-yellow-800 text-sm font-medium" onclick="confirmDeactivate(@item.Id)" title="Vô hiệu hóa">
                                            <i class="bi bi-slash-circle"></i>
                                        </button>
                                    }
                                    else
                                    {
                                        <button class="text-green-600 hover:text-green-800 text-sm font-medium" onclick="confirmActivate(@item.Id)" title="Kích hoạt">
                                            <i class="bi bi-check-circle"></i>
                                        </button>
                                    }
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="text-red-600 hover:text-red-800 text-sm font-medium" title="Xóa">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    @if (!Model.Any())
    {
        <!-- Empty State -->
        <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-12 text-center">
            <div class="w-16 h-16 bg-gray-100 rounded-lg flex items-center justify-center mx-auto mb-4">
                <i class="bi bi-person-plus text-2xl text-gray-400"></i>
            </div>
            <h3 class="text-lg font-medium text-gray-900 mb-2">Chưa có người dùng nào</h3>
            <p class="text-gray-500 mb-6">Bắt đầu bằng cách thêm người dùng đầu tiên vào hệ thống</p>
            <a asp-action="Create" class="bg-purple-600 text-white px-6 py-2 rounded-md font-medium hover:bg-purple-700 transition-colors duration-200 inline-flex items-center space-x-2">
                <i class="bi bi-plus-circle"></i>
                <span>Thêm người dùng đầu tiên</span>
            </a>
        </div>
    }
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $("#searchInput").on("keyup", function () {
                var value = $(this).val().toLowerCase();
                $("#usersTable tbody tr").filter(function () {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                });
            });
        });
        
        function confirmDeactivate(id) {
            if (confirm("Bạn có chắc chắn muốn vô hiệu hóa người dùng này?")) {
                window.location.href = "/Users/ToggleActive/" + id;
            }
        }
        
        function confirmActivate(id) {
            if (confirm("Bạn có chắc chắn muốn kích hoạt người dùng này?")) {
                window.location.href = "/Users/ToggleActive/" + id;
            }
        }
    </script>
} 