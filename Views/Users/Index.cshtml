@model IEnumerable<InfertilityApp.Models.User>

@{
    ViewData["Title"] = "Quản lý người dùng";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>Quản lý người dùng</h2>
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> Thêm người dùng mới
    </a>
</div>

<div class="card">
    <div class="card-body">
        <div class="mb-3">
            <div class="input-group">
                <input type="text" id="searchInput" class="form-control" placeholder="Tìm kiếm người dùng...">
                <button class="btn btn-outline-secondary" type="button">
                    <i class="bi bi-search"></i>
                </button>
            </div>
        </div>
        
        <div class="table-responsive">
            <table class="table table-hover" id="usersTable">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Username)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.FullName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Email)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Role)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.IsActive)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.LastLogin)
                        </th>
                        <th>Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Username)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.FullName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Email)
                            </td>
                            <td>
                                @switch (item.Role)
                                {
                                    case "Admin":
                                        <span class="badge bg-danger">Quản trị viên</span>
                                        break;
                                    case "Doctor":
                                        <span class="badge bg-primary">Bác sĩ</span>
                                        break;
                                    case "Staff":
                                        <span class="badge bg-success">Nhân viên</span>
                                        break;
                                    default:
                                        <span class="badge bg-secondary">@item.Role</span>
                                        break;
                                }
                            </td>
                            <td>
                                @if (item.IsActive)
                                {
                                    <span class="badge bg-success">Hoạt động</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">Vô hiệu</span>
                                }
                            </td>
                            <td>
                                @(item.LastLogin.HasValue ? item.LastLogin.Value.ToString("dd/MM/yyyy HH:mm") : "Chưa đăng nhập")
                            </td>
                            <td>
                                <div class="dropdown">
                                    <button class="btn btn-sm btn-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown">
                                        Thao tác
                                    </button>
                                    <ul class="dropdown-menu">
                                        <li><a class="dropdown-item" asp-action="Details" asp-route-id="@item.Id"><i class="bi bi-eye"></i> Chi tiết</a></li>
                                        <li><a class="dropdown-item" asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil"></i> Chỉnh sửa</a></li>
                                        <li>
                                            @if (item.IsActive)
                                            {
                                                <a class="dropdown-item text-danger" href="#" onclick="confirmDeactivate(@item.Id)">
                                                    <i class="bi bi-slash-circle"></i> Vô hiệu hóa
                                                </a>
                                            }
                                            else
                                            {
                                                <a class="dropdown-item text-success" href="#" onclick="confirmActivate(@item.Id)">
                                                    <i class="bi bi-check-circle"></i> Kích hoạt
                                                </a>
                                            }
                                        </li>
                                        <li><hr class="dropdown-divider"></li>
                                        <li><a class="dropdown-item text-danger" asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-trash"></i> Xóa</a></li>
                                    </ul>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $("#searchInput").on("keyup", function () {
                var value = $(this).val().toLowerCase();
                $("#usersTable tbody tr").filter(function () {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                });
            });
        });
        
        function confirmDeactivate(id) {
            if (confirm("Bạn có chắc chắn muốn vô hiệu hóa người dùng này?")) {
                window.location.href = "/Users/ToggleActive/" + id;
            }
        }
        
        function confirmActivate(id) {
            if (confirm("Bạn có chắc chắn muốn kích hoạt người dùng này?")) {
                window.location.href = "/Users/ToggleActive/" + id;
            }
        }
    </script>
} 