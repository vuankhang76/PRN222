@model IEnumerable<InfertilityApp.Models.User>

@{
    ViewData["Title"] = "Quản lý người dùng";
}

<div class="flex justify-between items-center mb-6">
    <h2 class="text-3xl font-bold text-gray-900"><i class="bi bi-people-fill mr-2"></i> Quản lý người dùng</h2>
    <a asp-action="Create" class="bg-green-600 text-white px-4 py-2 rounded-lg hover:bg-green-700 transition-colors duration-200 flex items-center">
        <i class="bi bi-plus-circle mr-2"></i> Thêm người dùng mới
    </a>
</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="bg-white rounded-lg shadow-lg">
    <div class="p-6">
        <div class="mb-6">
            <div class="relative">
                <input type="text" id="searchUser" class="w-full pl-10 pr-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-transparent" placeholder="Tìm kiếm người dùng...">
                <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                    <i class="bi bi-search text-gray-400"></i>
                </div>
            </div>
        </div>

        <div class="overflow-x-auto">
            <table class="w-full" id="usersTable">
                <thead>
                    <tr class="border-b border-gray-200">
                        <th class="text-left py-3 px-4 font-semibold text-gray-700">Tài khoản</th>
                        <th class="text-left py-3 px-4 font-semibold text-gray-700">Họ tên</th>
                        <th class="text-left py-3 px-4 font-semibold text-gray-700">Email</th>
                        <th class="text-left py-3 px-4 font-semibold text-gray-700">Vai trò</th>
                        <th class="text-left py-3 px-4 font-semibold text-gray-700">Trạng thái</th>
                        <th class="text-left py-3 px-4 font-semibold text-gray-700">Lần đăng nhập gần nhất</th>
                        <th class="text-left py-3 px-4 font-semibold text-gray-700 w-40">Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model)
                    {
                        <tr class="border-b border-gray-100 hover:bg-gray-50 transition-colors duration-200">
                            <td class="py-3 px-4 text-gray-900">@user.Username</td>
                            <td class="py-3 px-4 text-gray-700">@user.FullName</td>
                            <td class="py-3 px-4 text-gray-700">@user.Email</td>
                            <td class="py-3 px-4">
                                @switch (user.Role)
                                {
                                    case "Admin":
                                        <span class="bg-red-100 text-red-600 text-sm font-medium px-2 py-1 rounded">Quản trị viên</span>
                                        break;
                                    case "Doctor":
                                        <span class="bg-blue-100 text-blue-600 text-sm font-medium px-2 py-1 rounded">Bác sĩ</span>
                                        break;
                                    case "Staff":
                                        <span class="bg-green-100 text-green-600 text-sm font-medium px-2 py-1 rounded">Nhân viên</span>
                                        break;
                                    default:
                                        <span class="bg-gray-100 text-gray-600 text-sm font-medium px-2 py-1 rounded">@user.Role</span>
                                        break;
                                }
                            </td>
                            <td class="py-3 px-4">
                                @if (user.IsActive)
                                {
                                    <span class="bg-green-100 text-green-600 text-sm font-medium px-2 py-1 rounded">Hoạt động</span>
                                }
                                else
                                {
                                    <span class="bg-red-100 text-red-600 text-sm font-medium px-2 py-1 rounded">Vô hiệu</span>
                                }
                            </td>
                            <td class="py-3 px-4">@((user.LastLogin.HasValue) ? user.LastLogin.Value.ToString("dd/MM/yyyy HH:mm") : "Chưa đăng nhập")</td>
                            <td class="py-3 px-4">
                                <div class="flex items-center space-x-1">
                                    <a asp-action="Details" asp-route-id="@user.Id" class="bg-blue-100 text-blue-600 p-2 rounded hover:bg-blue-200" title="Chi tiết">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@user.Id" class="bg-yellow-100 text-yellow-600 p-2 rounded hover:bg-yellow-200" title="Chỉnh sửa">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <div class="relative">
                                        <button type="button" class="bg-gray-100 text-gray-600 p-2 rounded hover:bg-gray-200 dropdown-toggle" onclick="toggleUserDropdown('@user.Id')" title="Thêm tùy chọn">
                                            <i class="bi bi-three-dots-vertical"></i>
                                        </button>
                                        <div class="absolute right-0 mt-2 w-56 bg-white rounded-md shadow-lg z-50 hidden" id="dropdown-user-@user.Id">
                                            <div class="py-1">
                                                @if (user.IsActive)
                                                {
                                                    <a class="flex items-center px-4 py-2 text-sm text-yellow-700 hover:bg-yellow-100" href="javascript:void(0);" onclick="confirmDeactivate(@user.Id)">
                                                        <i class="bi bi-slash-circle mr-3 w-4"></i> Vô hiệu hóa
                                                    </a>
                                                }
                                                else
                                                {
                                                    <a class="flex items-center px-4 py-2 text-sm text-green-700 hover:bg-green-100" href="javascript:void(0);" onclick="confirmActivate(@user.Id)">
                                                        <i class="bi bi-check-circle mr-3 w-4"></i> Kích hoạt
                                                    </a>
                                                }
                                                <hr class="border-gray-200 my-1" />
                                                <a class="flex items-center px-4 py-2 text-sm text-red-600 hover:bg-red-50" asp-action="Delete" asp-route-id="@user.Id">
                                                    <i class="bi bi-trash mr-3 w-4"></i> Xóa
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $("#searchUser").on("keyup", function () {
                var value = $(this).val().toLowerCase();
                $("#usersTable tbody tr").filter(function () {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1);
                });
            });
        });

        function toggleUserDropdown(id) {
            const dropdown = document.getElementById('dropdown-user-' + id);
            document.querySelectorAll('[id^="dropdown-user-"]').forEach(function (menu) {
                if (menu.id !== 'dropdown-user-' + id) {
                    menu.classList.add('hidden');
                }
            });
            dropdown.classList.toggle('hidden');
        }

        document.addEventListener('click', function (event) {
            if (!event.target.closest('.dropdown-toggle') && !event.target.closest('[id^="dropdown-user-"]')) {
                document.querySelectorAll('[id^="dropdown-user-"]').forEach(function (menu) {
                    menu.classList.add('hidden');
                });
            }
        });

        function confirmDeactivate(id) {
            if (confirm("Bạn có chắc chắn muốn vô hiệu hóa người dùng này?")) {
                window.location.href = "/Users/ToggleActive/" + id;
            }
        }

        function confirmActivate(id) {
            if (confirm("Bạn có chắc chắn muốn kích hoạt người dùng này?")) {
                window.location.href = "/Users/ToggleActive/" + id;
            }
        }
    </script>
}
