@model IEnumerable<InfertilityApp.Models.User>

@{
    ViewData["Title"] = "Quản lý người dùng";
}

<div class="flex justify-between items-center mb-6">
    <h2 class="text-3xl font-bold text-gray-900">Quản lý người dùng</h2>
    <a asp-action="Create" class="bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700 transition-colors duration-200 flex items-center">
        <i class="bi bi-plus-circle mr-2"></i> Thêm người dùng mới
    </a>
</div>

@if (TempData["Success"] != null)
{
    <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded mb-4 flex items-center justify-between" role="alert">
        <span>@TempData["Success"]</span>
        <button type="button" class="text-green-700 hover:text-green-900" onclick="this.parentElement.remove()">
            <i class="bi bi-x-lg"></i>
        </button>
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4 flex items-center justify-between" role="alert">
        <span>@TempData["Error"]</span>
        <button type="button" class="text-red-700 hover:text-red-900" onclick="this.parentElement.remove()">
            <i class="bi bi-x-lg"></i>
        </button>
    </div>
}

<div class="bg-white rounded-lg shadow-lg">
    <div class="p-6">
        <div class="mb-6">
            <div class="relative">
                <input type="text" id="searchInput" class="w-full pl-10 pr-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent" placeholder="Tìm kiếm người dùng...">
                <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                    <i class="bi bi-search text-gray-400"></i>
                </div>
            </div>
        </div>
        
        <div class="overflow-x-auto">
            <table class="w-full" id="usersTable">
                <thead>
                    <tr class="border-b border-gray-200">
                        <th class="text-left py-3 px-4 font-semibold text-gray-700">
                            Tên đăng nhập
                        </th>
                        <th class="text-left py-3 px-4 font-semibold text-gray-700">
                            Họ và tên
                        </th>
                        <th class="text-left py-3 px-4 font-semibold text-gray-700">
                            Email
                        </th>
                        <th class="text-left py-3 px-4 font-semibold text-gray-700">
                            Vai trò
                        </th>
                        <th class="text-left py-3 px-4 font-semibold text-gray-700">
                            Trạng thái
                        </th>
                        <th class="text-left py-3 px-4 font-semibold text-gray-700">
                            Lần đăng nhập cuối
                        </th>
                        <th class="text-left py-3 px-4 font-semibold text-gray-700 w-32">Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr class="border-b border-gray-100 hover:bg-gray-50 transition-colors duration-200">
                            <td class="py-3 px-4 text-gray-900 font-medium">
                                @Html.DisplayFor(modelItem => item.Username)
                            </td>
                            <td class="py-3 px-4 text-gray-900">
                                @Html.DisplayFor(modelItem => item.FullName)
                            </td>
                            <td class="py-3 px-4 text-gray-700">
                                @Html.DisplayFor(modelItem => item.Email)
                            </td>
                            <td class="py-3 px-4">
                                @switch (item.Role)
                                {
                                    case "Admin":
                                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800">Quản trị viên</span>
                                        break;
                                    case "Doctor":
                                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">Bác sĩ</span>
                                        break;
                                    case "Staff":
                                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">Nhân viên</span>
                                        break;
                                    default:
                                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800">@item.Role</span>
                                        break;
                                }
                            </td>
                            <td class="py-3 px-4">
                                @if (item.IsActive)
                                {
                                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">Hoạt động</span>
                                }
                                else
                                {
                                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800">Vô hiệu</span>
                                }
                            </td>
                            <td class="py-3 px-4 text-gray-700">
                                @(item.LastLogin.HasValue ? item.LastLogin.Value.ToString("dd/MM/yyyy HH:mm") : "Chưa đăng nhập")
                            </td>
                            <td class="py-3 px-4">
                                <div class="flex items-center space-x-1">
                                    <a asp-action="Details" asp-route-id="@item.Id" class="bg-blue-100 text-blue-600 p-2 rounded hover:bg-blue-200 transition-colors duration-200" title="Chi tiết">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="bg-yellow-100 text-yellow-600 p-2 rounded hover:bg-yellow-200 transition-colors duration-200" title="Chỉnh sửa">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <div class="relative">
                                        <button type="button" class="bg-gray-100 text-gray-600 p-2 rounded hover:bg-gray-200 transition-colors duration-200 dropdown-toggle" onclick="toggleUserDropdown('@item.Id')" title="Thêm tùy chọn">
                                            <i class="bi bi-three-dots-vertical"></i>
                                        </button>
                                        <div class="absolute right-0 mt-2 w-56 bg-white rounded-md shadow-lg z-50 hidden" id="dropdown-@item.Id">
                                            <div class="py-1">
                                                @if (item.IsActive)
                                                {
                                                    <button class="flex items-center px-4 py-2 text-sm text-yellow-600 hover:bg-yellow-50 w-full text-left" onclick="confirmDeactivate(@item.Id)">
                                                        <i class="bi bi-slash-circle mr-3 w-4"></i> Vô hiệu hóa
                                                    </button>
                                                }
                                                else
                                                {
                                                    <button class="flex items-center px-4 py-2 text-sm text-green-600 hover:bg-green-50 w-full text-left" onclick="confirmActivate(@item.Id)">
                                                        <i class="bi bi-check-circle mr-3 w-4"></i> Kích hoạt
                                                    </button>
                                                }
                                                <a class="flex items-center px-4 py-2 text-sm text-gray-700 hover:bg-gray-100" asp-action="ResetPassword" asp-route-id="@item.Id">
                                                    <i class="bi bi-key mr-3 w-4"></i> Đặt lại mật khẩu
                                                </a>
                                                <hr class="border-gray-200 my-1">
                                                <a class="flex items-center px-4 py-2 text-sm text-red-600 hover:bg-red-50" asp-action="Delete" asp-route-id="@item.Id">
                                                    <i class="bi bi-trash mr-3 w-4"></i> Xóa
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // Search functionality
            $("#searchInput").on("keyup", function () {
                var value = $(this).val().toLowerCase();
                $("#usersTable tbody tr").filter(function () {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                });
            });
        });

        function toggleUserDropdown(userId) {
            const dropdown = document.getElementById('dropdown-' + userId);
            
            // Hide all other dropdowns
            document.querySelectorAll('[id^="dropdown-"]').forEach(function(menu) {
                if (menu.id !== 'dropdown-' + userId) {
                    menu.classList.add('hidden');
                }
            });
            
            // Toggle current dropdown
            dropdown.classList.toggle('hidden');
        }

        // Close dropdown when clicking outside
        document.addEventListener('click', function(event) {
            if (!event.target.closest('.dropdown-toggle') && !event.target.closest('[id^="dropdown-"]')) {
                document.querySelectorAll('[id^="dropdown-"]').forEach(function(menu) {
                    menu.classList.add('hidden');
                });
            }
        });
        
        function confirmDeactivate(id) {
            if (confirm("Bạn có chắc chắn muốn vô hiệu hóa người dùng này?")) {
                window.location.href = "/Users/ToggleActive/" + id;
            }
        }
        
        function confirmActivate(id) {
            if (confirm("Bạn có chắc chắn muốn kích hoạt người dùng này?")) {
                window.location.href = "/Users/ToggleActive/" + id;
            }
        }
    </script>
} 