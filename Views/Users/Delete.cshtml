@model InfertilityApp.Models.User

@{
    ViewData["Title"] = "Xóa người dùng";
}

<div class="p-6 space-y-6 bg-gray-50 min-h-screen">
    <!-- Header Section -->
    <div class="bg-white rounded-lg shadow-sm border border-gray-200 overflow-hidden">
        <div class="bg-white border-b border-gray-200 p-4">
            <div class="flex items-center justify-between">
                <div class="flex items-center space-x-4">
                    <div class="w-12 h-12 bg-red-50 rounded-lg flex items-center justify-center">
                        <i class="bi bi-person-x text-2xl text-red-600"></i>
                    </div>
                    <div>
                        <h1 class="text-2xl font-semibold text-gray-900">Xóa người dùng</h1>
                        <p class="text-gray-600">Xác nhận thông tin trước khi xóa</p>
                    </div>
                </div>
                <!-- Breadcrumb -->
                <nav class="hidden md:flex items-center space-x-2 text-sm">
                    <a asp-action="Index" class="text-blue-600 hover:text-blue-700 transition-colors duration-200 flex items-center space-x-1">
                        <i class="bi bi-list"></i>
                        <span>Danh sách người dùng</span>
                    </a>
                    <i class="bi bi-chevron-right text-gray-400"></i>
                    <span class="text-gray-600 font-medium">Xóa người dùng</span>
                </nav>
            </div>
        </div>

        <!-- Warning Header -->
        <div class="bg-red-600 text-white px-6 py-4">
            <div class="flex items-center">
                <i class="bi bi-exclamation-triangle text-white mr-3 text-xl"></i>
                <h2 class="text-xl font-semibold">Bạn có chắc chắn muốn xóa người dùng này?</h2>
            </div>
        </div>

        <!-- User Information -->
        <div class="p-6">
            <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
                <!-- Account Information -->
                <div class="bg-gray-50 rounded-lg p-4 border border-gray-200">
                    <h3 class="text-lg font-semibold text-gray-900 mb-4 flex items-center">
                        <i class="bi bi-person-circle text-purple-600 mr-2"></i>
                        Thông tin tài khoản
                    </h3>
                    <div class="space-y-3">
                        <div>
                            <label class="text-sm font-medium text-gray-600">Tên đăng nhập</label>
                            <p class="text-gray-900 font-medium">@(Model.Username ?? "Chưa cập nhật")</p>
                        </div>
                        <div>
                            <label class="text-sm font-medium text-gray-600">Họ và tên</label>
                            <p class="text-gray-900 font-medium">@(Model.FullName ?? "Chưa cập nhật")</p>
                        </div>
                        <div>
                            <label class="text-sm font-medium text-gray-600">Email</label>
                            <p class="text-gray-900">@(Model.Email ?? "Chưa cập nhật")</p>
                        </div>
                        <div>
                            <label class="text-sm font-medium text-gray-600">Số điện thoại</label>
                            <p class="text-gray-900">@(Model.PhoneNumber ?? "Chưa cập nhật")</p>
                        </div>
                    </div>
                </div>

                <!-- Role & Status Information -->
                <div class="bg-gray-50 rounded-lg p-4 border border-gray-200">
                    <h3 class="text-lg font-semibold text-gray-900 mb-4 flex items-center">
                        <i class="bi bi-shield-check text-blue-600 mr-2"></i>
                        Vai trò & Trạng thái
                    </h3>
                    <div class="space-y-3">
                        <div>
                            <label class="text-sm font-medium text-gray-600">Vai trò</label>
                            <div class="mt-1">
                                @switch (Model.Role)
                                {
                                    case "Admin":
                                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800">Quản trị viên</span>
                                        break;
                                    case "Doctor":
                                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">Bác sĩ</span>
                                        break;
                                    case "Staff":
                                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">Nhân viên</span>
                                        break;
                                    default:
                                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800">@Model.Role</span>
                                        break;
                                }
                            </div>
                        </div>
                        <div>
                            <label class="text-sm font-medium text-gray-600">Trạng thái</label>
                            <div class="mt-1">
                                @if (Model.IsActive)
                                {
                                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                                        <i class="bi bi-check-circle-fill mr-1"></i>
                                        Hoạt động
                                    </span>
                                }
                                else
                                {
                                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800">
                                        <i class="bi bi-x-circle-fill mr-1"></i>
                                        Vô hiệu
                                    </span>
                                }
                            </div>
                        </div>
                        <div>
                            <label class="text-sm font-medium text-gray-600">Ngày tạo</label>
                            <p class="text-gray-900">@Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")</p>
                        </div>
                        <div>
                            <label class="text-sm font-medium text-gray-600">Đăng nhập lần cuối</label>
                            <p class="text-gray-900">
                                @(Model.LastLogin.HasValue ? Model.LastLogin.Value.ToString("dd/MM/yyyy HH:mm") : "Chưa đăng nhập")
                            </p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Warning Message -->
            <div class="mt-6 bg-yellow-50 border-l-4 border-yellow-400 p-4 rounded-r-lg">
                <div class="flex">
                    <i class="bi bi-exclamation-triangle text-yellow-500 mr-3 mt-0.5"></i>
                    <div>
                        <h4 class="text-sm font-medium text-yellow-800 mb-1">Cảnh báo quan trọng</h4>
                        <p class="text-sm text-yellow-700">
                            Việc xóa người dùng sẽ ảnh hưởng đến tất cả dữ liệu liên quan bao gồm:
                        </p>
                        <ul class="text-sm text-yellow-700 mt-2 ml-4 list-disc">
                            <li>Phiên đăng nhập hiện tại</li>
                            <li>Quyền truy cập hệ thống</li>
                            <li>Lịch sử hoạt động</li>
                            <li>Dữ liệu cá nhân và cài đặt</li>
                        </ul>
                        <p class="text-sm text-yellow-700 mt-2 font-medium">
                            Hành động này không thể hoàn tác!
                        </p>
                    </div>
                </div>
            </div>

            <!-- Action Buttons -->
            <div class="mt-8 flex flex-col sm:flex-row gap-4 justify-center">
                <form asp-action="Delete" class="inline">
                    <input type="hidden" asp-for="Id" />
                    <button type="submit" 
                            class="w-full sm:w-auto bg-red-600 hover:bg-red-700 text-white font-medium py-3 px-8 rounded-lg transition duration-200 flex items-center justify-center shadow-sm"
                            onclick="return confirm('Bạn có chắc chắn muốn xóa người dùng này? Hành động này không thể hoàn tác!');">
                        <i class="bi bi-trash mr-2"></i>
                        Xác nhận xóa
                    </button>
                </form>
                <a asp-action="Index" 
                   class="w-full sm:w-auto bg-gray-200 hover:bg-gray-300 text-gray-800 font-medium py-3 px-8 rounded-lg transition duration-200 flex items-center justify-center shadow-sm">
                    <i class="bi bi-arrow-left mr-2"></i>
                    Quay lại danh sách
                </a>
            </div>
        </div>
    </div>
</div> 