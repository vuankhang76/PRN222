@model InfertilityApp.Models.User

@{
    ViewData["Title"] = "Xóa người dùng";
}

<div class="flex justify-between items-center mb-6">
    <h2 class="text-3xl font-bold text-gray-900">Xóa người dùng</h2>
    <a asp-action="Index" class="bg-gray-600 text-white px-4 py-2 rounded-lg hover:bg-gray-700 transition-colors duration-200 flex items-center">
        <i class="bi bi-arrow-left mr-2"></i> Quay lại
    </a>
</div>

<div class="bg-red-50 border border-red-200 rounded-lg p-6 mb-6">
    <div class="flex items-center">
        <div class="flex-shrink-0">
            <i class="bi bi-exclamation-triangle text-red-400 text-2xl"></i>
        </div>
                    <div class="ml-3">
                <h3 class="text-lg font-medium text-red-800">Bạn có chắc chắn muốn xóa người dùng này?</h3>
                <p class="mt-2 text-red-700">Hành động này không thể hoàn tác. Người dùng sẽ bị xóa hoàn toàn khỏi hệ thống.</p>
            </div>
    </div>
</div>

<div class="bg-white rounded-lg shadow-lg">
    <div class="p-6">
        <h3 class="text-lg font-semibold text-gray-900 mb-4">Thông tin người dùng</h3>
        
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div class="space-y-4">
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">Tên đăng nhập</label>
                    <p class="text-gray-900 font-medium">@Model.Username</p>
                </div>
                
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">Họ và tên</label>
                    <p class="text-gray-900 font-medium">@Model.FullName</p>
                </div>
                
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">Email</label>
                    <p class="text-gray-900">@Model.Email</p>
                </div>
                
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">Số điện thoại</label>
                    <p class="text-gray-900">@Model.PhoneNumber</p>
                </div>
            </div>
            
            <div class="space-y-4">
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">Vai trò</label>
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                        @Model.Role
                    </span>
                </div>
                
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">Trạng thái</label>
                    @if (Model.IsActive)
                    {
                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                            <i class="bi bi-check-circle mr-1"></i> Hoạt động
                        </span>
                    }
                    else
                    {
                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800">
                            <i class="bi bi-x-circle mr-1"></i> Không hoạt động
                        </span>
                    }
                </div>
                
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">Ngày tạo</label>
                    <p class="text-gray-900">@Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")</p>
                </div>
                
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">Đăng nhập lần cuối</label>
                    <p class="text-gray-900">
                        @if (Model.LastLogin.HasValue)
                        {
                            @Model.LastLogin.Value.ToString("dd/MM/yyyy HH:mm")
                        }
                        else
                        {
                            <span class="text-gray-500">Chưa đăng nhập</span>
                        }
                    </p>
                </div>
            </div>
        </div>
        
        <div class="flex justify-end space-x-4 mt-8 pt-6 border-t border-gray-200">
            <a asp-action="Index" class="bg-gray-500 text-white px-6 py-2 rounded-lg hover:bg-gray-600 transition-colors duration-200">
                Hủy
            </a>
            <form asp-action="Delete" method="post" class="inline">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="bg-red-600 text-white px-6 py-2 rounded-lg hover:bg-red-700 transition-colors duration-200 flex items-center">
                    <i class="bi bi-trash mr-2"></i> Xóa người dùng
                </button>
            </form>
        </div>
    </div>
</div> 