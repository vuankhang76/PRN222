@{
    ViewData["Title"] = "Dashboard";
}

<div class="row mb-4">
    <div class="col-12">
        <h2>Dashboard</h2>
        <p>Chào mừng đến với phần mềm quản lý và theo dõi quá trình điều trị hiếm muộn</p>
    </div>
</div>

<div class="row mb-4">
    <div class="col-md-3 mb-3">
        <div class="card bg-primary text-white h-100">
            <div class="card-body d-flex align-items-center">
                <i class="bi bi-people display-4 me-3"></i>
                <div>
                    <h5 class="card-title">Bệnh nhân</h5>
                    <h2 class="mb-0">@ViewData["PatientCount"]</h2>
                </div>
            </div>
            <div class="card-footer d-flex align-items-center justify-content-between">
                <a class="text-white text-decoration-none" asp-controller="Patients" asp-action="Index">Xem chi tiết</a>
                <i class="bi bi-chevron-right text-white"></i>
            </div>
        </div>
    </div>
    <div class="col-md-3 mb-3">
        <div class="card bg-success text-white h-100">
            <div class="card-body d-flex align-items-center">
                <i class="bi bi-hospital display-4 me-3"></i>
                <div>
                    <h5 class="card-title">Bác sĩ</h5>
                    <h2 class="mb-0">@ViewData["DoctorCount"]</h2>
                </div>
            </div>
            <div class="card-footer d-flex align-items-center justify-content-between">
                <a class="text-white text-decoration-none" asp-controller="Doctors" asp-action="Index">Xem chi tiết</a>
                <i class="bi bi-chevron-right text-white"></i>
            </div>
        </div>
    </div>
    <div class="col-md-3 mb-3">
        <div class="card bg-warning text-white h-100">
            <div class="card-body d-flex align-items-center">
                <i class="bi bi-clipboard2-pulse display-4 me-3"></i>
                <div>
                    <h5 class="card-title">Điều trị</h5>
                    <h2 class="mb-0">@ViewData["TreatmentCount"]</h2>
                </div>
            </div>
            <div class="card-footer d-flex align-items-center justify-content-between">
                <a class="text-white text-decoration-none" asp-controller="Treatments" asp-action="Index">Xem chi tiết</a>
                <i class="bi bi-chevron-right text-white"></i>
            </div>
        </div>
    </div>
    <div class="col-md-3 mb-3">
        <div class="card bg-danger text-white h-100">
            <div class="card-body d-flex align-items-center">
                <i class="bi bi-calendar-check display-4 me-3"></i>
                <div>
                    <h5 class="card-title">Lịch hẹn</h5>
                    <h2 class="mb-0">@ViewData["AppointmentCount"]</h2>
                </div>
            </div>
            <div class="card-footer d-flex align-items-center justify-content-between">
                <a class="text-white text-decoration-none" asp-controller="Appointments" asp-action="Index">Xem chi tiết</a>
                <i class="bi bi-chevron-right text-white"></i>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-6 mb-4">
        <div class="card h-100">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0">Lịch hẹn sắp tới</h5>
                <a asp-controller="Appointments" asp-action="Index" class="btn btn-sm btn-primary">Xem tất cả</a>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Bệnh nhân</th>
                                <th>Bác sĩ</th>
                                <th>Ngày</th>
                                <th>Giờ</th>
                                <th>Trạng thái</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (ViewData["UpcomingAppointments"] != null)
                            {
                                foreach (var appointment in (IEnumerable<Appointment>)ViewData["UpcomingAppointments"])
                                {
                                    <tr>
                                        <td>
                                            <a asp-controller="Patients" asp-action="Details" asp-route-id="@appointment.PatientId">
                                                @appointment.Patient.FullName
                                            </a>
                                        </td>
                                        <td>
                                            <a asp-controller="Doctors" asp-action="Details" asp-route-id="@appointment.DoctorId">
                                                @appointment.Doctor.FullName
                                            </a>
                                        </td>
                                        <td>@appointment.AppointmentDate.ToString("dd/MM/yyyy")</td>
                                        <td>@appointment.AppointmentTime.ToString(@"hh\:mm")</td>
                                        <td>
                                            @switch (appointment.Status)
                                            {
                                                case "Scheduled":
                                                    <span class="badge bg-primary">Đã lên lịch</span>
                                                    break;
                                                case "Completed":
                                                    <span class="badge bg-success">Hoàn thành</span>
                                                    break;
                                                case "Cancelled":
                                                    <span class="badge bg-danger">Đã hủy</span>
                                                    break;
                                                case "Rescheduled":
                                                    <span class="badge bg-warning">Đổi lịch</span>
                                                    break;
                                                default:
                                                    <span class="badge bg-secondary">@appointment.Status</span>
                                                    break;
                                            }
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="5" class="text-center">Không có lịch hẹn nào</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-6 mb-4">
        <div class="card h-100">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0">Điều trị gần đây</h5>
                <a asp-controller="Treatments" asp-action="Index" class="btn btn-sm btn-primary">Xem tất cả</a>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Bệnh nhân</th>
                                <th>Bác sĩ</th>
                                <th>Loại điều trị</th>
                                <th>Ngày bắt đầu</th>
                                <th>Trạng thái</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (ViewData["RecentTreatments"] != null)
                            {
                                foreach (var treatment in (IEnumerable<Treatment>)ViewData["RecentTreatments"])
                                {
                                    <tr>
                                        <td>
                                            <a asp-controller="Patients" asp-action="Details" asp-route-id="@treatment.PatientId">
                                                @treatment.Patient.FullName
                                            </a>
                                        </td>
                                        <td>
                                            <a asp-controller="Doctors" asp-action="Details" asp-route-id="@treatment.DoctorId">
                                                @treatment.Doctor.FullName
                                            </a>
                                        </td>
                                        <td>@treatment.TreatmentType</td>
                                        <td>@treatment.StartDate.ToString("dd/MM/yyyy")</td>
                                        <td>
                                            @switch (treatment.Status)
                                            {
                                                case "In Progress":
                                                    <span class="badge bg-primary">Đang tiến hành</span>
                                                    break;
                                                case "Completed":
                                                    <span class="badge bg-success">Hoàn thành</span>
                                                    break;
                                                case "Cancelled":
                                                    <span class="badge bg-danger">Đã hủy</span>
                                                    break;
                                                default:
                                                    <span class="badge bg-secondary">@treatment.Status</span>
                                                    break;
                                            }
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="5" class="text-center">Không có điều trị nào</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
