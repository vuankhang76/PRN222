@{
    ViewData["Title"] = "Tổng quan";
}

<!-- Dashboard Header -->
<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1 class="page-title mb-2">Bảng điều khiển</h1>
        <p class="text-muted">Chào mừng đến với hệ thống quản lý điều trị hiếm muộn FertilityCare</p>
    </div>
    <div class="d-flex gap-2">
        <button class="btn btn-primary btn-sm">
            <i class="bi bi-plus-circle"></i> Thêm mới
        </button>
    </div>
</div>

<!-- Stats Cards Row -->
<div class="row mb-5">
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card stats-card h-100">
            <div class="card-body d-flex align-items-center">
                <div class="flex-shrink-0 me-4">
                    <div class="stats-icon">
                        <i class="bi bi-people display-4"></i>
                    </div>
                </div>
                <div class="flex-grow-1">
                    <div class="stats-number">@ViewData["PatientCount"]</div>
                    <div class="stats-label">Bệnh nhân</div>
                    <div class="stats-change">
                        <small class="text-white-50">
                            <i class="bi bi-arrow-up"></i> +12% từ tháng trước
                        </small>
                    </div>
                </div>
                <div class="ms-auto">
                    <a asp-controller="Patients" asp-action="Index" class="btn btn-sm btn-light btn-outline-light">
                        <i class="bi bi-arrow-right"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card stats-card success h-100">
            <div class="card-body d-flex align-items-center">
                <div class="flex-shrink-0 me-4">
                    <div class="stats-icon">
                        <i class="bi bi-person-badge display-4"></i>
                    </div>
                </div>
                <div class="flex-grow-1">
                    <div class="stats-number">@ViewData["DoctorCount"]</div>
                    <div class="stats-label">Bác sĩ</div>
                    <div class="stats-change">
                        <small class="text-white-50">
                            <i class="bi bi-arrow-up"></i> +5% từ tháng trước
                        </small>
                    </div>
                </div>
                <div class="ms-auto">
                    <a asp-controller="Doctors" asp-action="Index" class="btn btn-sm btn-light btn-outline-light">
                        <i class="bi bi-arrow-right"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card stats-card warning h-100">
            <div class="card-body d-flex align-items-center">
                <div class="flex-shrink-0 me-4">
                    <div class="stats-icon">
                        <i class="bi bi-heart-pulse display-4"></i>
                    </div>
                </div>
                <div class="flex-grow-1">
                    <div class="stats-number">@ViewData["TreatmentCount"]</div>
                    <div class="stats-label">Điều trị</div>
                    <div class="stats-change">
                        <small class="text-white-50">
                            <i class="bi bi-arrow-up"></i> +8% từ tháng trước
                        </small>
                    </div>
                </div>
                <div class="ms-auto">
                    <a asp-controller="Treatments" asp-action="Index" class="btn btn-sm btn-light btn-outline-light">
                        <i class="bi bi-arrow-right"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card stats-card info h-100">
            <div class="card-body d-flex align-items-center">
                <div class="flex-shrink-0 me-4">
                    <div class="stats-icon">
                        <i class="bi bi-calendar-week display-4"></i>
                    </div>
                </div>
                <div class="flex-grow-1">
                    <div class="stats-number">@ViewData["AppointmentCount"]</div>
                    <div class="stats-label">Lịch hẹn</div>
                    <div class="stats-change">
                        <small class="text-white-50">
                            <i class="bi bi-arrow-up"></i> +15% từ tháng trước
                        </small>
                    </div>
                </div>
                <div class="ms-auto">
                    <a asp-controller="Appointments" asp-action="Index" class="btn btn-sm btn-light btn-outline-light">
                        <i class="bi bi-arrow-right"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Main Content Row -->
<div class="row">
    <!-- Upcoming Appointments -->
    <div class="col-xl-8 col-lg-7 mb-4">
        <div class="card h-100">
            <div class="card-header d-flex justify-content-between align-items-center">
                <div>
                    <h5 class="mb-1">Lịch hẹn sắp tới</h5>
                    <small class="text-muted">Danh sách các cuộc hẹn trong tuần này</small>
                </div>
                <div class="d-flex gap-2">
                    <button class="btn btn-outline-secondary btn-sm">
                        <i class="bi bi-filter"></i> Lọc
                    </button>
                    <a asp-controller="Appointments" asp-action="Index" class="btn btn-primary btn-sm">
                        Xem tất cả
                    </a>
                </div>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead>
                            <tr>
                                <th class="border-0">Bệnh nhân</th>
                                <th class="border-0">Bác sĩ</th>
                                <th class="border-0">Ngày & Giờ</th>
                                <th class="border-0">Trạng thái</th>
                                <th class="border-0">Thao tác</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (ViewData["UpcomingAppointments"] != null)
                            {
                                foreach (var appointment in (IEnumerable<Appointment>)ViewData["UpcomingAppointments"])
                                {
                                    <tr>
                                        <td class="border-0">
                                            <div class="d-flex align-items-center">
                                                <div class="avatar-sm me-3">
                                                    <div class="bg-primary text-white d-flex align-items-center justify-content-center rounded-circle" style="width: 40px; height: 40px;">
                                                        @((appointment.Patient?.FullName ?? "?").Substring(0, 1).ToUpper())
                                                    </div>
                                                </div>
                                                <div>
                                                    <h6 class="mb-0">@(appointment.Patient?.FullName ?? "N/A")</h6>
                                                    <small class="text-muted">ID: #@appointment.PatientId</small>
                                                </div>
                                            </div>
                                        </td>
                                        <td class="border-0">
                                            <div>
                                                <h6 class="mb-0">@(appointment.Doctor?.FullName ?? "N/A")</h6>
                                                <small class="text-muted">Bác sĩ chuyên khoa</small>
                                            </div>
                                        </td>
                                        <td class="border-0">
                                            <div>
                                                <div class="fw-semibold">@appointment.AppointmentDate.ToString("dd/MM/yyyy")</div>
                                                <small class="text-muted">@appointment.AppointmentTime.ToString(@"HH\:mm")</small>
                                            </div>
                                        </td>
                                        <td class="border-0">
                                            @switch (appointment.Status)
                                            {
                                                case "Scheduled":
                                                    <span class="badge bg-primary">Đã lên lịch</span>
                                                    break;
                                                case "Completed":
                                                    <span class="badge bg-success">Hoàn thành</span>
                                                    break;
                                                case "Cancelled":
                                                    <span class="badge bg-danger">Đã hủy</span>
                                                    break;
                                                case "Rescheduled":
                                                    <span class="badge bg-warning">Đổi lịch</span>
                                                    break;
                                                default:
                                                    <span class="badge bg-secondary">@appointment.Status</span>
                                                    break;
                                            }
                                        </td>
                                        <td class="border-0">
                                            <div class="d-flex gap-1">
                                                <button class="btn btn-outline-primary btn-sm" title="Xem chi tiết">
                                                    <i class="bi bi-eye"></i>
                                                </button>
                                                <button class="btn btn-outline-warning btn-sm" title="Chỉnh sửa">
                                                    <i class="bi bi-pencil"></i>
                                                </button>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="5" class="text-center py-4 border-0">
                                        <div class="text-muted">
                                            <i class="bi bi-calendar-x display-6 d-block mb-2"></i>
                                            <p class="mb-0">Không có lịch hẹn nào sắp tới</p>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Actions & Recent Activity -->
    <div class="col-xl-4 col-lg-5 mb-4">
        <!-- Quick Actions -->
        <div class="card mb-4">
            <div class="card-header">
                <h5 class="mb-1">Thao tác nhanh</h5>
                <small class="text-muted">Các tác vụ thường dùng</small>
            </div>
            <div class="card-body">
                <div class="d-grid gap-3">
                    <a asp-controller="Patients" asp-action="Create" class="btn btn-outline-primary d-flex align-items-center">
                        <i class="bi bi-person-plus me-3"></i>
                        <div class="text-start">
                            <div class="fw-semibold">Thêm bệnh nhân mới</div>
                            <small class="text-muted">Đăng ký thông tin bệnh nhân</small>
                        </div>
                    </a>
                    <a asp-controller="Appointments" asp-action="Create" class="btn btn-outline-success d-flex align-items-center">
                        <i class="bi bi-calendar-plus me-3"></i>
                        <div class="text-start">
                            <div class="fw-semibold">Đặt lịch hẹn</div>
                            <small class="text-muted">Tạo cuộc hẹn mới</small>
                        </div>
                    </a>
                    <a asp-controller="Treatments" asp-action="Create" class="btn btn-outline-warning d-flex align-items-center">
                        <i class="bi bi-clipboard2-pulse me-3"></i>
                        <div class="text-start">
                            <div class="fw-semibold">Tạo phác đồ điều trị</div>
                            <small class="text-muted">Lập kế hoạch điều trị</small>
                        </div>
                    </a>
                    <a asp-controller="MedicalRecords" asp-action="Create" class="btn btn-outline-info d-flex align-items-center">
                        <i class="bi bi-file-earmark-medical me-3"></i>
                        <div class="text-start">
                            <div class="fw-semibold">Thêm hồ sơ y tế</div>
                            <small class="text-muted">Cập nhật thông tin y tế</small>
                        </div>
                    </a>
                </div>
            </div>
        </div>

        <!-- Recent Treatments -->
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <div>
                    <h5 class="mb-1">Điều trị gần đây</h5>
                    <small class="text-muted">Hoạt động điều trị mới nhất</small>
                </div>
                <a asp-controller="Treatments" asp-action="Index" class="btn btn-primary btn-sm">
                    Xem tất cả
                </a>
            </div>
            <div class="card-body">
                @if (ViewData["RecentTreatments"] != null)
                {
                    <div class="timeline">
                        @foreach (var treatment in (IEnumerable<Treatment>)ViewData["RecentTreatments"])
                        {
                            <div class="timeline-item">
                                <div class="timeline-marker"></div>
                                <div class="timeline-content">
                                    <div class="d-flex justify-content-between align-items-start mb-2">
                                        <h6 class="mb-1">@(treatment.Patient?.FullName ?? "N/A")</h6>
                                        <small class="text-muted">@treatment.StartDate.ToString("dd/MM")</small>
                                    </div>
                                    <p class="text-muted mb-2">@(treatment.TreatmentType ?? "N/A")</p>
                                    @switch (treatment.Status)
                                    {
                                        case "In Progress":
                                            <span class="badge bg-primary">Đang tiến hành</span>
                                            break;
                                        case "Completed":
                                            <span class="badge bg-success">Hoàn thành</span>
                                            break;
                                        case "Cancelled":
                                            <span class="badge bg-danger">Đã hủy</span>
                                            break;
                                        default:
                                            <span class="badge bg-secondary">@treatment.Status</span>
                                            break;
                                    }
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="text-center text-muted py-4">
                        <i class="bi bi-clipboard-x display-6 d-block mb-2"></i>
                        <p class="mb-0">Chưa có điều trị nào gần đây</p>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<style>
    .stats-card {
        transition: all 0.3s ease;
        border: none;
        overflow: hidden;
    }

    .stats-icon {
        opacity: 0.8;
    }

    .stats-number {
        font-size: 2rem;
        font-weight: 700;
        line-height: 1;
        margin-bottom: 0.25rem;
    }

    .stats-label {
        font-size: 0.875rem;
        font-weight: 500;
        opacity: 0.9;
        margin-bottom: 0.5rem;
    }

    .stats-change {
        font-size: 0.75rem;
    }

    .avatar-sm {
        flex-shrink: 0;
    }

    .timeline {
        position: relative;
        padding-left: 1.5rem;
    }

    .timeline::before {
        content: '';
        position: absolute;
        left: 0.5rem;
        top: 0;
        bottom: 0;
        width: 2px;
        background: var(--gray-200);
    }

    .timeline-item {
        position: relative;
        margin-bottom: 1.5rem;
    }

    .timeline-item:last-child {
        margin-bottom: 0;
    }

    .timeline-marker {
        position: absolute;
        left: -1.5rem;
        top: 0.25rem;
        width: 10px;
        height: 10px;
        background: var(--primary-color);
        border-radius: 50%;
        border: 2px solid white;
        box-shadow: 0 0 0 3px var(--gray-200);
    }

    .timeline-content {
        background: var(--gray-50);
        padding: 1rem;
        border-radius: var(--border-radius);
        border-left: 3px solid var(--primary-color);
    }

    .page-title {
        color: var(--gray-800);
        font-weight: 600;
        margin: 0;
    }

    .btn-outline-light {
        border-color: rgba(255, 255, 255, 0.3);
        color: rgba(255, 255, 255, 0.8);
    }

    .btn-outline-light:hover {
        background-color: rgba(255, 255, 255, 0.2);
        border-color: rgba(255, 255, 255, 0.5);
        color: white;
    }
</style>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Add fade-in animation to cards
            $('.card').addClass('fade-in');
            
            // Auto-refresh appointments every 5 minutes
            setInterval(function() {
                // You can add AJAX call here to refresh appointment data
                console.log('Auto-refreshing appointments...');
            }, 300000);
        });
    </script>
}
