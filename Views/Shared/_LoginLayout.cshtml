<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FertilityCare</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
</head>
<body class="login-page">
    <div class="login-container">
        <!-- Left Panel - Info -->
        <div class="login-info-panel">
            <div class="info-content">
                <div class="brand-logo">
                    <div class="logo-icon">
                        <i class="bi bi-activity"></i>
                    </div>
                    <h1 class="brand-title">FertilityCare</h1>
                    <p class="brand-subtitle">Hệ thống quản lý điều trị hiếm muộn</p>
                </div>
                
                <div class="features-list">
                    <div class="feature-item">
                        <i class="bi bi-check-circle-fill"></i>
                        <span>Quản lý hồ sơ bệnh nhân chuyên nghiệp</span>
                    </div>
                    <div class="feature-item">
                        <i class="bi bi-check-circle-fill"></i>
                        <span>Theo dõi tiến trình điều trị chi tiết</span>
                    </div>
                    <div class="feature-item">
                        <i class="bi bi-check-circle-fill"></i>
                        <span>Lên lịch hẹn thông minh và hiệu quả</span>
                    </div>
                    <div class="feature-item">
                        <i class="bi bi-check-circle-fill"></i>
                        <span>Báo cáo và thống kê đầy đủ</span>
                    </div>
                </div>

            </div>
        </div>

        <!-- Right Panel - Login Form -->
        <div class="login-form-panel">
            <div class="form-container">
                <div class="form-header">
                    <h2>Đăng nhập</h2>
                    <p>Vui lòng đăng nhập vào tài khoản của bạn.</p>
                </div>

                <div class="form-content">
                    @RenderBody()
                </div>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        .login-page {
            font-family: 'Inter', system-ui, -apple-system, sans-serif;
            height: 100vh;
            overflow: hidden;
        }

        .login-container {
            display: flex;
            height: 100vh;
        }

        .login-info-panel {
            flex: 1;
            background: linear-gradient(135deg, #2563eb 0%, #1d4ed8 100%);
            color: white;
            display: flex;
            align-items: center;
            justify-content: center;
            position: relative;
            overflow: hidden;
        }

        .login-info-panel::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: url('data:image/svg+xml,<svg width="60" height="60" viewBox="0 0 60 60" xmlns="http://www.w3.org/2000/svg"><g fill="none" fill-rule="evenodd"><g fill="rgba(255,255,255,0.1)" fill-opacity="0.1"><circle cx="30" cy="30" r="4"/></g></svg>') repeat;
            opacity: 0.5;
        }

        .info-content {
            text-align: center;
            max-width: 500px;
            padding: 2rem;
            position: relative;
            z-index: 1;
        }

        .brand-logo {
            margin-bottom: 3rem;
        }

        .logo-icon {
            width: 80px;
            height: 80px;
            background: rgba(255, 255, 255, 0.2);
            border-radius: 20px;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 1.5rem;
            font-size: 2.5rem;
            backdrop-filter: blur(10px);
        }

        .brand-title {
            font-size: 2.5rem;
            font-weight: 700;
            margin-bottom: 0.5rem;
        }

        .brand-subtitle {
            font-size: 1.1rem;
            opacity: 0.9;
            margin-bottom: 0;
        }

        .features-list {
            text-align: left;
            margin-bottom: 3rem;
        }

        .feature-item {
            display: flex;
            align-items: center;
            margin-bottom: 1rem;
            font-size: 1rem;
        }

        .feature-item i {
            color: #10b981;
            margin-right: 1rem;
            font-size: 1.2rem;
        }

        .stats-row {
            display: flex;
            gap: 2rem;
            justify-content: center;
        }

        .stat-item {
            text-align: center;
        }

        .stat-item h3 {
            font-size: 2rem;
            font-weight: 700;
            margin-bottom: 0.5rem;
        }

        .stat-item p {
            font-size: 0.9rem;
            opacity: 0.8;
        }

        .login-form-panel {
            width: 480px;
            background: white;
            display: flex;
            align-items: center;
            justify-content: center;
            box-shadow: -10px 0 30px rgba(0, 0, 0, 0.1);
        }

        .form-container {
            width: 100%;
            max-width: 400px;
            padding: 2rem;
        }

        .form-header {
            text-align: center;
            margin-bottom: 2rem;
        }

        .form-header h2 {
            font-size: 2rem;
            font-weight: 700;
            color: #1f2937;
            margin-bottom: 0.5rem;
        }

        .form-header p {
            color: #6b7280;
            font-size: 0.95rem;
        }

        .form-content {
            margin-bottom: 2rem;
        }

        .form-footer {
            text-align: center;
            padding-top: 1.5rem;
            border-top: 1px solid #e5e7eb;
        }

        .form-footer p {
            color: #6b7280;
            font-size: 0.875rem;
            margin: 0;
        }

        /* Form Styles */
        .form-floating {
            margin-bottom: 1rem;
        }

        .form-control {
            border: 2px solid #e5e7eb;
            border-radius: 8px;
            padding: 0.875rem 1rem;
            font-size: 0.95rem;
        }

        .form-control:focus {
            border-color: #2563eb;
            box-shadow: 0 0 0 3px rgba(37, 99, 235, 0.1);
            outline: none;
        }

        .form-label {
            color: #6b7280;
            font-weight: 500;
        }

        .btn-primary {
            width: 100%;
            background: #2563eb;
            border: none;
            border-radius: 8px;
            padding: 0.875rem;
            font-size: 1rem;
            font-weight: 600;
            transition: all 0.2s ease;
        }

        .btn-primary:hover {
            background: #1d4ed8;
            transform: translateY(-1px);
            box-shadow: 0 4px 12px rgba(37, 99, 235, 0.4);
        }

        .alert {
            border: none;
            border-radius: 8px;
            padding: 1rem;
            margin-bottom: 1rem;
        }

        .alert-danger {
            background: #fef2f2;
            color: #dc2626;
        }

        .text-danger {
            color: #dc2626 !important;
        }

        /* Responsive */
        @@media (max-width: 768px) {
            .login-container {
                flex-direction: column;
            }

            .login-info-panel {
                display: none;
            }

            .login-form-panel {
                width: 100%;
                height: 100vh;
            }

            .form-container {
                padding: 1.5rem;
            }

            .brand-title {
                font-size: 2rem;
            }
        }
    </style>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html> 