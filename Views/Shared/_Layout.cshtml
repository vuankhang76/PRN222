<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Hệ thống quản lý điều trị hiếm muộn</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/InfertilityApp.styles.css" asp-append-version="true" />
</head>
<body class="medical-admin-layout">
    <div class="admin-wrapper">
        <!-- Modern Sidebar -->
        <aside class="medical-sidebar" id="sidebar">
            <div class="sidebar-brand">
                <div class="brand-icon">
                    <i class="bi bi-activity"></i>
                </div>
                <div class="brand-text">
                    <h5 class="mb-0">FertilityCare</h5>
                    <small class="text-muted">Hệ thống quản lý</small>
                </div>
            </div>
            
            <nav class="sidebar-nav">
                <ul class="nav-list">
                    <li class="nav-item @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Home" && ViewContext.RouteData.Values["Action"]?.ToString() == "Index" ? "active" : "")">
                        <a asp-controller="Home" asp-action="Index" class="nav-link">
                            <i class="bi bi-grid"></i>
                            <span>Tổng quan</span>
                        </a>
                    </li>
                    <li class="nav-item @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Patients" ? "active" : "")">
                        <a asp-controller="Patients" asp-action="Index" class="nav-link">
                            <i class="bi bi-people"></i>
                            <span>Bệnh nhân</span>
                        </a>
                    </li>
                    <li class="nav-item @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Doctors" ? "active" : "")">
                        <a asp-controller="Doctors" asp-action="Index" class="nav-link">
                            <i class="bi bi-person-badge"></i>
                            <span>Bác sĩ</span>
                        </a>
                    </li>
                    <li class="nav-item @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Appointments" ? "active" : "")">
                        <a asp-controller="Appointments" asp-action="Index" class="nav-link">
                            <i class="bi bi-calendar-week"></i>
                            <span>Lịch hẹn</span>
                        </a>
                    </li>
                    <li class="nav-item @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Treatments" ? "active" : "")">
                        <a asp-controller="Treatments" asp-action="Index" class="nav-link">
                            <i class="bi bi-heart-pulse"></i>
                            <span>Điều trị</span>
                        </a>
                    </li>
                    <li class="nav-item @(ViewContext.RouteData.Values["Controller"]?.ToString() == "MedicalRecords" ? "active" : "")">
                        <a asp-controller="MedicalRecords" asp-action="Index" class="nav-link">
                            <i class="bi bi-file-earmark-medical"></i>
                            <span>Hồ sơ y tế</span>
                        </a>
                    </li>
                    <li class="nav-item @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Users" && ViewContext.RouteData.Values["Action"]?.ToString() == "Index" ? "active" : "")">
                        <a asp-controller="Users" asp-action="Index" class="nav-link">
                            <i class="bi bi-gear"></i>
                            <span>Người dùng</span>
                        </a>
                    </li>
                </ul>
            </nav>
        </aside>

        <!-- Main Content Area -->
        <main class="main-content">
            <!-- Top Header -->
            <header class="main-header">
                <div class="header-left">
                    <button type="button" class="sidebar-toggle" id="sidebarToggle">
                        <i class="bi bi-list"></i>
                    </button>
                    <div class="breadcrumb-wrapper">
                        <h4 class="page-title">@ViewData["Title"]</h4>
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a href="/">Trang chủ</a></li>
                                <li class="breadcrumb-item active" aria-current="page">@ViewData["Title"]</li>
                            </ol>
                        </nav>
                    </div>
                </div>
                <div class="header-right">
                    <div class="header-actions">
                        <!-- Notifications -->
                        <div class="notification-dropdown">
                            <button class="btn btn-ghost" data-bs-toggle="dropdown">
                                <i class="bi bi-bell"></i>
                                <span class="notification-badge">3</span>
                            </button>
                            <div class="dropdown-menu dropdown-menu-end notification-menu">
                                <div class="dropdown-header">
                                    <h6>Thông báo</h6>
                                </div>
                                <div class="notification-item">
                                    <i class="bi bi-calendar-check text-primary"></i>
                                    <div class="notification-content">
                                        <p>Lịch hẹn mới được tạo</p>
                                        <small>5 phút trước</small>
                                    </div>
                                </div>
                                <div class="notification-item">
                                    <i class="bi bi-person-plus text-success"></i>
                                    <div class="notification-content">
                                        <p>Bệnh nhân mới đăng ký</p>
                                        <small>10 phút trước</small>
                                    </div>
                                </div>
                                <div class="dropdown-divider"></div>
                                <a href="#" class="dropdown-item text-center">Xem tất cả</a>
                            </div>
                        </div>

                        <!-- User Profile -->
                        @if (Context.Session.GetString("UserFullName") != null)
                        {
                            <div class="user-profile-dropdown">
                                <button class="btn btn-ghost user-profile-btn" data-bs-toggle="dropdown">
                                    <div class="user-avatar">
                                        <img src="https://via.placeholder.com/32" alt="Avatar" class="avatar-img">
                                    </div>
                                    <div class="user-info">
                                        <span class="user-name">@Context.Session.GetString("UserFullName")</span>
                                        <small class="user-role">Quản trị viên</small>
                                    </div>
                                    <i class="bi bi-chevron-down"></i>
                                </button>
                                <div class="dropdown-menu dropdown-menu-end user-menu">
                                    <div class="dropdown-header">
                                        <div class="user-avatar-large">
                                            <img src="https://via.placeholder.com/48" alt="Avatar">
                                        </div>
                                        <div>
                                            <h6>@Context.Session.GetString("UserFullName")</h6>
                                            <small class="text-muted">Quản trị viên</small>
                                        </div>
                                    </div>
                                    <div class="dropdown-divider"></div>
                                    <a class="dropdown-item" href="#">
                                        <i class="bi bi-person"></i> Hồ sơ cá nhân
                                    </a>
                                    <a class="dropdown-item" href="#">
                                        <i class="bi bi-gear"></i> Cài đặt
                                    </a>
                                    <div class="dropdown-divider"></div>
                                    <a class="dropdown-item text-danger" asp-controller="Users" asp-action="Logout">
                                        <i class="bi bi-box-arrow-right"></i> Đăng xuất
                                    </a>
                                </div>
                            </div>
                        }
                        else
                        {
                            <a asp-controller="Users" asp-action="Login" class="btn btn-primary">
                                <i class="bi bi-box-arrow-in-right"></i> Đăng nhập
                            </a>
                        }
                    </div>
                </div>
            </header>

            <!-- Page Content -->
            <div class="content-area">
                @RenderBody()
            </div>
        </main>
    </div>

    <!-- Footer -->
    <footer class="main-footer">
        <div class="footer-content">
            <div class="footer-left">
                <p>&copy; @DateTime.Now.Year FertilityCare - Hệ thống quản lý điều trị hiếm muộn</p>
            </div>
            <div class="footer-right">
                <a href="#">Hỗ trợ</a>
                <a href="#">Chính sách bảo mật</a>
                <a href="#">Điều khoản sử dụng</a>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        $(document).ready(function () {
            // Sidebar toggle functionality
            $('#sidebarToggle').on('click', function () {
                $('.admin-wrapper').toggleClass('sidebar-collapsed');
            });

            // Auto-hide sidebar on mobile
            if (window.innerWidth <= 768) {
                $('.admin-wrapper').addClass('sidebar-collapsed');
            }

            // Responsive sidebar handling
            $(window).resize(function() {
                if (window.innerWidth <= 768) {
                    $('.admin-wrapper').addClass('sidebar-collapsed');
                } else {
                    $('.admin-wrapper').removeClass('sidebar-collapsed');
                }
            });
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

@@<style>
    body {
        min-height: 100vh;
        background-color: #f8f9fa;
    }

    .sidebar {
        min-width: 250px;
        max-width: 250px;
        background: #343a40;
        color: #fff;
        transition: all 0.3s;
        height: 100vh;
        position: fixed;
        z-index: 999;
    }

    .sidebar.active {
        margin-left: -250px;
    }

    .sidebar .sidebar-header {
        padding: 20px;
        background: #212529;
    }

    .sidebar ul li a {
        padding: 15px;
        display: block;
        color: #fff;
        text-decoration: none;
        transition: all 0.3s;
    }

    .sidebar ul li a:hover {
        background: #495057;
    }

    .sidebar ul li.active a {
        background: #0d6efd;
        color: #fff;
    }

    .content-wrapper {
        width: 100%;
        margin-left: 250px;
        transition: all 0.3s;
        display: flex;
        flex-direction: column;
        min-height: 100vh;
    }

    .content-wrapper.active {
        margin-left: 0;
    }

    .navbar {
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    }

    .footer {
        margin-top: auto;
        background-color: #f8f9fa;
        border-top: 1px solid #dee2e6;
    }

</style>