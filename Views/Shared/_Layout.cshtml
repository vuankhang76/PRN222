<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - InfertilityApp</title>
    <link rel="stylesheet" href="~/css/styles.css" />
</head>
<body>
    <header>
        <nav class="bg-white border-b shadow-sm">
            <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
                <div class="flex justify-between h-16">
                    <div class="flex">
                        <a class="flex items-center text-xl font-bold" asp-controller="Home" asp-action="Index">
                            InfertilityApp
                        </a>
                    </div>
                    <div class="flex items-center">
                        <a class="px-3 py-2 text-gray-600 hover:text-gray-900" asp-controller="Home" asp-action="Index">Home</a>
                        <a class="px-3 py-2 text-gray-600 hover:text-gray-900" asp-controller="Home" asp-action="Privacy">Privacy</a>
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <main class="max-w-7xl mx-auto py-6 sm:px-6 lg:px-8">
        @RenderBody()
    </main>

    <footer class="border-t mt-8">
        <div class="max-w-7xl mx-auto py-6 px-4 sm:px-6 lg:px-8">
            <p class="text-center text-gray-500">
                &copy; 2025 - InfertilityApp - <a class="text-gray-600 hover:text-gray-900" asp-controller="Home" asp-action="Privacy">Privacy</a>
            </p>
        </div>
    </footer>

    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>