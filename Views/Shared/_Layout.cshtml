<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Phần mềm quản lý điều trị hiếm muộn</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/InfertilityApp.styles.css" asp-append-version="true" />
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        primary: {
                            50: '#eff6ff',
                            500: '#3b82f6',
                            600: '#2563eb',
                            700: '#1d4ed8',
                        }
                    }
                }
            }
        }
    </script>
</head>
<body>
    <div class="flex">
        <!-- Sidebar -->
        <div class="sidebar fixed h-screen w-64 bg-gray-800 text-white transition-all duration-300 z-50">
            <div class="sidebar-header bg-gray-900 p-5">
                <h3 class="text-lg font-semibold">Quản lý điều trị hiếm muộn</h3>
            </div>
            <ul class="list-none">
                <li class="@(ViewContext.RouteData.Values["Controller"]?.ToString() == "Home" && ViewContext.RouteData.Values["Action"]?.ToString() == "Index" ? "bg-blue-600" : "")">
                    <a asp-controller="Home" asp-action="Index" class="flex items-center p-4 text-white no-underline hover:bg-gray-700 transition-all duration-300">
                        <i class="bi bi-speedometer2 mr-3"></i> Dashboard
                    </a>
                </li>
                <li class="@(ViewContext.RouteData.Values["Controller"]?.ToString() == "Patients" ? "bg-blue-600" : "")">
                    <a asp-controller="Patients" asp-action="Index" class="flex items-center p-4 text-white no-underline hover:bg-gray-700 transition-all duration-300">
                        <i class="bi bi-people mr-3"></i> Bệnh nhân
                    </a>
                </li>
                <li class="@(ViewContext.RouteData.Values["Controller"]?.ToString() == "Doctors" ? "bg-blue-600" : "")">
                    <a asp-controller="Doctors" asp-action="Index" class="flex items-center p-4 text-white no-underline hover:bg-gray-700 transition-all duration-300">
                        <i class="bi bi-hospital mr-3"></i> Bác sĩ
                    </a>
                </li>
                <li class="@(ViewContext.RouteData.Values["Controller"]?.ToString() == "Partners" ? "bg-blue-600" : "")">
                    <a asp-controller="Partners" asp-action="Index" class="flex items-center p-4 text-white no-underline hover:bg-gray-700 transition-all duration-300">
                        <i class="bi bi-person-hearts mr-3"></i> Người phối mẫu
                    </a>
                </li>
                <li class="@(ViewContext.RouteData.Values["Controller"]?.ToString() == "Appointments" ? "bg-blue-600" : "")">
                    <a asp-controller="Appointments" asp-action="Index" class="flex items-center p-4 text-white no-underline hover:bg-gray-700 transition-all duration-300">
                        <i class="bi bi-calendar-check mr-3"></i> Lịch hẹn
                    </a>
                </li>
                <li class="@(ViewContext.RouteData.Values["Controller"]?.ToString() == "Treatments" ? "bg-blue-600" : "")">
                    <a asp-controller="Treatments" asp-action="Index" class="flex items-center p-4 text-white no-underline hover:bg-gray-700 transition-all duration-300">
                        <i class="bi bi-clipboard2-pulse mr-3"></i> Điều trị
                    </a>
                </li>
                <li class="@(ViewContext.RouteData.Values["Controller"]?.ToString() == "MedicalRecords" ? "bg-blue-600" : "")">
                    <a asp-controller="MedicalRecords" asp-action="Index" class="flex items-center p-4 text-white no-underline hover:bg-gray-700 transition-all duration-300">
                        <i class="bi bi-file-earmark-medical mr-3"></i> Hồ sơ y tế
                    </a>
                </li>
                <li class="@(ViewContext.RouteData.Values["Controller"]?.ToString() == "Users" ? "bg-blue-600" : "")">
                    <a asp-controller="Users" asp-action="Index" class="flex items-center p-4 text-white no-underline hover:bg-gray-700 transition-all duration-300">
                        <i class="bi bi-person-gear mr-3"></i> Người dùng
                    </a>
                </li>
            </ul>
        </div>

        <!-- Main Content -->
        <div class="content-wrapper flex-1 ml-64 flex flex-col min-h-screen transition-all duration-300">
            <!-- Navbar -->
            <nav class="bg-white shadow-md">
                <div class="px-4 py-3">
                    <div class="flex items-center justify-between">
                        <button type="button" id="sidebarCollapse" class="bg-blue-600 text-white px-3 py-2 rounded text-sm hover:bg-blue-700 transition-colors duration-200">
                            <i class="bi bi-list"></i>
                        </button>
                        <div class="flex items-center ml-auto">
                            @if (Context.Session.GetString("UserFullName") != null)
                            {
                                <div class="relative">
                                    <button class="flex items-center text-gray-700 hover:text-gray-900 focus:outline-none" type="button" id="userDropdown" onclick="toggleDropdown()">
                                        <i class="bi bi-person-circle mr-2"></i> @Context.Session.GetString("UserFullName")
                                        <i class="bi bi-chevron-down ml-1"></i>
                                    </button>
                                    <div class="absolute right-0 mt-2 w-48 bg-white rounded-md shadow-lg z-50 hidden" id="dropdownMenu">
                                        <a href="#" class="flex items-center px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">
                                            <i class="bi bi-person mr-2"></i> Hồ sơ
                                        </a>
                                        <a href="#" class="flex items-center px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">
                                            <i class="bi bi-gear mr-2"></i> Cài đặt
                                        </a>
                                        <hr class="border-gray-200">
                                        <a asp-controller="Users" asp-action="Logout" class="flex items-center px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">
                                            <i class="bi bi-box-arrow-right mr-2"></i> Đăng xuất
                                        </a>
                                    </div>
                                </div>
                            }
                            else
                            {
                                <a asp-controller="Users" asp-action="Login" class="bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700 transition-colors duration-200">Đăng nhập</a>
                            }
                        </div>
                    </div>
                </div>
            </nav>

            <!-- Page Content -->
            <div class="flex-1 p-6">
                @RenderBody()
            </div>
        </div>
    </div>

    <footer class="text-center py-6 bg-gray-50 border-t border-gray-200 mt-auto">
        <div class="container mx-auto">
            &copy; @DateTime.Now.Year - Phần mềm quản lý điều trị hiếm muộn
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        $(document).ready(function () {
            $('#sidebarCollapse').on('click', function () {
                $('.sidebar').toggleClass('-ml-64');
                $('.content-wrapper').toggleClass('ml-0');
            });
        });

        function toggleDropdown() {
            const dropdown = document.getElementById('dropdownMenu');
            dropdown.classList.toggle('hidden');
        }

        // Close dropdown when clicking outside
        document.addEventListener('click', function(event) {
            const dropdown = document.getElementById('dropdownMenu');
            const button = document.getElementById('userDropdown');
            
            if (!button.contains(event.target) && !dropdown.contains(event.target)) {
                dropdown.classList.add('hidden');
            }
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
@@<style>
    body {
        min-height: 100vh;
        background-color: #f8fafc;
    }

    .sidebar {
        transition: margin-left 0.3s ease;
    }

    .sidebar.-ml-64 {
        margin-left: -16rem;
    }

    .content-wrapper.ml-0 {
        margin-left: 0;
    }

    /* Responsive design */
    @@media (max-width: 768px) {
        .sidebar {
            margin-left: -16rem;
        }
        
        .content-wrapper {
            margin-left: 0;
        }
        
        .sidebar.mobile-open {
            margin-left: 0;
        }
    }
</style>
