@model IEnumerable<InfertilityApp.Models.MedicalRecord>

@{
    ViewData["Title"] = "Lịch sử hồ sơ y tế";
    string? patientName = ViewData["PatientName"] as string ?? "Không xác định";
    int patientId = ViewData["PatientId"] as int? ?? 0;
}

<div class="container-fluid">
    <h1 class="mt-4">Lịch sử hồ sơ y tế - @patientName</h1>
    
    <div class="mb-3">
        <a asp-controller="Patients" asp-action="Details" asp-route-id="@patientId" class="btn btn-info">
            <i class="fas fa-user"></i> Xem hồ sơ bệnh nhân
        </a>
        <a asp-action="Create" asp-route-patientId="@patientId" class="btn btn-primary">
            <i class="fas fa-plus"></i> Thêm hồ sơ mới
        </a>
    </div>
    
    <div class="card mb-4">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Ngày</th>
                            <th>Loại hồ sơ</th>
                            <th>Tiêu đề</th>
                            <th>Bác sĩ</th>
                            <th>Tệp đính kèm</th>
                            <th>Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null)
                        {
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.RecordDate.ToString("dd/MM/yyyy")</td>
                                    <td>@item.RecordType</td>
                                    <td>@item.RecordTitle</td>
                                    <td>@(item.Doctor?.FullName ?? "Không có")</td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(item.AttachmentPath))
                                        {
                                            <a asp-action="DownloadAttachment" asp-route-id="@item.Id" class="btn btn-sm btn-primary">
                                                <i class="fas fa-download"></i> Tải xuống
                                            </a>
                                        }
                                        else
                                        {
                                            <span>Không có</span>
                                        }
                                    </td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Chi tiết</a>
                                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Sửa</a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="6" class="text-center">Chưa có hồ sơ y tế nào</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('#dataTable').DataTable({
                "order": [[0, "desc"]]
            });
        });
    </script>
} 