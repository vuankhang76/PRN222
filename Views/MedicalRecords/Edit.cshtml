@model InfertilityApp.Models.MedicalRecord

@{
    ViewData["Title"] = "Chỉnh sửa hồ sơ y tế";
}

<div class="flex justify-between items-center mb-6">
    <h2 class="text-3xl font-bold text-gray-900">Chỉnh sửa hồ sơ y tế</h2>
    <a asp-action="Index" class="bg-gray-600 text-white px-4 py-2 rounded-lg hover:bg-gray-700 transition-colors duration-200 flex items-center">
        <i class="bi bi-arrow-left mr-2"></i> Quay lại
    </a>
</div>

<div class="bg-white rounded-lg shadow-lg">
    <div class="p-6">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-6"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="AttachmentPath" />
            
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div class="space-y-4">
                    <div>
                        <label asp-for="PatientId" class="block text-sm font-medium text-gray-700 mb-2">Bệnh nhân <span class="text-red-500">*</span></label>
                        <select asp-for="PatientId" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent" asp-items="ViewBag.PatientId">
                            <option value="">-- Chọn bệnh nhân --</option>
                        </select>
                        <span asp-validation-for="PatientId" class="text-red-500 text-sm"></span>
                    </div>
                    
                    <div>
                        <label asp-for="DoctorId" class="block text-sm font-medium text-gray-700 mb-2">Bác sĩ</label>
                        <select asp-for="DoctorId" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent" asp-items="ViewBag.DoctorId">
                            <option value="">-- Chọn bác sĩ --</option>
                        </select>
                        <span asp-validation-for="DoctorId" class="text-red-500 text-sm"></span>
                    </div>
                    
                    <div>
                        <label asp-for="RecordDate" class="block text-sm font-medium text-gray-700 mb-2">Ngày ghi nhận <span class="text-red-500">*</span></label>
                        <input asp-for="RecordDate" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent" type="date" />
                        <span asp-validation-for="RecordDate" class="text-red-500 text-sm"></span>
                    </div>
                    
                    <div>
                        <label asp-for="RecordType" class="block text-sm font-medium text-gray-700 mb-2">Loại hồ sơ <span class="text-red-500">*</span></label>
                        <select asp-for="RecordType" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent">
                            <option value="">-- Chọn loại hồ sơ --</option>
                            @if (ViewData["RecordTypes"] != null && ViewData["RecordTypes"] is List<string> recordTypes)
                            {
                                @foreach (var type in recordTypes)
                                {
                                    <option value="@type" selected="@(Model?.RecordType == type)">@type</option>
                                }
                            }
                        </select>
                        <span asp-validation-for="RecordType" class="text-red-500 text-sm"></span>
                    </div>
                </div>
                
                <div class="space-y-4">
                    <div>
                        <label asp-for="RecordTitle" class="block text-sm font-medium text-gray-700 mb-2">Tiêu đề <span class="text-red-500">*</span></label>
                        <input asp-for="RecordTitle" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent" />
                        <span asp-validation-for="RecordTitle" class="text-red-500 text-sm"></span>
                    </div>
                    
                    <div>
                        <label asp-for="Description" class="block text-sm font-medium text-gray-700 mb-2">Mô tả</label>
                        <textarea asp-for="Description" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent" rows="3"></textarea>
                        <span asp-validation-for="Description" class="text-red-500 text-sm"></span>
                    </div>
                    
                    <div>
                        <label asp-for="Results" class="block text-sm font-medium text-gray-700 mb-2">Kết quả</label>
                        <textarea asp-for="Results" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent" rows="3"></textarea>
                        <span asp-validation-for="Results" class="text-red-500 text-sm"></span>
                    </div>
                </div>
            </div>
            
            <div class="flex justify-end space-x-4 mt-8">
                <a asp-action="Index" class="bg-gray-500 text-white px-6 py-2 rounded-lg hover:bg-gray-600 transition-colors duration-200">
                    Hủy
                </a>
                <button type="submit" class="bg-blue-600 text-white px-6 py-2 rounded-lg hover:bg-blue-700 transition-colors duration-200">
                    Lưu thay đổi
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 