@model InfertilityApp.Models.MedicalRecord

@{
    ViewData["Title"] = "Chi tiết hồ sơ y tế";
}

<div class="p-6 space-y-6 bg-gray-50 min-h-screen">
    <!-- Header Section -->
    <div class="bg-white rounded-2xl shadow-lg border border-indigo-200 overflow-hidden">
        <div class="bg-gradient-to-r from-indigo-600 via-blue-600 to-purple-600 text-white p-6">
            <div class="flex items-center justify-between">
                <div class="flex items-center space-x-4">
                    <div class="w-16 h-16 bg-white/20 rounded-2xl flex items-center justify-center backdrop-blur-sm">
                        <i class="bi bi-file-earmark-medical text-3xl text-white"></i>
                    </div>
                    <div>
                        <h1 class="text-3xl font-bold mb-2">Chi tiết hồ sơ y tế</h1>
                        <p class="text-indigo-100 text-lg">@Model.RecordTitle</p>
                    </div>
                </div>
                <div class="flex items-center space-x-3">
                    <a asp-action="Edit" asp-route-id="@Model.Id" 
                       class="bg-white/20 backdrop-blur-sm text-white px-4 py-2 rounded-xl hover:bg-white/30 transition-all duration-300 flex items-center space-x-2">
                        <i class="bi bi-pencil"></i>
                        <span>Chỉnh sửa</span>
                    </a>
                    <a asp-action="PatientHistory" asp-route-id="@Model.PatientId" 
                       class="bg-white/20 backdrop-blur-sm text-white px-4 py-2 rounded-xl hover:bg-white/30 transition-all duration-300 flex items-center space-x-2">
                        <i class="bi bi-clock-history"></i>
                        <span>Lịch sử</span>
                    </a>
                    <a asp-action="Index" 
                       class="bg-white/20 backdrop-blur-sm text-white px-4 py-2 rounded-xl hover:bg-white/30 transition-all duration-300 flex items-center space-x-2">
                        <i class="bi bi-arrow-left"></i>
                        <span>Quay lại</span>
                    </a>
                </div>
            </div>
        </div>
        
        <!-- Breadcrumb -->
        <div class="p-4 bg-gradient-to-r from-indigo-50 to-blue-50 border-b border-indigo-100">
            <nav class="flex items-center space-x-2 text-sm">
                <a asp-action="Index" class="text-indigo-600 hover:text-indigo-700 transition-colors duration-200 flex items-center space-x-1">
                    <i class="bi bi-house"></i>
                    <span>Hồ sơ y tế</span>
                </a>
                <i class="bi bi-chevron-right text-gray-400"></i>
                <a asp-action="PatientHistory" asp-route-id="@Model.PatientId" class="text-indigo-600 hover:text-indigo-700 transition-colors duration-200">
                    @Model.Patient?.FullName
                </a>
                <i class="bi bi-chevron-right text-gray-400"></i>
                <span class="text-gray-600 font-medium">Chi tiết</span>
            </nav>
        </div>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
        <!-- Main Information -->
        <div class="lg:col-span-2 space-y-6">
            <!-- Basic Information -->
            <div class="bg-white rounded-2xl shadow-lg border border-indigo-200 overflow-hidden">
                <div class="bg-gradient-to-r from-indigo-50 to-blue-50 border-b border-indigo-100 p-6">
                    <h3 class="text-lg font-semibold text-gray-800 flex items-center space-x-2">
                        <div class="w-8 h-8 bg-indigo-100 rounded-lg flex items-center justify-center">
                            <i class="bi bi-info-circle text-indigo-600"></i>
                        </div>
                        <span>Thông tin cơ bản</span>
                    </h3>
                </div>
                
                <div class="p-6">
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <div class="space-y-4">
                            <div class="flex items-center space-x-3">
                                <div class="w-10 h-10 bg-green-50 rounded-lg flex items-center justify-center">
                                    <i class="bi bi-person text-green-600"></i>
                                </div>
                                <div>
                                    <div class="text-sm text-gray-500">Bệnh nhân</div>
                                    <div class="font-medium text-gray-800">@Model.Patient?.FullName</div>
                                </div>
                            </div>
                            
                            <div class="flex items-center space-x-3">
                                <div class="w-10 h-10 bg-blue-50 rounded-lg flex items-center justify-center">
                                    <i class="bi bi-person-badge text-blue-600"></i>
                                </div>
                                <div>
                                    <div class="text-sm text-gray-500">Bác sĩ phụ trách</div>
                                    <div class="font-medium text-gray-800">@(Model.Doctor?.FullName ?? "Không có")</div>
                                </div>
                            </div>
                        </div>
                        
                        <div class="space-y-4">
                            <div class="flex items-center space-x-3">
                                <div class="w-10 h-10 bg-purple-50 rounded-lg flex items-center justify-center">
                                    <i class="bi bi-calendar3 text-purple-600"></i>
                                </div>
                                <div>
                                    <div class="text-sm text-gray-500">Ngày ghi nhận</div>
                                    <div class="font-medium text-gray-800">@Model.RecordDate.ToString("dd/MM/yyyy")</div>
                                </div>
                            </div>
                            
                            <div class="flex items-center space-x-3">
                                <div class="w-10 h-10 bg-amber-50 rounded-lg flex items-center justify-center">
                                    <i class="bi bi-tag text-amber-600"></i>
                                </div>
                                <div>
                                    <div class="text-sm text-gray-500">Loại hồ sơ</div>
                                    <div class="font-medium text-gray-800">
                                        <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-indigo-100 text-indigo-800">
                                            @Model.RecordType
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Description -->
            <div class="bg-white rounded-2xl shadow-lg border border-indigo-200 overflow-hidden">
                <div class="bg-gradient-to-r from-indigo-50 to-blue-50 border-b border-indigo-100 p-6">
                    <h3 class="text-lg font-semibold text-gray-800 flex items-center space-x-2">
                        <div class="w-8 h-8 bg-indigo-100 rounded-lg flex items-center justify-center">
                            <i class="bi bi-journal-text text-indigo-600"></i>
                        </div>
                        <span>Mô tả chi tiết</span>
                    </h3>
                </div>
                
                <div class="p-6">
                    @if (!string.IsNullOrEmpty(Model.Description))
                    {
                        <div class="prose max-w-none">
                            <p class="text-gray-700 leading-relaxed">@Model.Description</p>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-8">
                            <div class="w-16 h-16 bg-gray-100 rounded-full flex items-center justify-center mx-auto mb-4">
                                <i class="bi bi-journal-x text-2xl text-gray-400"></i>
                            </div>
                            <p class="text-gray-500">Chưa có mô tả cho hồ sơ này</p>
                        </div>
                    }
                </div>
            </div>

            <!-- Results -->
            <div class="bg-white rounded-2xl shadow-lg border border-indigo-200 overflow-hidden">
                <div class="bg-gradient-to-r from-indigo-50 to-blue-50 border-b border-indigo-100 p-6">
                    <h3 class="text-lg font-semibold text-gray-800 flex items-center space-x-2">
                        <div class="w-8 h-8 bg-indigo-100 rounded-lg flex items-center justify-center">
                            <i class="bi bi-clipboard-data text-indigo-600"></i>
                        </div>
                        <span>Kết quả và nhận định</span>
                    </h3>
                </div>
                
                <div class="p-6">
                    @if (!string.IsNullOrEmpty(Model.Results))
                    {
                        <div class="prose max-w-none">
                            <p class="text-gray-700 leading-relaxed">@Model.Results</p>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-8">
                            <div class="w-16 h-16 bg-gray-100 rounded-full flex items-center justify-center mx-auto mb-4">
                                <i class="bi bi-clipboard-x text-2xl text-gray-400"></i>
                            </div>
                            <p class="text-gray-500">Chưa có kết quả cho hồ sơ này</p>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Sidebar -->
        <div class="lg:col-span-1">
            <!-- Attachment -->
            <div class="bg-white rounded-2xl shadow-lg border border-indigo-200 overflow-hidden">
                <div class="bg-gradient-to-r from-indigo-50 to-blue-50 border-b border-indigo-100 p-6">
                    <h3 class="text-lg font-semibold text-gray-800 flex items-center space-x-2">
                        <div class="w-8 h-8 bg-indigo-100 rounded-lg flex items-center justify-center">
                            <i class="bi bi-paperclip text-indigo-600"></i>
                        </div>
                        <span>Tệp đính kèm</span>
                    </h3>
                </div>
                
                <div class="p-6">
                    @if (!string.IsNullOrEmpty(Model.AttachmentPath))
                    {
                        <div class="space-y-4">
                            <a asp-action="DownloadAttachment" asp-route-id="@Model.Id" 
                               class="w-full bg-green-600 text-white py-3 px-4 rounded-xl font-medium hover:bg-green-700 transition-colors duration-200 flex items-center justify-center space-x-2">
                                <i class="bi bi-download"></i>
                                <span>Tải xuống tệp đính kèm</span>
                            </a>
                            
                            @if (Model.AttachmentPath.EndsWith(".jpg") || Model.AttachmentPath.EndsWith(".jpeg") || Model.AttachmentPath.EndsWith(".png"))
                            {
                                <div class="border rounded-xl overflow-hidden">
                                    <img src="@Model.AttachmentPath" class="w-full h-auto" alt="Hình ảnh đính kèm" />
                                </div>
                            }
                            else
                            {
                                <div class="bg-gray-50 rounded-xl p-6 text-center">
                                    <div class="w-16 h-16 bg-gray-200 rounded-full flex items-center justify-center mx-auto mb-3">
                                        <i class="bi bi-file-earmark text-2xl text-gray-500"></i>
                                    </div>
                                    <p class="text-gray-600 text-sm">Tệp đính kèm có sẵn</p>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-8">
                            <div class="w-16 h-16 bg-gray-100 rounded-full flex items-center justify-center mx-auto mb-4">
                                <i class="bi bi-file-earmark-plus text-2xl text-gray-400"></i>
                            </div>
                            <p class="text-gray-500">Không có tệp đính kèm</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div> 