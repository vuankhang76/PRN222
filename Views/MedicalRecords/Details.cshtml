@model InfertilityApp.Models.MedicalRecord

@{
    ViewData["Title"] = "Chi tiết hồ sơ y tế";
}

<div class="container-fluid">
    <h1 class="mt-4">Chi tiết hồ sơ y tế</h1>
    
    <div class="card mb-4">
        <div class="card-header">
            <h4>@Model.RecordTitle</h4>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <dl class="row">
                        <dt class="col-sm-4">Bệnh nhân:</dt>
                        <dd class="col-sm-8">@Model.Patient?.FullName</dd>
                        
                        <dt class="col-sm-4">Bác sĩ:</dt>
                        <dd class="col-sm-8">@(Model.Doctor?.FullName ?? "Không có")</dd>
                        
                        <dt class="col-sm-4">Ngày ghi nhận:</dt>
                        <dd class="col-sm-8">@Model.RecordDate.ToString("dd/MM/yyyy")</dd>
                        
                        <dt class="col-sm-4">Loại hồ sơ:</dt>
                        <dd class="col-sm-8">@Model.RecordType</dd>
                    </dl>
                </div>
                <div class="col-md-6">
                    @if (!string.IsNullOrEmpty(Model.AttachmentPath))
                    {
                        <div class="card">
                            <div class="card-header">
                                <h5>Tệp đính kèm</h5>
                            </div>
                            <div class="card-body">
                                <a asp-action="DownloadAttachment" asp-route-id="@Model.Id" class="btn btn-primary">
                                    <i class="fas fa-download"></i> Tải xuống tệp đính kèm
                                </a>
                                @if (Model.AttachmentPath.EndsWith(".jpg") || Model.AttachmentPath.EndsWith(".jpeg") || Model.AttachmentPath.EndsWith(".png"))
                                {
                                    <div class="mt-3">
                                        <img src="@Model.AttachmentPath" class="img-fluid" alt="Hình ảnh đính kèm" />
                                    </div>
                                }
                            </div>
                        </div>
                    }
                </div>
            </div>
            
            <div class="row mt-4">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header">
                            <h5>Mô tả</h5>
                        </div>
                        <div class="card-body">
                            <p>@Model.Description</p>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="row mt-4">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header">
                            <h5>Kết quả</h5>
                        </div>
                        <div class="card-body">
                            <p>@Model.Results</p>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="mt-4">
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Sửa</a>
                <a asp-action="Index" class="btn btn-secondary">Quay lại danh sách</a>
                <a asp-action="PatientHistory" asp-route-id="@Model.PatientId" class="btn btn-info">Xem lịch sử bệnh nhân</a>
            </div>
        </div>
    </div>
</div> 