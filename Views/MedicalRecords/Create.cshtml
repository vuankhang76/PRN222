@model InfertilityApp.Models.MedicalRecord

@{
    ViewData["Title"] = "Thêm hồ sơ y tế mới";
    string? patientName = ViewData["PatientName"] as string;
    int? patientId = ViewData["PatientId"] as int?;
}

<div class="p-6 space-y-6 bg-gray-50 min-h-screen">
    <!-- Header Section -->
    <div class="bg-white rounded-2xl shadow-lg border border-indigo-200 overflow-hidden">
        <div class="bg-gradient-to-r from-indigo-600 via-blue-600 to-purple-600 text-white p-6">
            <div class="flex items-center justify-between">
                <div class="flex items-center space-x-4">
                    <div class="w-16 h-16 bg-white/20 rounded-2xl flex items-center justify-center backdrop-blur-sm">
                        <i class="bi bi-file-earmark-plus text-3xl text-white"></i>
                    </div>
                    <div>
                        <h1 class="text-3xl font-bold mb-2">Thêm hồ sơ y tế mới</h1>
                        @if (!string.IsNullOrEmpty(patientName))
                        {
                            <p class="text-indigo-100 text-lg">Tạo hồ sơ cho bệnh nhân: <span class="font-semibold">@patientName</span></p>
                        }
                        else
                        {
                            <p class="text-indigo-100 text-lg">Tạo hồ sơ y tế mới trong hệ thống</p>
                        }
                    </div>
                </div>
                <div class="flex items-center space-x-3">
                    <a asp-action="Index" 
                       class="bg-white/20 backdrop-blur-sm text-white px-4 py-2 rounded-xl hover:bg-white/30 transition-all duration-300 flex items-center space-x-2">
                        <i class="bi bi-arrow-left"></i>
                        <span>Quay lại</span>
                    </a>
                </div>
            </div>
        </div>
        
        <!-- Breadcrumb -->
        <div class="p-4 bg-gradient-to-r from-indigo-50 to-blue-50 border-b border-indigo-100">
            <nav class="flex items-center space-x-2 text-sm">
                <a asp-action="Index" class="text-indigo-600 hover:text-indigo-700 transition-colors duration-200 flex items-center space-x-1">
                    <i class="bi bi-house"></i>
                    <span>Hồ sơ y tế</span>
                </a>
                <i class="bi bi-chevron-right text-gray-400"></i>
                <span class="text-gray-600 font-medium">Thêm mới</span>
            </nav>
        </div>
    </div>

    <!-- Form Section -->
    <div class="bg-white rounded-2xl shadow-lg border border-indigo-200 overflow-hidden">
        <div class="p-6">
            <form asp-action="Create" class="space-y-6">
                <div asp-validation-summary="ModelOnly" class="bg-red-50 border border-red-200 text-red-800 px-4 py-3 rounded-lg"></div>
                
                <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
                    <!-- Left Column -->
                    <div class="space-y-6">
                        <!-- Patient Selection -->
                        <div class="bg-gradient-to-r from-green-50 to-emerald-50 p-6 rounded-xl border border-green-200">
                            <h3 class="text-lg font-semibold text-gray-800 mb-4 flex items-center space-x-2">
                                <div class="w-8 h-8 bg-green-100 rounded-lg flex items-center justify-center">
                                    <i class="bi bi-person text-green-600"></i>
                                </div>
                                <span>Thông tin bệnh nhân</span>
                            </h3>
                            
                            <div class="space-y-4">
                                <div>
                                    <label asp-for="PatientId" class="block text-sm font-medium text-gray-700 mb-2">
                                        Bệnh nhân <span class="text-red-500">*</span>
                                    </label>
                                    <select asp-for="PatientId" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:border-indigo-500 focus:outline-none focus:ring-2 focus:ring-indigo-100 transition-colors duration-200" asp-items="ViewBag.PatientId">
                                        <option value="">-- Chọn bệnh nhân --</option>
                                    </select>
                                    <span asp-validation-for="PatientId" class="text-red-500 text-sm"></span>
                                </div>
                                
                                <div>
                                    <label asp-for="DoctorId" class="block text-sm font-medium text-gray-700 mb-2">
                                        Bác sĩ phụ trách
                                    </label>
                                    <select asp-for="DoctorId" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:border-indigo-500 focus:outline-none focus:ring-2 focus:ring-indigo-100 transition-colors duration-200" asp-items="ViewBag.DoctorId">
                                        <option value="">-- Chọn bác sĩ --</option>
                                    </select>
                                    <span asp-validation-for="DoctorId" class="text-red-500 text-sm"></span>
                                </div>
                            </div>
                        </div>

                        <!-- Record Information -->
                        <div class="bg-gradient-to-r from-blue-50 to-indigo-50 p-6 rounded-xl border border-blue-200">
                            <h3 class="text-lg font-semibold text-gray-800 mb-4 flex items-center space-x-2">
                                <div class="w-8 h-8 bg-blue-100 rounded-lg flex items-center justify-center">
                                    <i class="bi bi-clipboard-data text-blue-600"></i>
                                </div>
                                <span>Thông tin hồ sơ</span>
                            </h3>
                            
                            <div class="space-y-4">
                                <div>
                                    <label asp-for="RecordDate" class="block text-sm font-medium text-gray-700 mb-2">
                                        Ngày ghi nhận <span class="text-red-500">*</span>
                                    </label>
                                    <input asp-for="RecordDate" type="date" 
                                           class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:border-indigo-500 focus:outline-none focus:ring-2 focus:ring-indigo-100 transition-colors duration-200" />
                                    <span asp-validation-for="RecordDate" class="text-red-500 text-sm"></span>
                                </div>
                                
                                <div>
                                    <label asp-for="RecordType" class="block text-sm font-medium text-gray-700 mb-2">
                                        Loại hồ sơ <span class="text-red-500">*</span>
                                    </label>
                                    <select asp-for="RecordType" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:border-indigo-500 focus:outline-none focus:ring-2 focus:ring-indigo-100 transition-colors duration-200">
                                        <option value="">-- Chọn loại hồ sơ --</option>
                                        @if (ViewData["RecordTypes"] is List<string> recordTypes)
                                        {
                                            foreach (var type in recordTypes)
                                            {
                                                <option value="@type">@type</option>
                                            }
                                        }
                                    </select>
                                    <span asp-validation-for="RecordType" class="text-red-500 text-sm"></span>
                                </div>
                                
                                <div>
                                    <label asp-for="RecordTitle" class="block text-sm font-medium text-gray-700 mb-2">
                                        Tiêu đề hồ sơ <span class="text-red-500">*</span>
                                    </label>
                                    <input asp-for="RecordTitle" 
                                           class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:border-indigo-500 focus:outline-none focus:ring-2 focus:ring-indigo-100 transition-colors duration-200"
                                           placeholder="Nhập tiêu đề cho hồ sơ y tế..." />
                                    <span asp-validation-for="RecordTitle" class="text-red-500 text-sm"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Right Column -->
                    <div class="space-y-6">
                        <!-- Description -->
                        <div class="bg-gradient-to-r from-purple-50 to-violet-50 p-6 rounded-xl border border-purple-200">
                            <h3 class="text-lg font-semibold text-gray-800 mb-4 flex items-center space-x-2">
                                <div class="w-8 h-8 bg-purple-100 rounded-lg flex items-center justify-center">
                                    <i class="bi bi-journal-text text-purple-600"></i>
                                </div>
                                <span>Mô tả chi tiết</span>
                            </h3>
                            
                            <div>
                                <label asp-for="Description" class="block text-sm font-medium text-gray-700 mb-2">
                                    Mô tả tình trạng
                                </label>
                                <textarea asp-for="Description" rows="6"
                                          class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:border-indigo-500 focus:outline-none focus:ring-2 focus:ring-indigo-100 transition-colors duration-200 resize-none"
                                          placeholder="Mô tả chi tiết về tình trạng bệnh nhân, triệu chứng, quá trình khám..."></textarea>
                                <span asp-validation-for="Description" class="text-red-500 text-sm"></span>
                            </div>
                        </div>

                        <!-- Results -->
                        <div class="bg-gradient-to-r from-amber-50 to-orange-50 p-6 rounded-xl border border-amber-200">
                            <h3 class="text-lg font-semibold text-gray-800 mb-4 flex items-center space-x-2">
                                <div class="w-8 h-8 bg-amber-100 rounded-lg flex items-center justify-center">
                                    <i class="bi bi-clipboard-check text-amber-600"></i>
                                </div>
                                <span>Kết quả và nhận định</span>
                            </h3>
                            
                            <div>
                                <label asp-for="Results" class="block text-sm font-medium text-gray-700 mb-2">
                                    Kết quả xét nghiệm/khám
                                </label>
                                <textarea asp-for="Results" rows="6"
                                          class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:border-indigo-500 focus:outline-none focus:ring-2 focus:ring-indigo-100 transition-colors duration-200 resize-none"
                                          placeholder="Ghi nhận kết quả xét nghiệm, chẩn đoán, nhận định của bác sĩ..."></textarea>
                                <span asp-validation-for="Results" class="text-red-500 text-sm"></span>
                            </div>
                        </div>
                    </div>
                </div>
                
                <!-- Action Buttons -->
                <div class="flex justify-end space-x-4 pt-6 border-t border-gray-200">
                    <a asp-action="Index" 
                       class="px-6 py-3 bg-gray-600 text-white rounded-lg hover:bg-gray-700 transition-colors duration-200 flex items-center space-x-2">
                        <i class="bi bi-x-lg"></i>
                        <span>Hủy bỏ</span>
                    </a>
                    <button type="submit" 
                            class="px-6 py-3 bg-gradient-to-r from-indigo-600 to-purple-600 text-white rounded-lg hover:from-indigo-700 hover:to-purple-700 transition-all duration-300 flex items-center space-x-2 shadow-lg">
                        <i class="bi bi-plus-circle"></i>
                        <span>Tạo hồ sơ</span>
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        $(document).ready(function() {
            // Set default date to today
            var today = new Date().toISOString().split('T')[0];
            $('#RecordDate').val(today);
            
            // Auto-resize textareas
            $('textarea').on('input', function() {
                this.style.height = 'auto';
                this.style.height = this.scrollHeight + 'px';
            });
        });
    </script>
} 