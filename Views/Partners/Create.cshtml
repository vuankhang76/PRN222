@model InfertilityApp.Models.Partner

@{
    ViewData["Title"] = "Thêm thông tin người phối mẫu";
}

<div class="flex justify-between items-center mb-6">
    <h2 class="text-3xl font-bold text-gray-900">Thêm thông tin người phối mẫu</h2>
    <a asp-action="Index" class="bg-gray-500 text-white px-4 py-2 rounded-lg hover:bg-gray-600 transition-colors duration-200 flex items-center">
        <i class="bi bi-arrow-left mr-2"></i> Quay lại danh sách
    </a>
</div>

<div class="bg-white rounded-lg shadow-lg">
    <div class="p-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="bg-red-50 border border-red-200 text-red-700 px-4 py-3 rounded-lg mb-4"></div>
            
            <!-- Chọn bệnh nhân -->
            <div class="mb-6 p-4 bg-blue-50 border border-blue-200 rounded-lg">
                <h3 class="text-lg font-semibold text-blue-800 mb-3">
                    <i class="bi bi-person-heart mr-2"></i>Thông tin liên kết
                </h3>
                <div>
                    <label asp-for="PatientId" class="block text-sm font-semibold text-gray-700 mb-2">Bệnh nhân</label>
                    <select asp-for="PatientId" asp-items="ViewBag.PatientId" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200">
                        <option value="">-- Chọn bệnh nhân --</option>
                    </select>
                    <span asp-validation-for="PatientId" class="text-red-500 text-sm mt-1 block"></span>
                </div>
            </div>

            <!-- Thông tin cá nhân -->
            <div class="mb-6">
                <h3 class="text-lg font-semibold text-gray-800 mb-4">
                    <i class="bi bi-person-badge mr-2"></i>Thông tin cá nhân
                </h3>
                <div class="grid grid-cols-1 md:grid-cols-12 gap-4">
                    <div class="md:col-span-6">
                        <label asp-for="FullName" class="block text-sm font-semibold text-gray-700 mb-2">Họ và tên</label>
                        <input asp-for="FullName" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200" placeholder="Nhập họ và tên đầy đủ" />
                        <span asp-validation-for="FullName" class="text-red-500 text-sm mt-1 block"></span>
                    </div>
                    <div class="md:col-span-3">
                        <label asp-for="DateOfBirth" class="block text-sm font-semibold text-gray-700 mb-2">Ngày sinh</label>
                        <input asp-for="DateOfBirth" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200" type="date" />
                        <span asp-validation-for="DateOfBirth" class="text-red-500 text-sm mt-1 block"></span>
                    </div>
                    <div class="md:col-span-3">
                        <label asp-for="Gender" class="block text-sm font-semibold text-gray-700 mb-2">Giới tính</label>
                        <select asp-for="Gender" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200">
                            <option value="">-- Chọn giới tính --</option>
                            <option value="Nam">Nam</option>
                            <option value="Nữ">Nữ</option>
                        </select>
                        <span asp-validation-for="Gender" class="text-red-500 text-sm mt-1 block"></span>
                    </div>
                </div>
            </div>

            <!-- Thông tin liên hệ -->
            <div class="mb-6">
                <h3 class="text-lg font-semibold text-gray-800 mb-4">
                    <i class="bi bi-telephone mr-2"></i>Thông tin liên hệ
                </h3>
                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                    <div>
                        <label asp-for="PhoneNumber" class="block text-sm font-semibold text-gray-700 mb-2">Số điện thoại</label>
                        <input asp-for="PhoneNumber" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200" placeholder="Ví dụ: 0901234567" />
                        <span asp-validation-for="PhoneNumber" class="text-red-500 text-sm mt-1 block"></span>
                    </div>
                    <div>
                        <label asp-for="Email" class="block text-sm font-semibold text-gray-700 mb-2">Email</label>
                        <input asp-for="Email" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200" type="email" placeholder="Ví dụ: example@email.com" />
                        <span asp-validation-for="Email" class="text-red-500 text-sm mt-1 block"></span>
                    </div>
                </div>
                
                <div class="mt-4">
                    <label asp-for="Occupation" class="block text-sm font-semibold text-gray-700 mb-2">Nghề nghiệp</label>
                    <input asp-for="Occupation" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200" placeholder="Ví dụ: Kỹ sư, Bác sĩ, Giáo viên..." />
                    <span asp-validation-for="Occupation" class="text-red-500 text-sm mt-1 block"></span>
                </div>
            </div>

            <!-- Tiền sử bệnh -->
            <div class="mb-6">
                <h3 class="text-lg font-semibold text-gray-800 mb-4">
                    <i class="bi bi-clipboard-heart mr-2"></i>Thông tin y tế
                </h3>
                <div>
                    <label asp-for="MedicalHistory" class="block text-sm font-semibold text-gray-700 mb-2">Tiền sử bệnh lý</label>
                    <textarea asp-for="MedicalHistory" rows="4" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200" placeholder="Nhập thông tin về tiền sử bệnh lý, dị ứng, phẫu thuật trước đây (nếu có)..."></textarea>
                    <span asp-validation-for="MedicalHistory" class="text-red-500 text-sm mt-1 block"></span>
                </div>
            </div>

            <!-- Buttons -->
            <div class="flex justify-end space-x-4 pt-6 border-t border-gray-200">
                <a asp-action="Index" class="bg-gray-500 text-white px-6 py-2 rounded-lg hover:bg-gray-600 transition-colors duration-200 flex items-center">
                    <i class="bi bi-x-circle mr-2"></i>Hủy
                </a>
                <button type="submit" class="bg-blue-600 text-white px-6 py-2 rounded-lg hover:bg-blue-700 transition-colors duration-200 flex items-center">
                    <i class="bi bi-check-circle mr-2"></i>Lưu thông tin
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}