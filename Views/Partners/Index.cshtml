@model IEnumerable<InfertilityApp.Models.Partner>

@{
    ViewData["Title"] = "Quản lý thông tin người phối mẫu";
}

<div class="flex justify-between items-center mb-6">
    <h2 class="text-3xl font-bold text-gray-900">Quản lý thông tin người phối mẫu</h2>
    <a asp-action="Create" class="bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700 transition-colors duration-200 flex items-center">
        <i class="bi bi-plus-circle mr-2"></i> Thêm người phối mẫu
    </a>
</div>

<!-- Search and Filter Section -->
<div class="bg-white rounded-lg shadow-md p-6 mb-6">
    <form method="get" asp-action="Index">
        <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
            <div>
                <label class="block text-sm font-semibold text-gray-700 mb-2">Tìm kiếm</label>
                <input type="text" name="searchString" value="@ViewData["SearchString"]" placeholder="Tìm theo tên hoặc email..." 
                       class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent" />
            </div>
            <div>
                <label class="block text-sm font-semibold text-gray-700 mb-2">Giới tính</label>
                <select name="gender" asp-items="ViewBag.Genders" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent">
                    <option value="">-- Tất cả --</option>
                </select>
            </div>
            <div>
                <label class="block text-sm font-semibold text-gray-700 mb-2">Từ tuổi</label>
                <input type="number" name="ageFrom" value="@ViewData["AgeFrom"]" min="0" max="100" 
                       class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent" />
            </div>
            <div>
                <label class="block text-sm font-semibold text-gray-700 mb-2">Đến tuổi</label>
                <input type="number" name="ageTo" value="@ViewData["AgeTo"]" min="0" max="100" 
                       class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent" />
            </div>
        </div>
        <div class="mt-4 flex justify-end space-x-2">
            <button type="submit" class="bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700 transition-colors">
                <i class="bi bi-search mr-2"></i>Tìm kiếm
            </button>
            <a asp-action="Index" class="bg-gray-500 text-white px-4 py-2 rounded-lg hover:bg-gray-600 transition-colors">
                <i class="bi bi-arrow-clockwise mr-2"></i>Đặt lại
            </a>
        </div>
    </form>
</div>

<!-- Partners Table -->
<div class="bg-white rounded-lg shadow-md overflow-hidden">
    @if (Model.Any())
    {
        <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-gray-50">
                    <tr>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                            Thông tin cá nhân
                        </th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                            Giới tính
                        </th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                            Liên hệ
                        </th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                            Nghề nghiệp
                        </th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                            Bệnh nhân liên kết
                        </th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                            Thao tác
                        </th>
                    </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                    @foreach (var partner in Model)
                    {
                        <tr class="hover:bg-gray-50 transition-colors duration-200">
                            <td class="px-6 py-4 whitespace-nowrap">
                                <div class="flex items-center">
                                    <div class="flex-shrink-0 h-12 w-12">
                                        <div class="h-12 w-12 rounded-full bg-gradient-to-r from-blue-400 to-purple-500 flex items-center justify-center text-white font-semibold">
                                            @partner.FullName.Substring(0, 1).ToUpper()
                                        </div>
                                    </div>
                                    <div class="ml-4">
                                        <div class="text-sm font-medium text-gray-900">
                                            @partner.FullName
                                        </div>
                                        <div class="text-sm text-gray-500">
                                            @partner.DateOfBirth.ToString("dd/MM/yyyy") 
                                            (@((int)((DateTime.Now - partner.DateOfBirth).TotalDays / 365.25)) tuổi)
                                        </div>
                                    </div>
                                </div>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full 
                                    @(partner.Gender == "Nam" ? "bg-blue-100 text-blue-800" : "bg-pink-100 text-pink-800")">
                                    @partner.Gender
                                </span>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                                <div>
                                    @if (!string.IsNullOrEmpty(partner.PhoneNumber))
                                    {
                                        <div class="flex items-center mb-1">
                                            <i class="bi bi-telephone text-gray-400 mr-1"></i>
                                            @partner.PhoneNumber
                                        </div>
                                    }
                                    @if (!string.IsNullOrEmpty(partner.Email))
                                    {
                                        <div class="flex items-center">
                                            <i class="bi bi-envelope text-gray-400 mr-1"></i>
                                            @partner.Email
                                        </div>
                                    }
                                </div>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                                @(partner.Occupation ?? "Chưa cập nhật")
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                                <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-green-100 text-green-800">
                                    ID: @partner.PatientId
                                </span>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium space-x-2">
                                <a asp-action="Details" asp-route-id="@partner.Id" 
                                   class="text-blue-600 hover:text-blue-900 transition-colors duration-200">
                                    <i class="bi bi-eye"></i> Xem
                                </a>
                                <a asp-action="Edit" asp-route-id="@partner.Id" 
                                   class="text-indigo-600 hover:text-indigo-900 transition-colors duration-200">
                                    <i class="bi bi-pencil"></i> Sửa
                                </a>
                                <a asp-action="Delete" asp-route-id="@partner.Id" 
                                   class="text-red-600 hover:text-red-900 transition-colors duration-200"
                                   onclick="return confirm('Bạn có chắc chắn muốn xóa thông tin bạn đời này?')">
                                    <i class="bi bi-trash"></i> Xóa
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="text-center py-12">
            <div class="flex flex-col items-center">
                <i class="bi bi-people text-6xl text-gray-300 mb-4"></i>
                <h3 class="text-lg font-medium text-gray-900 mb-2">Chưa có thông tin người phối mẫu nào</h3>
                <p class="text-gray-500 mb-4">Hãy thêm thông tin người phối mẫu để bắt đầu quản lý.</p>
                <a asp-action="Create" class="bg-blue-600 text-white px-6 py-3 rounded-lg hover:bg-blue-700 transition-colors duration-200 flex items-center">
                    <i class="bi bi-plus-circle mr-2"></i> Thêm người phối mẫu đầu tiên
                </a>
            </div>
        </div>
    }
</div>

@if (Model.Any())
{
    <div class="mt-6 text-sm text-gray-500 text-center">
        Hiển thị @Model.Count() người phối mẫu
    </div>
}