@model IEnumerable<InfertilityApp.Models.Partner>

@{
    ViewData["Title"] = "Danh sách người phối ngẫu";
}

<div class="container mx-auto px-4 py-6">
    <div class="mb-6">
        <div class="flex justify-between items-center">
            <h2 class="text-2xl font-bold">Danh sách người phối ngẫu</h2>
        </div>
    </div>

    <div class="bg-white shadow-md rounded-lg overflow-hidden">
        <div class="p-6">
            <form method="get" class="mb-6">
                <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
                    <div>
                        <input type="text" name="searchString" value="@ViewData["SearchString"]"
                               class="w-full border border-gray-300 rounded px-3 py-2"
                               placeholder="Tìm kiếm theo tên, email..." />
                    </div>
                    <div>
                        <select name="gender" class="w-full border border-gray-300 rounded px-3 py-2"
                                asp-items='@(new SelectList(new[] { "Nam", "Nữ" }, ViewData["Gender"]))'>
                            <option value="">-- Tất cả giới tính --</option>
                        </select>
                    </div>
                    <div class="flex gap-2">
                        <input type="number" name="ageFrom" value="@ViewData["AgeFrom"]"
                               class="w-full border border-gray-300 rounded px-3 py-2"
                               placeholder="Từ tuổi" />
                        <input type="number" name="ageTo" value="@ViewData["AgeTo"]"
                               class="w-full border border-gray-300 rounded px-3 py-2"
                               placeholder="Đến tuổi" />
                    </div>
                    <div>
                        <button type="submit" class="bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded">
                            <i class="bi bi-search"></i> Tìm kiếm
                        </button>
                    </div>
                </div>
            </form>

            <div class="overflow-x-auto">
                <table class="min-w-full divide-y divide-gray-200">
                    <thead>
                        <tr>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Họ và tên</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Ngày sinh</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Giới tính</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Số điện thoại</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Email</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Bệnh nhân</th>
                            <th class="px-6 py-3"></th>
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-gray-200">
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="px-6 py-4">@item.FullName</td>
                                <td class="px-6 py-4">@item.DateOfBirth.ToString("dd/MM/yyyy")</td>
                                <td class="px-6 py-4">@item.Gender</td>
                                <td class="px-6 py-4">@item.PhoneNumber</td>
                                <td class="px-6 py-4">@item.Email</td>
                                <td class="px-6 py-4">
                                    <a asp-controller="Patients" asp-action="Details" asp-route-id="@item.PatientId"
                                       class="text-blue-600 hover:text-blue-900">
                                        Xem bệnh nhân
                                    </a>
                                </td>
                                <td class="px-6 py-4 text-right space-x-2">
                                    <a asp-action="Details" asp-route-id="@item.Id"
                                       class="text-blue-600 hover:text-blue-900">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@item.Id"
                                       class="text-green-600 hover:text-green-900">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.Id"
                                       class="text-red-600 hover:text-red-900">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
