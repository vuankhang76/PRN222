@model InfertilityApp.Models.ViewModels.DiagnosisViewModel
@{
    ViewData["Title"] = "Thông tin cá nhân";
}

<div class="min-h-screen bg-gray-50 py-8">
    <div class="container mx-auto px-4">
        <div class="max-w-2xl mx-auto">
            <div class="bg-white rounded-lg shadow-lg p-8">
                <div class="text-center mb-8">
                    <h1 class="text-3xl font-bold text-gray-800 mb-4">Thông tin cá nhân</h1>
                    <p class="text-gray-600">Vui lòng cung cấp thông tin cá nhân để chúng tôi có thể đưa ra đánh giá chính xác nhất</p>
                </div>

                <form asp-action="Questions" method="post" class="space-y-6">
                    <div class="grid md:grid-cols-2 gap-6">
                        <div>
                            <label asp-for="FullName" class="block text-sm font-medium text-gray-700 mb-2"></label>
                            <input asp-for="FullName" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" />
                            <span asp-validation-for="FullName" class="text-red-500 text-sm"></span>
                        </div>

                        <div>
                            <label asp-for="DateOfBirth" class="block text-sm font-medium text-gray-700 mb-2"></label>
                            <input asp-for="DateOfBirth" type="date" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" />
                            <span asp-validation-for="DateOfBirth" class="text-red-500 text-sm"></span>
                        </div>
                    </div>

                    <div>
                        <label asp-for="Gender" class="block text-sm font-medium text-gray-700 mb-2"></label>
                        <div class="grid grid-cols-2 gap-4">
                            <label class="flex items-center p-4 border border-gray-300 rounded-md cursor-pointer hover:bg-gray-50">
                                <input asp-for="Gender" type="radio" value="2" class="mr-3" />
                                <span>Nữ</span>
                            </label>
                            <label class="flex items-center p-4 border border-gray-300 rounded-md cursor-pointer hover:bg-gray-50">
                                <input asp-for="Gender" type="radio" value="1" class="mr-3" />
                                <span>Nam</span>
                            </label>
                        </div>
                        <span asp-validation-for="Gender" class="text-red-500 text-sm"></span>
                    </div>

                    <div class="grid md:grid-cols-2 gap-6">
                        <div>
                            <label asp-for="PhoneNumber" class="block text-sm font-medium text-gray-700 mb-2"></label>
                            <input asp-for="PhoneNumber" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" />
                            <span asp-validation-for="PhoneNumber" class="text-red-500 text-sm"></span>
                        </div>

                        <div>
                            <label asp-for="Email" class="block text-sm font-medium text-gray-700 mb-2"></label>
                            <input asp-for="Email" type="email" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" />
                            <span asp-validation-for="Email" class="text-red-500 text-sm"></span>
                        </div>
                    </div>

                    <div>
                        <label asp-for="Address" class="block text-sm font-medium text-gray-700 mb-2"></label>
                        <textarea asp-for="Address" rows="3" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"></textarea>
                        <span asp-validation-for="Address" class="text-red-500 text-sm"></span>
                    </div>

                    <div class="bg-blue-50 p-4 rounded-lg">
                        <h3 class="font-medium text-blue-800 mb-2">Cam kết bảo mật thông tin</h3>
                        <p class="text-blue-700 text-sm">
                            Thông tin cá nhân của bạn sẽ được bảo mật tuyệt đối và chỉ sử dụng cho mục đích chẩn đoán. 
                            Chúng tôi không chia sẻ thông tin với bên thứ ba.
                        </p>
                    </div>

                    <div class="flex justify-between">
                        <a href="@Url.Action("Index", "Home")" 
                           class="px-6 py-3 bg-gray-300 text-gray-700 rounded-md hover:bg-gray-400 transition duration-300">
                            Quay lại
                        </a>
                        <button type="submit" 
                                class="px-6 py-3 bg-blue-600 text-white rounded-md hover:bg-blue-700 transition duration-300">
                            Tiếp tục
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 