@model InfertilityApp.Models.Doctor

@{
    ViewData["Title"] = "Thêm bác sĩ mới";
}

<div class="p-6 space-y-6 bg-gray-50 min-h-screen">
    <!-- Header Section -->
    <div class="bg-white rounded-2xl shadow-lg border border-blue-200 overflow-hidden">
        <div class="bg-gradient-to-r from-blue-600 via-purple-500 to-green-600 text-white p-6">
            <div class="flex items-center space-x-4">
                <div class="w-16 h-16 bg-white/20 rounded-2xl flex items-center justify-center backdrop-blur-sm">
                    <i class="bi bi-person-plus text-3xl text-white"></i>
                </div>
                <div>
                    <h1 class="text-3xl font-bold mb-2">Thêm bác sĩ mới</h1>
                    <p class="text-blue-100 text-lg">Đăng ký thông tin bác sĩ vào hệ thống</p>
                </div>
            </div>
        </div>
        
        <!-- Breadcrumb -->
        <div class="p-4 bg-gradient-to-r from-blue-50 to-green-50 border-b border-blue-100">
            <nav class="flex items-center space-x-2 text-sm">
                <a asp-action="Index" class="text-blue-600 hover:text-blue-700 transition-colors duration-200 flex items-center space-x-1">
                    <i class="bi bi-house"></i>
                    <span>Danh sách bác sĩ</span>
                </a>
                <i class="bi bi-chevron-right text-gray-400"></i>
                <span class="text-gray-600 font-medium">Thêm mới</span>
            </nav>
        </div>
    </div>

    <!-- Form Section -->
    <div class="bg-white rounded-2xl shadow-lg border border-blue-200 overflow-hidden">
        <div class="p-8">
            <form asp-action="Create" class="space-y-6">
                <!-- Validation Summary -->
                <div asp-validation-summary="ModelOnly" class="bg-red-50 border border-red-200 text-red-700 px-4 py-3 rounded-xl">
                    <div class="flex items-center space-x-2">
                        <i class="bi bi-exclamation-triangle-fill text-red-600"></i>
                        <span class="font-medium">Vui lòng kiểm tra lại thông tin đã nhập</span>
                    </div>
                </div>
                
                <!-- Personal Information Section -->
                <div class="space-y-6">
                    <div class="border-b border-gray-200 pb-4">
                        <h3 class="text-lg font-semibold text-gray-800 flex items-center space-x-2">
                            <div class="w-8 h-8 bg-blue-100 rounded-lg flex items-center justify-center">
                                <i class="bi bi-person text-blue-600"></i>
                            </div>
                            <span>Thông tin cá nhân</span>
                        </h3>
                        <p class="text-sm text-gray-600 mt-1">Nhập đầy đủ thông tin cá nhân của bác sĩ</p>
                    </div>
                    
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <div class="space-y-2">
                            <label asp-for="FullName" class="block text-sm font-semibold text-gray-700">
                                <i class="bi bi-person-circle mr-2 text-blue-500"></i>Họ và tên *
                            </label>
                            <input asp-for="FullName" 
                                   class="w-full px-4 py-3 border-2 border-blue-200 rounded-xl focus:border-blue-500 focus:outline-none focus:ring-4 focus:ring-blue-100 transition-all duration-300 bg-white/50 backdrop-blur-sm" 
                                   placeholder="Nhập họ và tên đầy đủ" />
                            <span asp-validation-for="FullName" class="text-red-600 text-sm"></span>
                        </div>
                        
                        <div class="space-y-2">
                            <label asp-for="Specialization" class="block text-sm font-semibold text-gray-700">
                                <i class="bi bi-mortarboard mr-2 text-green-500"></i>Chuyên môn *
                            </label>
                            <input asp-for="Specialization" 
                                   class="w-full px-4 py-3 border-2 border-blue-200 rounded-xl focus:border-blue-500 focus:outline-none focus:ring-4 focus:ring-blue-100 transition-all duration-300 bg-white/50 backdrop-blur-sm" 
                                   placeholder="Ví dụ: Sản phụ khoa, Nội tiết sinh sản" />
                            <span asp-validation-for="Specialization" class="text-red-600 text-sm"></span>
                        </div>
                    </div>
                </div>
                
                <!-- Contact Information Section -->
                <div class="space-y-6">
                    <div class="border-b border-gray-200 pb-4">
                        <h3 class="text-lg font-semibold text-gray-800 flex items-center space-x-2">
                            <div class="w-8 h-8 bg-green-100 rounded-lg flex items-center justify-center">
                                <i class="bi bi-telephone text-green-600"></i>
                            </div>
                            <span>Thông tin liên hệ</span>
                        </h3>
                        <p class="text-sm text-gray-600 mt-1">Cung cấp thông tin để liên hệ với bác sĩ</p>
                    </div>
                    
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <div class="space-y-2">
                            <label asp-for="PhoneNumber" class="block text-sm font-semibold text-gray-700">
                                <i class="bi bi-phone mr-2 text-green-500"></i>Số điện thoại *
                            </label>
                            <input asp-for="PhoneNumber" 
                                   class="w-full px-4 py-3 border-2 border-blue-200 rounded-xl focus:border-blue-500 focus:outline-none focus:ring-4 focus:ring-blue-100 transition-all duration-300 bg-white/50 backdrop-blur-sm" 
                                   placeholder="Ví dụ: 0901234567" />
                            <span asp-validation-for="PhoneNumber" class="text-red-600 text-sm"></span>
                        </div>
                        
                        <div class="space-y-2">
                            <label asp-for="Email" class="block text-sm font-semibold text-gray-700">
                                <i class="bi bi-envelope mr-2 text-green-500"></i>Email *
                            </label>
                            <input asp-for="Email" 
                                   type="email"
                                   class="w-full px-4 py-3 border-2 border-blue-200 rounded-xl focus:border-blue-500 focus:outline-none focus:ring-4 focus:ring-blue-100 transition-all duration-300 bg-white/50 backdrop-blur-sm" 
                                   placeholder="Ví dụ: doctor@email.com" />
                            <span asp-validation-for="Email" class="text-red-600 text-sm"></span>
                        </div>
                    </div>
                </div>
                
                <!-- Professional Information Section -->
                <div class="space-y-6">
                    <div class="border-b border-gray-200 pb-4">
                        <h3 class="text-lg font-semibold text-gray-800 flex items-center space-x-2">
                            <div class="w-8 h-8 bg-purple-100 rounded-lg flex items-center justify-center">
                                <i class="bi bi-award text-purple-600"></i>
                            </div>
                            <span>Thông tin nghề nghiệp</span>
                        </h3>
                        <p class="text-sm text-gray-600 mt-1">Thông tin chứng chỉ và giấy phép hành nghề</p>
                    </div>
                    
                    <div class="space-y-2">
                        <label asp-for="LicenseNumber" class="block text-sm font-semibold text-gray-700">
                            <i class="bi bi-card-text mr-2 text-purple-500"></i>Số giấy phép hành nghề *
                        </label>
                        <input asp-for="LicenseNumber" 
                               class="w-full px-4 py-3 border-2 border-blue-200 rounded-xl focus:border-blue-500 focus:outline-none focus:ring-4 focus:ring-blue-100 transition-all duration-300 bg-white/50 backdrop-blur-sm" 
                               placeholder="Nhập số giấy phép hành nghề" />
                        <span asp-validation-for="LicenseNumber" class="text-red-600 text-sm"></span>
                        <p class="text-xs text-gray-500 flex items-center space-x-1">
                            <i class="bi bi-info-circle"></i>
                            <span>Số giấy phép được cấp bởi Bộ Y tế hoặc Sở Y tế</span>
                        </p>
                    </div>
                </div>
                
                <!-- Action Buttons -->
                <div class="flex flex-col sm:flex-row gap-4 pt-6 border-t border-gray-200">
                    <button type="submit" 
                            class="flex-1 bg-gradient-to-r from-blue-600 to-purple-600 text-white py-3 px-6 rounded-xl font-semibold hover:from-blue-700 hover:to-purple-700 focus:outline-none focus:ring-4 focus:ring-blue-200 transform hover:-translate-y-0.5 hover:shadow-xl transition-all duration-300 flex items-center justify-center space-x-2">
                        <i class="bi bi-check-circle"></i>
                        <span>Thêm bác sĩ mới</span>
                    </button>
                    
                    <a asp-action="Index" 
                       class="flex-1 bg-white border-2 border-gray-300 text-gray-700 py-3 px-6 rounded-xl font-semibold hover:bg-gray-50 hover:border-gray-400 transition-all duration-300 flex items-center justify-center space-x-2">
                        <i class="bi bi-arrow-left"></i>
                        <span>Quay lại danh sách</span>
                    </a>
                </div>
            </form>
        </div>
    </div>
    
    <!-- Help Section -->
    <div class="bg-gradient-to-r from-blue-50 to-green-50 rounded-2xl border border-blue-100 p-6">
        <div class="flex items-start space-x-4">
            <div class="w-12 h-12 bg-blue-100 rounded-xl flex items-center justify-center flex-shrink-0">
                <i class="bi bi-lightbulb text-blue-600 text-xl"></i>
            </div>
            <div>
                <h4 class="font-semibold text-gray-800 mb-2">Lưu ý khi thêm bác sĩ mới</h4>
                <ul class="text-sm text-gray-600 space-y-1">
                    <li class="flex items-center space-x-2">
                        <i class="bi bi-check-circle-fill text-green-500 text-xs"></i>
                        <span>Đảm bảo thông tin chính xác và đầy đủ</span>
                    </li>
                    <li class="flex items-center space-x-2">
                        <i class="bi bi-check-circle-fill text-green-500 text-xs"></i>
                        <span>Số giấy phép hành nghề phải hợp lệ</span>
                    </li>
                    <li class="flex items-center space-x-2">
                        <i class="bi bi-check-circle-fill text-green-500 text-xs"></i>
                        <span>Email sẽ được sử dụng để gửi thông báo</span>
                    </li>
                    <li class="flex items-center space-x-2">
                        <i class="bi bi-check-circle-fill text-green-500 text-xs"></i>
                        <span>Chuyên môn giúp phân loại và tìm kiếm</span>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        // Add focus styling for form inputs
        document.addEventListener('DOMContentLoaded', function() {
            const inputs = document.querySelectorAll('input[type="text"], input[type="email"]');
            inputs.forEach(input => {
                input.addEventListener('focus', function() {
                    this.classList.add('ring-4', 'ring-blue-100', 'border-blue-500');
                });
                
                input.addEventListener('blur', function() {
                    this.classList.remove('ring-4', 'ring-blue-100', 'border-blue-500');
                });
            });
        });
    </script>
} 