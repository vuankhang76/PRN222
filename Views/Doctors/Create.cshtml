@model InfertilityApp.Models.Doctor

@{
    ViewData["Title"] = "Thêm bác sĩ mới";
}

<div class="flex justify-between items-center mb-6">
    <h2 class="text-3xl font-bold text-gray-900">Thêm bác sĩ mới</h2>
    <a asp-action="Index" class="bg-gray-600 text-white px-4 py-2 rounded-lg hover:bg-gray-700 transition-colors duration-200 flex items-center">
        <i class="bi bi-arrow-left mr-2"></i> Quay lại
    </a>
</div>

<div class="bg-white rounded-lg shadow-lg">
    <div class="p-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="mb-4 p-4 bg-red-50 border border-red-200 rounded-lg text-red-700"></div>
            
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                    <label asp-for="FullName" class="block text-sm font-medium text-gray-700 mb-2">Họ và tên</label>
                    <input asp-for="FullName" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent" />
                    <span asp-validation-for="FullName" class="text-red-500 text-sm"></span>
                </div>
                
                <div>
                    <label asp-for="Specialization" class="block text-sm font-medium text-gray-700 mb-2">Chuyên môn</label>
                    <input asp-for="Specialization" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent" />
                    <span asp-validation-for="Specialization" class="text-red-500 text-sm"></span>
                </div>
                
                <div>
                    <label asp-for="PhoneNumber" class="block text-sm font-medium text-gray-700 mb-2">Số điện thoại</label>
                    <input asp-for="PhoneNumber" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent" />
                    <span asp-validation-for="PhoneNumber" class="text-red-500 text-sm"></span>
                </div>
                
                <div>
                    <label asp-for="Email" class="block text-sm font-medium text-gray-700 mb-2">Email</label>
                    <input asp-for="Email" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent" />
                    <span asp-validation-for="Email" class="text-red-500 text-sm"></span>
                </div>
                
                <div class="md:col-span-2">
                    <label asp-for="LicenseNumber" class="block text-sm font-medium text-gray-700 mb-2">Số giấy phép hành nghề</label>
                    <input asp-for="LicenseNumber" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent" />
                    <span asp-validation-for="LicenseNumber" class="text-red-500 text-sm"></span>
                </div>
            </div>
            
            <div class="flex justify-end space-x-4 mt-8 pt-6 border-t border-gray-200">
                <a asp-action="Index" class="bg-gray-500 text-white px-6 py-2 rounded-lg hover:bg-gray-600 transition-colors duration-200">
                    Hủy
                </a>
                <button type="submit" class="bg-blue-600 text-white px-6 py-2 rounded-lg hover:bg-blue-700 transition-colors duration-200 flex items-center">
                    <i class="bi bi-plus-circle mr-2"></i> Thêm bác sĩ
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 