@model InfertilityApp.Models.Doctor

@{
    ViewData["Title"] = "Thêm bác sĩ mới";
}

<div class="flex justify-between items-center mb-6">
    <h2 class="text-3xl font-bold text-gray-900">Thêm bác sĩ mới</h2>
    <a asp-action="Index" class="bg-gray-500 text-white px-4 py-2 rounded-lg hover:bg-gray-600 transition-colors duration-200 flex items-center">
        <i class="bi bi-arrow-left mr-2"></i> Quay lại danh sách
    </a>
</div>

<div class="bg-white rounded-lg shadow-lg">
    <div class="p-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="bg-red-50 border border-red-200 text-red-700 px-4 py-3 rounded-lg mb-4"></div>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                <div>
                    <label asp-for="FullName" class="block text-sm font-semibold text-gray-700 mb-2">Họ và tên</label>
                    <input asp-for="FullName" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200" />
                    <span asp-validation-for="FullName" class="text-red-500 text-sm mt-1 block"></span>
                </div>
                <div>
                    <label asp-for="Specialization" class="block text-sm font-semibold text-gray-700 mb-2">Chuyên môn</label>
                    <input asp-for="Specialization" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200" />
                    <span asp-validation-for="Specialization" class="text-red-500 text-sm mt-1 block"></span>
                </div>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mt-4">
                <div>
                    <label asp-for="PhoneNumber" class="block text-sm font-semibold text-gray-700 mb-2">Số điện thoại</label>
                    <input asp-for="PhoneNumber" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200" />
                    <span asp-validation-for="PhoneNumber" class="text-red-500 text-sm mt-1 block"></span>
                </div>
                <div>
                    <label asp-for="Email" class="block text-sm font-semibold text-gray-700 mb-2">Email</label>
                    <input asp-for="Email" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200" type="email" />
                    <span asp-validation-for="Email" class="text-red-500 text-sm mt-1 block"></span>
                </div>
            </div>

            <div class="mt-4">
                <label asp-for="LicenseNumber" class="block text-sm font-semibold text-gray-700 mb-2">Số giấy phép hành nghề</label>
                <input asp-for="LicenseNumber" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200" />
                <span asp-validation-for="LicenseNumber" class="text-red-500 text-sm mt-1 block"></span>
            </div>

            <div class="flex justify-end space-x-3 mt-6">
                <a asp-action="Index" class="bg-gray-500 text-white px-6 py-2 rounded-lg hover:bg-gray-600 transition-colors duration-200">Hủy</a>
                <button type="submit" class="bg-blue-600 text-white px-6 py-2 rounded-lg hover:bg-blue-700 transition-colors duration-200">Lưu</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
