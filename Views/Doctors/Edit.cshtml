@model InfertilityApp.Models.Doctor

@{
    ViewData["Title"] = "Chỉnh sửa thông tin bác sĩ";
}

<div class="p-6 space-y-6 bg-gray-50 min-h-screen">
    <!-- Header Section -->
    <div class="bg-white rounded-2xl shadow-lg border border-blue-200 overflow-hidden">
        <div class="bg-gradient-to-r from-blue-600 via-purple-500 to-green-600 text-white p-6">
            <div class="flex items-center justify-between">
                <div class="flex items-center space-x-4">
                    <div class="w-16 h-16 bg-white/20 rounded-2xl flex items-center justify-center backdrop-blur-sm">
                        <i class="bi bi-pencil-square text-3xl text-white"></i>
                    </div>
                    <div>
                        <h1 class="text-3xl font-bold mb-2">Chỉnh sửa thông tin bác sĩ</h1>
                        <p class="text-blue-100 text-lg">Cập nhật thông tin cho <span class="font-semibold">@Model.FullName</span></p>
                    </div>
                </div>
                <div class="flex items-center space-x-3">
                    <a asp-action="Details" asp-route-id="@Model.Id" 
                       class="bg-white/20 backdrop-blur-sm text-white px-4 py-2 rounded-xl hover:bg-white/30 transition-all duration-300 flex items-center space-x-2">
                        <i class="bi bi-eye"></i>
                        <span>Xem chi tiết</span>
                    </a>
                    <a asp-action="Index" 
                       class="bg-white/20 backdrop-blur-sm text-white px-4 py-2 rounded-xl hover:bg-white/30 transition-all duration-300 flex items-center space-x-2">
                        <i class="bi bi-arrow-left"></i>
                        <span>Quay lại</span>
                    </a>
                </div>
            </div>
        </div>
        
        <!-- Breadcrumb -->
        <div class="p-4 bg-gradient-to-r from-blue-50 to-purple-50 border-b border-blue-100">
            <nav class="flex items-center space-x-2 text-sm">
                <a asp-action="Index" class="text-blue-600 hover:text-blue-700 transition-colors duration-200 flex items-center space-x-1">
                    <i class="bi bi-house"></i>
                    <span>Danh sách bác sĩ</span>
                </a>
                <i class="bi bi-chevron-right text-gray-400"></i>
                <a asp-action="Details" asp-route-id="@Model.Id" class="text-blue-600 hover:text-blue-700 transition-colors duration-200">@Model.FullName</a>
                <i class="bi bi-chevron-right text-gray-400"></i>
                <span class="text-gray-600 font-medium">Chỉnh sửa</span>
            </nav>
        </div>
    </div>

    <!-- Form Section -->
    <div class="bg-white rounded-2xl shadow-lg border border-blue-200 overflow-hidden">
        <div class="bg-gradient-to-r from-blue-50 to-purple-50 border-b border-blue-100 p-6">
            <h3 class="text-lg font-semibold text-gray-800 flex items-center space-x-2">
                <div class="w-8 h-8 bg-blue-100 rounded-lg flex items-center justify-center">
                    <i class="bi bi-person-gear text-blue-600"></i>
                </div>
                <span>Thông tin bác sĩ</span>
            </h3>
        </div>
        
        <div class="p-6">
            <form asp-action="Edit" class="space-y-6">
                <div asp-validation-summary="ModelOnly" class="bg-red-50 border border-red-200 text-red-700 px-4 py-3 rounded-xl"></div>
                <input type="hidden" asp-for="Id" />
                
                <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
                    <!-- Left Column -->
                    <div class="space-y-6">
                        <!-- Personal Information Section -->
                        <div class="bg-gradient-to-r from-blue-50 to-indigo-50 p-6 rounded-xl border border-blue-100">
                            <h4 class="text-lg font-semibold text-gray-800 mb-4 flex items-center space-x-2">
                                <i class="bi bi-person text-blue-600"></i>
                                <span>Thông tin cá nhân</span>
                            </h4>
                            
                            <div class="space-y-4">
                                <div>
                                    <label asp-for="FullName" class="block text-sm font-medium text-gray-700 mb-2">
                                        <i class="bi bi-person-badge text-blue-600 mr-2"></i>Họ và tên *
                                    </label>
                                    <input asp-for="FullName" 
                                           class="w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all duration-200" 
                                           placeholder="Nhập họ và tên đầy đủ" />
                                    <span asp-validation-for="FullName" class="text-red-500 text-sm mt-1 block"></span>
                                </div>
                                
                                <div>
                                    <label asp-for="Specialization" class="block text-sm font-medium text-gray-700 mb-2">
                                        <i class="bi bi-mortarboard text-purple-600 mr-2"></i>Chuyên môn *
                                    </label>
                                    <input asp-for="Specialization" 
                                           class="w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all duration-200" 
                                           placeholder="Ví dụ: Sản phụ khoa, Nam học..." />
                                    <span asp-validation-for="Specialization" class="text-red-500 text-sm mt-1 block"></span>
                                </div>
                            </div>
                        </div>
                        
                        <!-- Professional Information Section -->
                        <div class="bg-gradient-to-r from-green-50 to-emerald-50 p-6 rounded-xl border border-green-100">
                            <h4 class="text-lg font-semibold text-gray-800 mb-4 flex items-center space-x-2">
                                <i class="bi bi-award text-green-600"></i>
                                <span>Thông tin nghề nghiệp</span>
                            </h4>
                            
                            <div class="space-y-4">
                                <div>
                                    <label asp-for="LicenseNumber" class="block text-sm font-medium text-gray-700 mb-2">
                                        <i class="bi bi-card-text text-green-600 mr-2"></i>Số giấy phép hành nghề
                                    </label>
                                    <input asp-for="LicenseNumber" 
                                           class="w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all duration-200" 
                                           placeholder="Nhập số giấy phép hành nghề" />
                                    <span asp-validation-for="LicenseNumber" class="text-red-500 text-sm mt-1 block"></span>
                                </div>
                                
                                <div>
                                    <label asp-for="Qualifications" class="block text-sm font-medium text-gray-700 mb-2">
                                        <i class="bi bi-award text-green-600 mr-2"></i>Bằng cấp & Chứng chỉ
                                    </label>
                                    <textarea asp-for="Qualifications" rows="3"
                                              class="w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all duration-200" 
                                              placeholder="Nhập các bằng cấp, chứng chỉ..."></textarea>
                                    <span asp-validation-for="Qualifications" class="text-red-500 text-sm mt-1 block"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Right Column -->
                    <div class="space-y-6">
                        <!-- Contact Information Section -->
                        <div class="bg-gradient-to-r from-purple-50 to-indigo-50 p-6 rounded-xl border border-purple-100">
                            <h4 class="text-lg font-semibold text-gray-800 mb-4 flex items-center space-x-2">
                                <i class="bi bi-telephone text-purple-600"></i>
                                <span>Thông tin liên hệ</span>
                            </h4>
                            
                            <div class="space-y-4">
                                <div>
                                    <label asp-for="PhoneNumber" class="block text-sm font-medium text-gray-700 mb-2">
                                        <i class="bi bi-phone text-purple-600 mr-2"></i>Số điện thoại *
                                    </label>
                                    <input asp-for="PhoneNumber" 
                                           class="w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all duration-200" 
                                           placeholder="Nhập số điện thoại" />
                                    <span asp-validation-for="PhoneNumber" class="text-red-500 text-sm mt-1 block"></span>
                                </div>
                                
                                <div>
                                    <label asp-for="Email" class="block text-sm font-medium text-gray-700 mb-2">
                                        <i class="bi bi-envelope text-purple-600 mr-2"></i>Email
                                    </label>
                                    <input asp-for="Email" type="email"
                                           class="w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all duration-200" 
                                           placeholder="Nhập địa chỉ email" />
                                    <span asp-validation-for="Email" class="text-red-500 text-sm mt-1 block"></span>
                                </div>
                            </div>
                        </div>
                        
                        <!-- Biography Section -->
                        <div class="bg-gradient-to-r from-amber-50 to-orange-50 p-6 rounded-xl border border-amber-100">
                            <h4 class="text-lg font-semibold text-gray-800 mb-4 flex items-center space-x-2">
                                <i class="bi bi-person-lines-fill text-amber-600"></i>
                                <span>Tiểu sử nghề nghiệp</span>
                            </h4>
                            
                            <div>
                                <label asp-for="Biography" class="block text-sm font-medium text-gray-700 mb-2">
                                    <i class="bi bi-journal-text text-amber-600 mr-2"></i>Mô tả chi tiết
                                </label>
                                <textarea asp-for="Biography" rows="4"
                                          class="w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all duration-200" 
                                          placeholder="Nhập tiểu sử nghề nghiệp, kinh nghiệm làm việc..."></textarea>
                                <span asp-validation-for="Biography" class="text-red-500 text-sm mt-1 block"></span>
                            </div>
                        </div>
                    </div>
                </div>
                
                <!-- Action Buttons -->
                <div class="flex items-center justify-between pt-6 border-t border-gray-200">
                    <div class="text-sm text-gray-500">
                        <i class="bi bi-info-circle mr-1"></i>
                        Các trường có dấu (*) là bắt buộc
                    </div>
                    
                    <div class="flex items-center space-x-4">
                        <a asp-action="Index" 
                           class="bg-gray-100 text-gray-700 px-6 py-3 rounded-xl hover:bg-gray-200 transition-all duration-300 flex items-center space-x-2">
                            <i class="bi bi-x-circle"></i>
                            <span>Hủy</span>
                        </a>
                        
                        <a asp-action="Details" asp-route-id="@Model.Id"
                           class="bg-blue-100 text-blue-700 px-6 py-3 rounded-xl hover:bg-blue-200 transition-all duration-300 flex items-center space-x-2">
                            <i class="bi bi-eye"></i>
                            <span>Xem chi tiết</span>
                        </a>
                        
                        <button type="submit" 
                                class="bg-gradient-to-r from-blue-600 to-purple-600 text-white px-8 py-3 rounded-xl hover:from-blue-700 hover:to-purple-700 transition-all duration-300 flex items-center space-x-2">
                            <i class="bi bi-check-circle"></i>
                            <span>Lưu thay đổi</span>
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
    
    <!-- Help Section -->
    <div class="bg-white rounded-2xl shadow-lg border border-blue-200 overflow-hidden">
        <div class="bg-gradient-to-r from-blue-50 to-purple-50 border-b border-blue-100 p-6">
            <h3 class="text-lg font-semibold text-gray-800 flex items-center space-x-2">
                <div class="w-8 h-8 bg-blue-100 rounded-lg flex items-center justify-center">
                    <i class="bi bi-question-circle text-blue-600"></i>
                </div>
                <span>Hướng dẫn</span>
            </h3>
        </div>
        
        <div class="p-6">
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4">
                <div class="flex items-start space-x-3">
                    <div class="w-8 h-8 bg-green-100 rounded-lg flex items-center justify-center">
                        <i class="bi bi-1-circle text-green-600"></i>
                    </div>
                    <div>
                        <div class="font-medium text-gray-800">Thông tin cá nhân</div>
                        <div class="text-sm text-gray-600">Điền đầy đủ họ tên và chuyên môn</div>
                    </div>
                </div>
                
                <div class="flex items-start space-x-3">
                    <div class="w-8 h-8 bg-purple-100 rounded-lg flex items-center justify-center">
                        <i class="bi bi-2-circle text-purple-600"></i>
                    </div>
                    <div>
                        <div class="font-medium text-gray-800">Liên hệ</div>
                        <div class="text-sm text-gray-600">Cập nhật số điện thoại và email</div>
                    </div>
                </div>
                
                <div class="flex items-start space-x-3">
                    <div class="w-8 h-8 bg-amber-100 rounded-lg flex items-center justify-center">
                        <i class="bi bi-3-circle text-amber-600"></i>
                    </div>
                    <div>
                        <div class="font-medium text-gray-800">Nghề nghiệp</div>
                        <div class="text-sm text-gray-600">Bổ sung bằng cấp và chứng chỉ</div>
                    </div>
                </div>
                
                <div class="flex items-start space-x-3">
                    <div class="w-8 h-8 bg-blue-100 rounded-lg flex items-center justify-center">
                        <i class="bi bi-4-circle text-blue-600"></i>
                    </div>
                    <div>
                        <div class="font-medium text-gray-800">Lưu thông tin</div>
                        <div class="text-sm text-gray-600">Kiểm tra và lưu thay đổi</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 