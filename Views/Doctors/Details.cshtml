@model InfertilityApp.Models.Doctor

@{
    ViewData["Title"] = "Chi tiết bác sĩ";
}

<div class="flex justify-between items-center mb-6">
    <h2 class="text-3xl font-bold text-gray-900">Chi tiết bác sĩ</h2>
    <a asp-action="Index" class="bg-gray-600 text-white px-4 py-2 rounded-lg hover:bg-gray-700 transition-colors duration-200 flex items-center">
        <i class="bi bi-arrow-left mr-2"></i> Quay lại
    </a>
</div>

<div class="bg-white rounded-lg shadow-lg">
    <div class="p-6">
        <div class="flex items-center mb-6">
            <div class="bg-blue-100 p-3 rounded-full mr-4">
                <i class="bi bi-person-badge text-2xl text-blue-600"></i>
            </div>
            <div>
                <h3 class="text-2xl font-bold text-gray-900">@Model.FullName</h3>
                <p class="text-gray-600">@Model.Specialization</p>
            </div>
        </div>
        
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
            <div class="space-y-4">
                <h4 class="text-lg font-semibold text-gray-900 mb-4">Thông tin cá nhân</h4>
                
                <div class="space-y-3">
                    <div class="flex items-center">
                        <div class="w-24 text-sm font-medium text-gray-500">Họ và tên:</div>
                        <div class="text-gray-900">@Model.FullName</div>
                    </div>
                    
                    <div class="flex items-center">
                        <div class="w-24 text-sm font-medium text-gray-500">Chuyên môn:</div>
                        <div class="text-gray-900">@Model.Specialization</div>
                    </div>
                    
                    <div class="flex items-center">
                        <div class="w-24 text-sm font-medium text-gray-500">Số điện thoại:</div>
                        <div class="text-gray-900">@Model.PhoneNumber</div>
                    </div>
                    
                    <div class="flex items-center">
                        <div class="w-24 text-sm font-medium text-gray-500">Email:</div>
                        <div class="text-gray-900">@Model.Email</div>
                    </div>
                    
                    <div class="flex items-center">
                        <div class="w-24 text-sm font-medium text-gray-500">Số giấy phép:</div>
                        <div class="text-gray-900">@Model.LicenseNumber</div>
                    </div>
                </div>
            </div>
            
            <div class="bg-gray-50 rounded-lg p-6">
                <h4 class="text-lg font-semibold text-gray-900 mb-4">Thống kê</h4>
                <div class="space-y-4">
                    <div class="flex items-center justify-between p-3 bg-blue-50 rounded-lg">
                        <div class="flex items-center">
                            <i class="bi bi-people text-blue-600 mr-3"></i>
                            <span class="text-sm font-medium text-gray-700">Bệnh nhân đang điều trị</span>
                        </div>
                        <span class="text-lg font-bold text-blue-600">@Model.Treatments?.Count(t => t.Status == "Đang điều trị")</span>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="flex justify-end space-x-4 mt-8 pt-6 border-t border-gray-200">
            <a asp-action="Index" class="bg-gray-500 text-white px-6 py-2 rounded-lg hover:bg-gray-600 transition-colors duration-200">
                Quay lại
            </a>
            <a asp-action="Edit" asp-route-id="@Model.Id" class="bg-yellow-500 text-white px-6 py-2 rounded-lg hover:bg-yellow-600 transition-colors duration-200 flex items-center">
                <i class="bi bi-pencil mr-2"></i> Chỉnh sửa
            </a>
        </div>
    </div>
</div> 