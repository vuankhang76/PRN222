@model IEnumerable<InfertilityApp.Models.Doctor>

@{
    ViewData["Title"] = "Danh sách bác sĩ";
}

<div class="p-6 space-y-6 bg-gray-50 min-h-screen">
    <div class="bg-white rounded-lg shadow-sm border border-gray-200 overflow-hidden">
        <div class="bg-white border-b border-gray-200 p-4">
            <div class="flex items-center justify-between">
                <div class="flex items-center space-x-4">
                    <div class="w-12 h-12 bg-blue-50 rounded-lg flex items-center justify-center">
                        <i class="bi bi-person-badge text-2xl text-blue-600"></i>
                    </div>
                    <div>
                        <h1 class="text-2xl font-semibold text-gray-900">Danh sách bác sĩ</h1>
                        <p class="text-gray-600">Quản lý thông tin đội ngũ y tế</p>
                    </div>
                </div>
                <div class="hidden md:flex items-center space-x-3">
                    <div class="bg-gray-50 rounded-lg px-4 py-2 border border-gray-200">
                        <span class="text-sm font-medium text-gray-700">
                            @if (!string.IsNullOrEmpty(ViewData["SearchString"]?.ToString()))
                            {
                                <span>Tìm thấy @Model.Count() kết quả cho "@ViewData["SearchString"]"</span>
                            }
                            else
                            {
                                <span>Tổng số: @Model.Count() bác sĩ</span>
                            }
                        </span>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="p-4 bg-white">
            <form method="get" class="space-y-4">
                <div class="flex flex-col md:flex-row justify-between items-start md:items-center space-y-4 md:space-y-0">
                    <div class="flex flex-wrap gap-3">
                        <a asp-action="Create" class="bg-blue-600 text-white px-4 py-2 rounded-md font-medium hover:bg-blue-700 transition-colors duration-200 flex items-center space-x-2">
                            <i class="bi bi-plus-circle"></i>
                            <span>Thêm bác sĩ mới</span>
                        </a>
                        
                        <!-- Specialization Filter -->
                        <div class="relative">
                            <select name="specialization" 
                                    class="bg-gray-100 text-gray-700 px-4 py-2 rounded-md font-medium hover:bg-gray-200 transition-colors duration-200 border border-gray-300 focus:border-blue-500 focus:outline-none focus:ring-1 focus:ring-blue-500"
                                    onchange="this.form.submit()">
                                <option value="">Tất cả chuyên khoa</option>
                                <option value="Sản phụ khoa" selected="@(ViewData["Specialization"]?.ToString() == "Sản phụ khoa")">Sản phụ khoa</option>
                                <option value="Nội tiết" selected="@(ViewData["Specialization"]?.ToString() == "Nội tiết")">Nội tiết</option>
                                <option value="Nam khoa" selected="@(ViewData["Specialization"]?.ToString() == "Nam khoa")">Nam khoa</option>
                                <option value="Tâm lý" selected="@(ViewData["Specialization"]?.ToString() == "Tâm lý")">Tâm lý</option>
                            </select>
                        </div>
                    </div>
                    
                    <div class="flex items-center space-x-3 w-full md:w-auto">
                        <div class="relative flex-1 md:flex-none">
                            <input type="text" 
                                   name="searchString" 
                                   value="@ViewData["SearchString"]"
                                   placeholder="Tìm kiếm theo tên, email, SĐT..." 
                                   class="pl-10 pr-12 py-2 border border-gray-300 rounded-md focus:border-blue-500 focus:outline-none focus:ring-1 focus:ring-blue-500 transition-colors duration-200 bg-white w-full md:w-80">
                            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                <i class="bi bi-search text-gray-400"></i>
                            </div>
                            <button type="submit" 
                                    class="absolute inset-y-0 right-0 pr-3 flex items-center text-gray-400 hover:text-blue-600 transition-colors duration-200">
                                <i class="bi bi-arrow-right"></i>
                            </button>
                        </div>
                        
                        @if (!string.IsNullOrEmpty(ViewData["SearchString"]?.ToString()) || !string.IsNullOrEmpty(ViewData["Specialization"]?.ToString()))
                        {
                            <a asp-action="Index" 
                               class="bg-gray-100 text-gray-700 px-3 py-2 rounded-md hover:bg-gray-200 transition-colors duration-200 flex items-center"
                               title="Xóa bộ lọc">
                                <i class="bi bi-x-lg"></i>
                            </a>
                        }
                    </div>
                </div>
            </form>
        </div>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-2 xl:grid-cols-3 gap-4">
        @foreach (var item in Model)
        {
            <div class="bg-white rounded-lg shadow-sm border border-gray-200 overflow-hidden hover:shadow-md transition-shadow duration-200">
                <!-- Doctor Info -->
                <div class="p-4">
                    <div class="space-y-4">
                        <div class="flex items-start space-x-3">
                            <div class="w-10 h-10 bg-blue-50 rounded-lg flex items-center justify-center flex-shrink-0">
                                <i class="bi bi-person text-blue-600"></i>
                            </div>
                            <div class="min-w-0 flex-1">
                                <p class="text-sm font-medium text-gray-900">@item.FullName</p>
                                <p class="text-sm text-blue-600">@item.Specialization</p>
                            </div>
                        </div>
                        
                        <div class="space-y-2">
                            <div class="flex items-center space-x-2">
                                <i class="bi bi-envelope text-gray-400 text-sm"></i>
                                <span class="text-sm text-gray-600">@item.Email</span>
                            </div>
                            <div class="flex items-center space-x-2">
                                <i class="bi bi-telephone text-gray-400 text-sm"></i>
                                <span class="text-sm text-gray-600">@item.PhoneNumber</span>
                            </div>
                        </div>
                    </div>
                </div>
                
                <!-- Action Buttons -->
                <div class="px-6 py-4 bg-gray-50 border-t border-gray-100">
                    <div class="flex justify-between items-center">
                            <a asp-action="Details" asp-route-id="@item.Id" 
                               class="text-blue-600 hover:text-blue-800 text-sm font-medium flex items-center space-x-1">
                                <i class="bi bi-eye"></i>
                                <span>Chi tiết</span>
                            </a>
                            <a asp-action="Edit" asp-route-id="@item.Id" 
                               class="text-green-600 hover:text-green-800 text-sm font-medium flex items-center space-x-1">
                                <i class="bi bi-pencil"></i>
                                <span>Sửa</span>
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.Id" 
                               class="text-red-600 hover:text-red-800 text-sm font-medium flex items-center space-x-1"
                               onclick="return confirm('Bạn có chắc chắn muốn xóa bác sĩ này?')">
                                <i class="bi bi-trash"></i>
                                <span>Xóa</span>
                            </a>
                    </div>
                </div>
            </div>
        }
    </div>
    
    @if (!Model.Any())
    {
        <!-- Empty State -->
        <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-12 text-center">
            <div class="w-16 h-16 bg-gray-100 rounded-lg flex items-center justify-center mx-auto mb-4">
                @if (!string.IsNullOrEmpty(ViewData["SearchString"]?.ToString()))
                {
                    <i class="bi bi-search text-2xl text-gray-400"></i>
                }
                else
                {
                    <i class="bi bi-person-plus text-2xl text-gray-400"></i>
                }
            </div>
            @if (!string.IsNullOrEmpty(ViewData["SearchString"]?.ToString()))
            {
                <h3 class="text-lg font-medium text-gray-900 mb-2">Không tìm thấy bác sĩ nào</h3>
                <p class="text-gray-500 mb-6">Không có bác sĩ nào phù hợp với từ khóa "@ViewData["SearchString"]"</p>
                <div class="flex justify-center space-x-3">
                    <a asp-action="Index" class="bg-gray-600 text-white px-6 py-2 rounded-md font-medium hover:bg-gray-700 transition-colors duration-200 inline-flex items-center space-x-2">
                        <i class="bi bi-arrow-left"></i>
                        <span>Xem tất cả</span>
                    </a>
                    <a asp-action="Create" class="bg-blue-600 text-white px-6 py-2 rounded-md font-medium hover:bg-blue-700 transition-colors duration-200 inline-flex items-center space-x-2">
                        <i class="bi bi-plus-circle"></i>
                        <span>Thêm bác sĩ mới</span>
                    </a>
                </div>
            }
            else
            {
                <h3 class="text-lg font-medium text-gray-900 mb-2">Chưa có bác sĩ nào</h3>
                <p class="text-gray-500 mb-6">Bắt đầu bằng cách thêm bác sĩ đầu tiên vào hệ thống</p>
                <a asp-action="Create" class="bg-blue-600 text-white px-6 py-2 rounded-md font-medium hover:bg-blue-700 transition-colors duration-200 inline-flex items-center space-x-2">
                    <i class="bi bi-plus-circle"></i>
                    <span>Thêm bác sĩ đầu tiên</span>
                </a>
            }
        </div>
    }
</div> 