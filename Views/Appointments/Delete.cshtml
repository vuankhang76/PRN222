@model InfertilityApp.Models.Appointment

@{
    ViewData["Title"] = "Xóa lịch hẹn";
}

<div class="flex justify-between items-center mb-6">
    <h2 class="text-3xl font-bold text-gray-900">Xóa lịch hẹn</h2>
    <a asp-action="Index" class="bg-gray-600 text-white px-4 py-2 rounded-lg hover:bg-gray-700 transition-colors duration-200 flex items-center">
        <i class="bi bi-arrow-left mr-2"></i> Quay lại
    </a>
</div>

<div class="bg-red-50 border border-red-200 rounded-lg p-6 mb-6">
    <div class="flex items-center">
        <div class="flex-shrink-0">
            <i class="bi bi-exclamation-triangle text-red-400 text-2xl"></i>
        </div>
        <div class="ml-3">
            <h3 class="text-lg font-medium text-red-800">Bạn có chắc chắn muốn xóa lịch hẹn này?</h3>
            <p class="mt-2 text-red-700">Hành động này không thể hoàn tác. Lịch hẹn sẽ bị xóa hoàn toàn khỏi hệ thống.</p>
        </div>
    </div>
</div>

<div class="bg-white rounded-lg shadow-lg">
    <div class="p-6">
        <h3 class="text-lg font-semibold text-gray-900 mb-4">Thông tin lịch hẹn</h3>
        
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div class="space-y-4">
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">Bệnh nhân</label>
                    <p class="text-gray-900 font-medium">@Model.Patient?.FullName</p>
                </div>
                
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">Bác sĩ</label>
                    <p class="text-gray-900">@Model.Doctor?.FullName</p>
                </div>
                
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">Ngày hẹn</label>
                    <p class="text-gray-900">@Model.AppointmentDate.ToString("dd/MM/yyyy")</p>
                </div>
            </div>
            
            <div class="space-y-4">
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">Giờ hẹn</label>
                    <p class="text-gray-900">@Model.AppointmentTime.ToString(@"hh\:mm")</p>
                </div>
                
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">Trạng thái</label>
                    @switch (Model.Status)
                    {
                        case "Đã lên lịch":
                            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                                <i class="bi bi-calendar-check mr-1"></i> Đã lên lịch
                            </span>
                            break;
                        case "Hoàn thành":
                            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                                <i class="bi bi-check-circle mr-1"></i> Hoàn thành
                            </span>
                            break;
                        case "Đã hủy":
                            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800">
                                <i class="bi bi-x-circle mr-1"></i> Đã hủy
                            </span>
                            break;
                        case "Đổi lịch":
                            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800">
                                <i class="bi bi-arrow-repeat mr-1"></i> Đổi lịch
                            </span>
                            break;
                        case "Không đến":
                            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-orange-100 text-orange-800">
                                <i class="bi bi-person-x mr-1"></i> Không đến
                            </span>
                            break;
                        default:
                            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800">
                                @Model.Status
                            </span>
                            break;
                    }
                </div>
                
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">Ghi chú</label>
                    <p class="text-gray-900">@(string.IsNullOrEmpty(Model.Notes) ? "Không có" : Model.Notes)</p>
                </div>
            </div>
        </div>
        
        <div class="flex justify-end space-x-4 mt-8 pt-6 border-t border-gray-200">
            <a asp-action="Index" class="bg-gray-500 text-white px-6 py-2 rounded-lg hover:bg-gray-600 transition-colors duration-200">
                Hủy
            </a>
            <form asp-action="Delete" method="post" class="inline">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="bg-red-600 text-white px-6 py-2 rounded-lg hover:bg-red-700 transition-colors duration-200 flex items-center">
                    <i class="bi bi-trash mr-2"></i> Xóa lịch hẹn
                </button>
            </form>
        </div>
    </div>
</div> 