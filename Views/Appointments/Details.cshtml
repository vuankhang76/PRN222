@model InfertilityApp.Models.Appointment

@{
    ViewData["Title"] = "Chi tiết lịch hẹn";
}

<div class="container mx-auto px-4 py-8">
    <div class="flex justify-between items-center mb-6">
        <h2 class="text-3xl font-bold text-gray-900">Chi tiết lịch hẹn</h2>
        <div class="flex space-x-3">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="bg-yellow-500 text-white px-4 py-2 rounded-lg hover:bg-yellow-600 transition-colors duration-200 flex items-center">
                <i class="bi bi-pencil mr-2"></i> Chỉnh sửa
            </a>
            <a asp-action="Index" class="bg-gray-600 text-white px-4 py-2 rounded-lg hover:bg-gray-700 transition-colors duration-200 flex items-center">
                <i class="bi bi-arrow-left mr-2"></i> Quay lại
            </a>
        </div>
    </div>

    <div class="bg-white rounded-lg shadow-lg">
        <div class="p-6">
            <div class="flex items-center mb-6">
                <div class="w-16 h-16 bg-blue-100 rounded-full flex items-center justify-center mr-4">
                    <i class="bi bi-calendar-event text-3xl text-blue-600"></i>
                </div>
                <div>
                    <h3 class="text-2xl font-bold text-gray-900">Lịch hẹn #@Model.Id</h3>
                    <p class="text-gray-600">@Model.AppointmentDate.ToString("dd/MM/yyyy") - @Model.AppointmentTime.ToString(@"hh\:mm")</p>
                </div>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">Bệnh nhân</label>
                    <p class="text-gray-900">
                        <a asp-controller="Patients" asp-action="Details" asp-route-id="@Model.PatientId" class="text-blue-600 hover:text-blue-800 hover:underline">
                            @Model.Patient.FullName
                        </a>
                    </p>
                </div>

                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">Bác sĩ</label>
                    <p class="text-gray-900">
                        <a asp-controller="Doctors" asp-action="Details" asp-route-id="@Model.DoctorId" class="text-blue-600 hover:text-blue-800 hover:underline">
                            BS. @Model.Doctor.FullName
                        </a>
                    </p>
                </div>

                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">Ngày hẹn</label>
                    <p class="text-gray-900">@Model.AppointmentDate.ToString("dd/MM/yyyy")</p>
                </div>

                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">Giờ hẹn</label>
                    <p class="text-gray-900">@Model.AppointmentTime.ToString(@"hh\:mm")</p>
                </div>

                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">Thời lượng</label>
                    <p class="text-gray-900">@Model.Duration phút</p>
                </div>

                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">Trạng thái</label>
                    @switch (Model.Status)
                    {
                        case "Đã lên lịch":
                            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">Đã lên lịch</span>
                            break;
                        case "Hoàn thành":
                            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">Hoàn thành</span>
                            break;
                        case "Đã hủy":
                            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800">Đã hủy</span>
                            break;
                        case "Đổi lịch":
                            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800">Đổi lịch</span>
                            break;
                        case "Không đến":
                            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-orange-100 text-orange-800">Không đến</span>
                            break;
                        default:
                            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800">@Model.Status</span>
                            break;
                    }
                </div>

                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">Loại cuộc hẹn</label>
                    <p class="text-gray-900">@(string.IsNullOrEmpty(Model.AppointmentType) ? "Không có" : Model.AppointmentType)</p>
                </div>

                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">Điều trị liên quan</label>
                    <p class="text-gray-900">
                        @if (Model.TreatmentId.HasValue && Model.Treatment != null)
                        {
                            <a asp-controller="Treatments" asp-action="Details" asp-route-id="@Model.TreatmentId" class="text-blue-600 hover:text-blue-800 hover:underline">
                                @Model.Treatment.TreatmentName
                            </a>
                        }
                        else
                        {
                            <span class="text-gray-500">Không có</span>
                        }
                    </p>
                </div>
            </div>

            @if (!string.IsNullOrEmpty(Model.Purpose))
            {
                <div class="mt-6">
                    <label class="block text-sm font-medium text-gray-700 mb-2">Mục đích cuộc hẹn</label>
                    <div class="bg-gray-50 p-4 rounded-lg">
                        <p class="text-gray-900">@Model.Purpose</p>
                    </div>
                </div>
            }

            @if (!string.IsNullOrEmpty(Model.Notes))
            {
                <div class="mt-6">
                    <label class="block text-sm font-medium text-gray-700 mb-2">Ghi chú</label>
                    <div class="bg-gray-50 p-4 rounded-lg">
                        <p class="text-gray-900">@Model.Notes</p>
                    </div>
                </div>
            }

            <div class="flex justify-end space-x-4 mt-8 pt-6 border-t border-gray-200">
                <a asp-action="Index" class="bg-gray-500 text-white px-4 py-2 rounded-lg hover:bg-gray-600 transition-colors duration-200">
                    Quay lại danh sách
                </a>
                <a asp-action="Edit" asp-route-id="@Model.Id" class="bg-yellow-500 text-white px-4 py-2 rounded-lg hover:bg-yellow-600 transition-colors duration-200 flex items-center">
                    <i class="bi bi-pencil mr-2"></i> Chỉnh sửa
                </a>
            </div>
        </div>
    </div>
</div> 