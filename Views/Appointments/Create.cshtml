@model InfertilityApp.Models.Appointment

@{
    ViewData["Title"] = "Tạo lịch hẹn mới";
}

<div class="flex justify-between items-center mb-6">
    <h2 class="text-3xl font-bold text-gray-900">Tạo lịch hẹn mới</h2>
    <a asp-action="Index" class="bg-gray-500 text-white px-4 py-2 rounded-lg hover:bg-gray-600 transition-colors duration-200 flex items-center">
        <i class="bi bi-arrow-left mr-2"></i> Quay lại danh sách
    </a>
</div>

<div class="bg-white rounded-lg shadow-lg">
    <div class="p-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="bg-red-50 border border-red-200 text-red-700 px-4 py-3 rounded-lg mb-4"></div>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                <div>
                    <label asp-for="PatientId" class="block text-sm font-semibold text-gray-700 mb-2">Bệnh nhân</label>
                    <select asp-for="PatientId" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-blue-500">
                        <option value="">-- Chọn bệnh nhân --</option>
                        @Html.Raw(ViewBag.PatientId)
                    </select>
                    <span asp-validation-for="PatientId" class="text-red-500 text-sm mt-1 block"></span>
                </div>

                <div>
                    <label asp-for="DoctorId" class="block text-sm font-semibold text-gray-700 mb-2">Bác sĩ</label>
                    <select asp-for="DoctorId" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-blue-500">
                        <option value="">-- Chọn bác sĩ --</option>
                        @Html.Raw(ViewBag.DoctorId)
                    </select>
                    <span asp-validation-for="DoctorId" class="text-red-500 text-sm mt-1 block"></span>
                </div>

                <div>
                    <label asp-for="TreatmentId" class="block text-sm font-semibold text-gray-700 mb-2">Điều trị liên quan</label>
                    <select asp-for="TreatmentId" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-blue-500">
                        <option value="">-- Không có --</option>
                        @Html.Raw(ViewBag.TreatmentId)
                    </select>
                    <span asp-validation-for="TreatmentId" class="text-red-500 text-sm mt-1 block"></span>
                </div>

                <div>
                    <label asp-for="AppointmentDate" class="block text-sm font-semibold text-gray-700 mb-2">Ngày hẹn</label>
                    <input asp-for="AppointmentDate" type="date" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-blue-500" />
                    <span asp-validation-for="AppointmentDate" class="text-red-500 text-sm mt-1 block"></span>
                </div>

                <div>
                    <label asp-for="AppointmentTime" class="block text-sm font-semibold text-gray-700 mb-2">Giờ hẹn</label>
                    <input asp-for="AppointmentTime" type="time" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-blue-500" />
                    <span asp-validation-for="AppointmentTime" class="text-red-500 text-sm mt-1 block"></span>
                </div>

                <div>
                    <label asp-for="Duration" class="block text-sm font-semibold text-gray-700 mb-2">Thời lượng (phút)</label>
                    <input asp-for="Duration" type="number" min="15" step="15" value="30" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-blue-500" />
                    <span asp-validation-for="Duration" class="text-red-500 text-sm mt-1 block"></span>
                </div>
            </div>

            <div class="mt-4">
                <label asp-for="Purpose" class="block text-sm font-semibold text-gray-700 mb-2">Mục đích cuộc hẹn</label>
                <textarea asp-for="Purpose" rows="3" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-blue-500"></textarea>
                <span asp-validation-for="Purpose" class="text-red-500 text-sm mt-1 block"></span>
            </div>

            <div class="mt-4">
                <label asp-for="Status" class="block text-sm font-semibold text-gray-700 mb-2">Trạng thái</label>
                <select asp-for="Status" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-blue-500">
                    <option value="Scheduled">Đã lên lịch</option>
                    <option value="Completed">Đã hoàn thành</option>
                    <option value="Cancelled">Đã hủy</option>
                    <option value="No-show">Không đến</option>
                </select>
                <span asp-validation-for="Status" class="text-red-500 text-sm mt-1 block"></span>
            </div>

            <div class="mt-4">
                <label asp-for="Notes" class="block text-sm font-semibold text-gray-700 mb-2">Ghi chú</label>
                <textarea asp-for="Notes" rows="3" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-blue-500"></textarea>
                <span asp-validation-for="Notes" class="text-red-500 text-sm mt-1 block"></span>
            </div>

            <div class="flex justify-end space-x-3 mt-6">
                <a asp-action="Index" class="bg-gray-500 text-white px-6 py-2 rounded-lg hover:bg-gray-600 transition-colors duration-200">Hủy</a>
                <button type="submit" class="bg-blue-600 text-white px-6 py-2 rounded-lg hover:bg-blue-700 transition-colors duration-200">Tạo lịch hẹn</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        $(document).ready(function () {
            $('#PatientId').change(function () {
                var patientId = $(this).val();
                if (patientId) {
                    $.ajax({
                        url: '/Treatments/GetTreatmentsByPatient',
                        type: 'GET',
                        data: { patientId: patientId },
                        success: function (data) {
                            var treatmentDropdown = $('#TreatmentId');
                            treatmentDropdown.empty();
                            treatmentDropdown.append($('<option></option>').val('').text('-- Không có --'));
                            $.each(data, function (i, item) {
                                treatmentDropdown.append($('<option></option>').val(item.id).text(item.treatmentName));
                            });
                        }
                    });
                }
            });
        });
    </script>
}
