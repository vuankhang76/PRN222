@model InfertilityApp.Models.Appointment

@{
    ViewData["Title"] = "Tạo lịch hẹn mới";
}

<div class="container mx-auto px-4 py-8">
    <div class="flex justify-between items-center mb-6">
        <h2 class="text-3xl font-bold text-gray-900">Tạo lịch hẹn mới</h2>
        <a asp-action="Index" class="bg-gray-600 text-white px-4 py-2 rounded-lg hover:bg-gray-700 transition-colors duration-200 flex items-center">
            <i class="bi bi-arrow-left mr-2"></i> Quay lại
        </a>
    </div>

    <div class="bg-white rounded-lg shadow-lg">
        <div class="p-6">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-6"></div>
                
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div>
                        <label asp-for="PatientId" class="block text-sm font-medium text-gray-700 mb-2">Bệnh nhân <span class="text-red-500">*</span></label>
                        <select asp-for="PatientId" asp-items="@(ViewBag.PatientId as SelectList)" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent">
                            <option value="">-- Chọn bệnh nhân --</option>
                        </select>
                        <span asp-validation-for="PatientId" class="text-red-500 text-sm"></span>
                    </div>

                    <div>
                        <label asp-for="DoctorId" class="block text-sm font-medium text-gray-700 mb-2">Bác sĩ <span class="text-red-500">*</span></label>
                        <select asp-for="DoctorId" asp-items="@(ViewBag.DoctorId as SelectList)" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent">
                            <option value="">-- Chọn bác sĩ --</option>
                        </select>
                        <span asp-validation-for="DoctorId" class="text-red-500 text-sm"></span>
                    </div>

                    <div>
                        <label asp-for="TreatmentId" class="block text-sm font-medium text-gray-700 mb-2">Điều trị liên quan</label>
                        <select asp-for="TreatmentId" asp-items="@(ViewBag.TreatmentId as SelectList)" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent">
                            <option value="">-- Không có --</option>
                        </select>
                        <span asp-validation-for="TreatmentId" class="text-red-500 text-sm"></span>
                    </div>

                    <div>
                        <label asp-for="AppointmentDate" class="block text-sm font-medium text-gray-700 mb-2">Ngày hẹn <span class="text-red-500">*</span></label>
                        <input asp-for="AppointmentDate" type="date" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent" />
                        <span asp-validation-for="AppointmentDate" class="text-red-500 text-sm"></span>
                    </div>

                    <div>
                        <label asp-for="AppointmentTime" class="block text-sm font-medium text-gray-700 mb-2">Giờ hẹn <span class="text-red-500">*</span></label>
                        <input asp-for="AppointmentTime" type="time" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent" />
                        <span asp-validation-for="AppointmentTime" class="text-red-500 text-sm"></span>
                    </div>

                    <div>
                        <label asp-for="Duration" class="block text-sm font-medium text-gray-700 mb-2">Thời lượng (phút)</label>
                        <input asp-for="Duration" type="number" 
                               class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent" />
                        <span asp-validation-for="Duration" class="text-red-500 text-sm"></span>
                    </div>

                </div>

                <div class="mt-6">
                    <label asp-for="Purpose" class="block text-sm font-medium text-gray-700 mb-2">Mục đích cuộc hẹn</label>
                    <textarea asp-for="Purpose" rows="3" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent" placeholder="Mô tả mục đích cuộc hẹn..."></textarea>
                    <span asp-validation-for="Purpose" class="text-red-500 text-sm"></span>
                </div>

                <div class="mt-6">
                    <label asp-for="Status" class="block text-sm font-medium text-gray-700 mb-2">Trạng thái</label>
                    <select asp-for="Status" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent" style="min-width: 200px;">
                        <option value="Đã lên lịch">Đã lên lịch</option>
                        <option value="Hoàn thành">Hoàn thành</option>
                        <option value="Đã hủy">Đã hủy</option>
                        <option value="Không đến">Không đến</option>
                        <option value="Đổi lịch">Đổi lịch</option>
                    </select>
                    <span asp-validation-for="Status" class="text-red-500 text-sm"></span>
                </div>

                <div class="mt-6">
                    <label asp-for="AppointmentType" class="block text-sm font-medium text-gray-700 mb-2">Loại hẹn</label>
                    <select asp-for="AppointmentType" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent" style="min-width: 200px;">
                        <option value="Procedure">Procedure</option>
                        <option value="Follow-up">Follow-up</option>
                    </select>
                    <span asp-validation-for="AppointmentType" class="text-red-500 text-sm"></span>
                </div>

                <div class="mt-6">
                    <label asp-for="Notes" class="block text-sm font-medium text-gray-700 mb-2">Ghi chú</label>
                    <textarea asp-for="Notes" rows="3" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent" placeholder="Ghi chú bổ sung..."></textarea>
                    <span asp-validation-for="Notes" class="text-red-500 text-sm"></span>
                </div>

                <div class="flex justify-end space-x-4 mt-8">
                    <a asp-action="Index" class="bg-gray-500 text-white px-6 py-2 rounded-lg hover:bg-gray-600 transition-colors duration-200">
                        Quay lại danh sách
                    </a>
                    <button type="submit" class="bg-blue-600 text-white px-6 py-2 rounded-lg hover:bg-blue-700 transition-colors duration-200">
                        Tạo lịch hẹn
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        // Cập nhật danh sách điều trị khi chọn bệnh nhân
        $(document).ready(function() {
            $('#PatientId').change(function() {
                var patientId = $(this).val();
                if (patientId) {
                    $.ajax({
                        url: '/Treatments/GetTreatmentsByPatient',
                        type: 'GET',
                        data: { patientId: patientId },
                        success: function(data) {
                            var treatmentDropdown = $('#TreatmentId');
                            treatmentDropdown.empty();
                            treatmentDropdown.append($('<option></option>').val('').text('-- Không có --'));
                            $.each(data, function(i, item) {
                                treatmentDropdown.append($('<option></option>').val(item.id).text(item.treatmentName));
                            });
                        }
                    });
                }
            });
        });
    </script>
} 