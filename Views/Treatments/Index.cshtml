@model IEnumerable<InfertilityApp.Models.Treatment>

@{
    ViewData["Title"] = "Danh sách điều trị";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>Danh sách điều trị</h2>
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> Thêm điều trị mới
    </a>
</div>

<div class="card">
    <div class="card-body">
        <div class="mb-3">
            <div class="input-group">
                <input type="text" id="searchInput" class="form-control" placeholder="Tìm kiếm điều trị...">
                <button class="btn btn-outline-secondary" type="button">
                    <i class="bi bi-search"></i>
                </button>
            </div>
        </div>
        
        <div class="table-responsive">
            <table class="table table-hover" id="treatmentsTable">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.TreatmentName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Patient)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Doctor)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.TreatmentType)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.StartDate)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.EndDate)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Status)
                        </th>
                        <th>Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.TreatmentName)
                            </td>
                            <td>
                                <a asp-controller="Patients" asp-action="Details" asp-route-id="@item.PatientId">
                                    @item.Patient.FullName
                                </a>
                            </td>
                            <td>
                                <a asp-controller="Doctors" asp-action="Details" asp-route-id="@item.DoctorId">
                                    @item.Doctor.FullName
                                </a>
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TreatmentType)
                            </td>
                            <td>
                                @item.StartDate.ToString("dd/MM/yyyy")
                            </td>
                            <td>
                                @(item.EndDate.HasValue ? item.EndDate.Value.ToString("dd/MM/yyyy") : "-")
                            </td>
                            <td>
                                @switch (item.Status)
                                {
                                    case "In Progress":
                                        <span class="badge bg-primary">Đang tiến hành</span>
                                        break;
                                    case "Completed":
                                        <span class="badge bg-success">Hoàn thành</span>
                                        break;
                                    case "Cancelled":
                                        <span class="badge bg-danger">Đã hủy</span>
                                        break;
                                    default:
                                        <span class="badge bg-secondary">@item.Status</span>
                                        break;
                                }
                            </td>
                            <td>
                                <div class="dropdown">
                                    <button class="btn btn-sm btn-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown">
                                        Thao tác
                                    </button>
                                    <ul class="dropdown-menu">
                                        <li><a class="dropdown-item" asp-action="Details" asp-route-id="@item.Id"><i class="bi bi-eye"></i> Chi tiết</a></li>
                                        <li><a class="dropdown-item" asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil"></i> Chỉnh sửa</a></li>
                                        <li><a class="dropdown-item" asp-controller="TreatmentStages" asp-action="TreatmentStages" asp-route-id="@item.Id"><i class="bi bi-list-check"></i> Giai đoạn</a></li>
                                        <li><a class="dropdown-item" asp-controller="Medications" asp-action="TreatmentMedications" asp-route-id="@item.Id"><i class="bi bi-capsule"></i> Thuốc</a></li>
                                        <li><hr class="dropdown-divider"></li>
                                        <li><a class="dropdown-item text-danger" asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-trash"></i> Xóa</a></li>
                                    </ul>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $("#searchInput").on("keyup", function () {
                var value = $(this).val().toLowerCase();
                $("#treatmentsTable tbody tr").filter(function () {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                });
            });
        });
    </script>
} 