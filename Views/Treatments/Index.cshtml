@model IEnumerable<InfertilityApp.Models.Treatment>

@{
    ViewData["Title"] = "Danh sách điều trị";
}

<div class="space-y-6 bg-gray-50 min-h-screen">
    <div class="bg-white rounded-lg shadow-sm border border-gray-200 overflow-hidden">
        <div class="bg-white border-b border-gray-200 p-6">
            <div class="flex items-center justify-between">
                <div class="flex items-center space-x-4">
                    <div class="w-12 h-12 bg-purple-50 rounded-lg flex items-center justify-center">
                        <i class="bi bi-clipboard2-pulse text-2xl text-purple-600"></i>
                    </div>
                    <div>
                        <h1 class="text-2xl font-semibold text-gray-900">Danh sách điều trị</h1>
                        <p class="text-gray-600">Quản lý quá trình điều trị bệnh nhân</p>
                    </div>
                </div>
                <div class="hidden md:flex items-center space-x-3">
                    <div class="bg-gray-50 rounded-lg px-4 py-2 border border-gray-200">
                        <span class="text-sm font-medium text-gray-700">
                            @if (!string.IsNullOrEmpty(ViewData["SearchString"]?.ToString()))
                            {
                                <span>Tìm thấy @Model.Count() kết quả cho "@ViewData["SearchString"]"</span>
                            }
                            else
                            {
                                <span>Tổng số: @Model.Count() điều trị</span>
                            }
                        </span>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="p-6 bg-white">
            <form method="get" class="space-y-4">
                <div class="flex flex-col md:flex-row justify-between items-start md:items-center space-y-4 md:space-y-0">
                    <div class="flex flex-wrap gap-3">
                        <a asp-action="Create" class="bg-purple-600 text-white px-4 py-2 rounded-md font-medium hover:bg-purple-700 transition-colors duration-200 flex items-center space-x-2">
                            <i class="bi bi-plus-circle"></i>
                            <span>Thêm điều trị mới</span>
                        </a>
                        
                        <div class="relative">
                            <select name="status" 
                                    class="bg-gray-100 text-gray-700 px-4 py-2 rounded-md font-medium hover:bg-gray-200 transition-colors duration-200 border border-gray-300 focus:border-purple-500 focus:outline-none focus:ring-1 focus:ring-purple-500"
                                    onchange="this.form.submit()">
                                <option value="">Tất cả trạng thái</option>
                                @{
                                    var currentStatus = ViewData["Status"]?.ToString();
                                }
                                @if (currentStatus == "In Progress")
                                {
                                    <option value="In Progress" selected>Đang tiến hành</option>
                                }
                                else
                                {
                                    <option value="In Progress">Đang tiến hành</option>
                                }
                                @if (currentStatus == "Completed")
                                {
                                    <option value="Completed" selected>Hoàn thành</option>
                                }
                                else
                                {
                                    <option value="Completed">Hoàn thành</option>
                                }
                                @if (currentStatus == "Cancelled")
                                {
                                    <option value="Cancelled" selected>Đã hủy</option>
                                }
                                else
                                {
                                    <option value="Cancelled">Đã hủy</option>
                                }
                            </select>
                        </div>
                    </div>
                    
                    <div class="flex items-center space-x-3 w-full md:w-auto">
                        <div class="relative flex-1 md:flex-none">
                            <input type="text" 
                                   name="searchString" 
                                   value="@ViewData["SearchString"]"
                                   placeholder="Tìm kiếm theo tên điều trị, bệnh nhân, bác sĩ..." 
                                   class="pl-10 pr-12 py-2 border border-gray-300 rounded-md focus:border-purple-500 focus:outline-none focus:ring-1 focus:ring-purple-500 transition-colors duration-200 bg-white w-full md:w-80">
                            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                <i class="bi bi-search text-gray-400"></i>
                            </div>
                            <button type="submit" 
                                    class="absolute inset-y-0 right-0 pr-3 flex items-center text-gray-400 hover:text-purple-600 transition-colors duration-200">
                                <i class="bi bi-arrow-right"></i>
                            </button>
                        </div>
                        
                        @if (!string.IsNullOrEmpty(ViewData["SearchString"]?.ToString()) || !string.IsNullOrEmpty(ViewData["Status"]?.ToString()))
                        {
                            <a asp-action="Index" 
                               class="bg-gray-100 text-gray-700 px-3 py-2 rounded-md hover:bg-gray-200 transition-colors duration-200 flex items-center"
                               title="Xóa bộ lọc">
                                <i class="bi bi-x-lg"></i>
                            </a>
                        }
                    </div>
                </div>
            </form>
        </div>
    </div>

    <div class="bg-white rounded-lg shadow-sm border border-gray-200 overflow-hidden">
        <div class="overflow-x-auto">
            <table class="w-full" id="treatmentsTable">
                <thead class="bg-gray-50">
                    <tr class="border-b border-gray-200">
                        <th class="text-left py-3 px-6 font-medium text-gray-700 text-sm">
                            @Html.DisplayNameFor(model => model.TreatmentName)
                        </th>
                        <th class="text-left py-3 px-6 font-medium text-gray-700 text-sm">
                            @Html.DisplayNameFor(model => model.Patient)
                        </th>
                        <th class="text-left py-3 px-6 font-medium text-gray-700 text-sm">
                            @Html.DisplayNameFor(model => model.Doctor)
                        </th>
                        <th class="text-left py-3 px-6 font-medium text-gray-700 text-sm">
                            @Html.DisplayNameFor(model => model.TreatmentType)
                        </th>
                        <th class="text-left py-3 px-6 font-medium text-gray-700 text-sm">
                            @Html.DisplayNameFor(model => model.StartDate)
                        </th>
                        <th class="text-left py-3 px-6 font-medium text-gray-700 text-sm">
                            @Html.DisplayNameFor(model => model.EndDate)
                        </th>
                        <th class="text-left py-3 px-6 font-medium text-gray-700 text-sm">
                            @Html.DisplayNameFor(model => model.Status)
                        </th>
                        <th class="text-left py-3 px-6 font-medium text-gray-700 text-sm w-32">Thao tác</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-gray-100">
                    @foreach (var item in Model)
                    {
                        <tr class="hover:bg-gray-50 transition-colors duration-200">
                            <td class="py-4 px-6 text-gray-900 font-medium">
                                @Html.DisplayFor(modelItem => item.TreatmentName)
                            </td>
                            <td class="py-4 px-6">
                                <a asp-controller="Patients" asp-action="Details" asp-route-id="@item.PatientId" class="text-blue-600 hover:text-blue-800 font-medium">
                                    @(item.Patient?.FullName ?? "N/A")
                                </a>
                            </td>
                            <td class="py-4 px-6">
                                <a asp-controller="Doctors" asp-action="Details" asp-route-id="@item.DoctorId" class="text-blue-600 hover:text-blue-800 font-medium">
                                    @(item.Doctor?.FullName ?? "N/A")
                                </a>
                            </td>
                            <td class="py-4 px-6 text-gray-700">
                                @Html.DisplayFor(modelItem => item.TreatmentType)
                            </td>
                            <td class="py-4 px-6 text-gray-700">
                                @item.StartDate.ToString("dd/MM/yyyy")
                            </td>
                            <td class="py-4 px-6 text-gray-700">
                                @(item.EndDate.HasValue ? item.EndDate.Value.ToString("dd/MM/yyyy") : "-")
                            </td>
                            <td class="py-4 px-6">
                                @switch (item.Status)
                                {
                                    case "In Progress":
                                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">Đang tiến hành</span>
                                        break;
                                    case "Completed":
                                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">Hoàn thành</span>
                                        break;
                                    case "Cancelled":
                                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800">Đã hủy</span>
                                        break;
                                    default:
                                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800">@item.Status</span>
                                        break;
                                }
                            </td>
                            <td class="py-4 px-6 relative">
                                <div class="flex items-center justify-end">
                                    <button type="button" class="text-gray-600 hover:text-gray-800 text-sm font-medium dropdown-toggle" onclick="toggleTreatmentDropdown('@item.Id')" title="Thao tác">
                                        <i class="bi bi-three-dots-vertical"></i>
                                    </button>
                                    <div class="absolute right-0 top-8 w-56 bg-white rounded-md shadow-lg z-50 hidden border border-gray-200" id="dropdown-@item.Id">
                                        <div class="py-1">
                                            <a class="flex items-center px-4 py-2 text-sm text-gray-700 hover:bg-gray-100" asp-action="Details" asp-route-id="@item.Id">
                                                <i class="bi bi-eye mr-3 w-4 text-gray-400"></i> Chi tiết
                                            </a>
                                            <a class="flex items-center px-4 py-2 text-sm text-gray-700 hover:bg-gray-100" asp-action="Edit" asp-route-id="@item.Id">
                                                <i class="bi bi-pencil mr-3 w-4 text-gray-400"></i> Chỉnh sửa
                                            </a>
                                            <a class="flex items-center px-4 py-2 text-sm text-gray-700 hover:bg-gray-100" asp-controller="TreatmentStages" asp-action="TreatmentStages" asp-route-id="@item.Id">
                                                <i class="bi bi-list-check mr-3 w-4 text-gray-400"></i> Giai đoạn
                                            </a>
                                            <a class="flex items-center px-4 py-2 text-sm text-gray-700 hover:bg-gray-100" asp-controller="Medications" asp-action="TreatmentMedications" asp-route-id="@item.Id">
                                                <i class="bi bi-capsule mr-3 w-4 text-gray-400"></i> Thuốc
                                            </a>
                                            <hr class="border-gray-200 my-1">
                                            <a class="flex items-center px-4 py-2 text-sm text-red-600 hover:bg-red-50" asp-action="Delete" asp-route-id="@item.Id">
                                                <i class="bi bi-trash mr-3 w-4 text-red-400"></i> Xóa
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    @if (!Model.Any())
    {
        <!-- Empty State -->
        <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-12 text-center">
            <div class="w-16 h-16 bg-gray-100 rounded-lg flex items-center justify-center mx-auto mb-4">
                <i class="bi bi-clipboard2-plus text-2xl text-gray-400"></i>
            </div>
            <h3 class="text-lg font-medium text-gray-900 mb-2">Chưa có điều trị nào</h3>
            <p class="text-gray-500 mb-6">Bắt đầu bằng cách thêm điều trị đầu tiên vào hệ thống</p>
            <a asp-action="Create" class="bg-purple-600 text-white px-6 py-2 rounded-md font-medium hover:bg-purple-700 transition-colors duration-200 inline-flex items-center space-x-2">
                <i class="bi bi-plus-circle"></i>
                <span>Thêm điều trị đầu tiên</span>
            </a>
        </div>
    }
</div>

@section Scripts {
    <script>
        function toggleTreatmentDropdown(treatmentId) {
            var dropdown = document.getElementById('dropdown-' + treatmentId);
            var button = event.target.closest('button');
            
            // Hide all other dropdowns
            var dropdowns = document.querySelectorAll('[id^="dropdown-"]');
            for (var i = 0; i < dropdowns.length; i++) {
                if (dropdowns[i].id !== 'dropdown-' + treatmentId) {
                    dropdowns[i].classList.add('hidden');
                }
            }
            
            // Calculate position for fixed dropdown
            if (!dropdown.classList.contains('hidden')) {
                dropdown.classList.add('hidden');
            } else {
                var rect = button.getBoundingClientRect();
                dropdown.style.position = 'fixed';
                dropdown.style.top = (rect.bottom + 5) + 'px';
                dropdown.style.right = (window.innerWidth - rect.right) + 'px';
                dropdown.style.left = 'auto';
                dropdown.classList.remove('hidden');
            }
        }

        // Close dropdown when clicking outside
        document.addEventListener('click', function(event) {
            if (!event.target.closest('.dropdown-toggle') && !event.target.closest('[id^="dropdown-"]')) {
                var dropdowns = document.querySelectorAll('[id^="dropdown-"]');
                for (var i = 0; i < dropdowns.length; i++) {
                    dropdowns[i].classList.add('hidden');
                }
            }
        });
    </script>
} 