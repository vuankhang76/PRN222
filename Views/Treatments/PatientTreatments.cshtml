@model IEnumerable<InfertilityApp.Models.Treatment>

@{
    ViewData["Title"] = $"Quá trình điều trị - {ViewData["PatientName"]}";
}

<div class="flex justify-between items-center mb-6">
    <div>
        <h2 class="text-3xl font-bold text-gray-900">Quá trình điều trị của @ViewData["PatientName"]</h2>
        <p class="text-gray-600">Mã bệnh nhân: #@ViewData["PatientId"]</p>
    </div>
    <div>
        <a asp-controller="Treatments" asp-action="Create" asp-route-patientId="@ViewData["PatientId"]" class="bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700 transition-colors duration-200 flex items-center">
            <i class="bi bi-plus-circle mr-2"></i> Thêm mới
        </a>
    </div>
</div>

<div class="bg-white rounded-lg shadow-lg p-6">
    @if (Model.Any())
    {
        <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-200">
                <thead>
                    <tr>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Tên điều trị</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Loại</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Bác sĩ</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Ngày bắt đầu</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Ngày kết thúc</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Trạng thái</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"></th>
                    </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                    @foreach (var item in Model.OrderByDescending(t => t.StartDate))
                    {
                        <tr>
                            <td class="px-6 py-4 whitespace-nowrap">@item.TreatmentName</td>
                            <td class="px-6 py-4 whitespace-nowrap">@item.TreatmentType</td>
                            <td class="px-6 py-4 whitespace-nowrap">@(item.Doctor?.FullName ?? "Chưa chỉ định")</td>
                            <td class="px-6 py-4 whitespace-nowrap">@item.StartDate.ToString("dd/MM/yyyy")</td>
                            <td class="px-6 py-4 whitespace-nowrap">@(item.EndDate?.ToString("dd/MM/yyyy") ?? "Đang tiến hành")</td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                @switch (item.Status)
                                {
                                    case "In Progress":
                                        <span class="bg-blue-500 text-white px-2 py-1 rounded">Đang tiến hành</span>
                                        break;
                                    case "Completed":
                                        <span class="bg-green-500 text-white px-2 py-1 rounded">Hoàn thành</span>
                                        break;
                                    case "Cancelled":
                                        <span class="bg-red-500 text-white px-2 py-1 rounded">Đã hủy</span>
                                        break;
                                    default:
                                        <span class="bg-gray-500 text-white px-2 py-1 rounded">@item.Status</span>
                                        break;
                                }
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                                <a asp-action="Details" asp-route-id="@item.Id" class="text-blue-600 hover:text-blue-900 mr-3">
                                    <i class="bi bi-eye"></i> Chi tiết
                                </a>
                                <a asp-action="Edit" asp-route-id="@item.Id" class="text-blue-600 hover:text-blue-900">
                                    <i class="bi bi-pencil"></i> Sửa
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="text-center py-8">
            <i class="bi bi-clipboard-x text-gray-400 text-5xl mb-4"></i>
            <p class="text-gray-600 mb-4">Chưa có quá trình điều trị nào được ghi nhận</p>
            <a asp-controller="Treatments" asp-action="Create" asp-route-patientId="@ViewData["PatientId"]" class="bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700 transition-colors duration-200 inline-flex items-center">
                <i class="bi bi-plus-circle mr-2"></i> Tạo quá trình điều trị mới
            </a>
        </div>
    }
</div>

<div class="mt-6">
    <a asp-controller="Patients" asp-action="Details" asp-route-id="@ViewData["PatientId"]" class="text-gray-600 hover:text-gray-900 inline-flex items-center">
        <i class="bi bi-arrow-left mr-2"></i> Quay lại thông tin bệnh nhân
    </a>
</div>
