@model InfertilityApp.Models.Treatment

@{
    ViewData["Title"] = "Chi tiết điều trị";
}

<div class="p-6 space-y-6 bg-gray-50 min-h-screen">
    <!-- Header Section -->
    <div class="bg-white rounded-2xl shadow-lg border border-purple-200 overflow-hidden">
        <div class="bg-gradient-to-r from-purple-600 via-indigo-500 to-blue-600 text-white p-6">
            <div class="flex items-center justify-between">
                <div class="flex items-center space-x-4">
                    <div class="w-16 h-16 bg-white/20 rounded-2xl flex items-center justify-center backdrop-blur-sm">
                        <i class="bi bi-clipboard2-pulse text-3xl text-white"></i>
                    </div>
                    <div>
                        <h1 class="text-3xl font-bold mb-2">Chi tiết điều trị</h1>
                        <p class="text-purple-100 text-lg">Điều trị <span class="font-semibold">@Model.TreatmentName</span></p>
                    </div>
                </div>
                <div class="flex items-center space-x-3">
                    <a asp-action="Edit" asp-route-id="@Model.Id" 
                       class="bg-white/20 backdrop-blur-sm text-white px-4 py-2 rounded-xl hover:bg-white/30 transition-all duration-300 flex items-center space-x-2">
                        <i class="bi bi-pencil"></i>
                        <span>Chỉnh sửa</span>
                    </a>
                    <a asp-action="Index" 
                       class="bg-white/20 backdrop-blur-sm text-white px-4 py-2 rounded-xl hover:bg-white/30 transition-all duration-300 flex items-center space-x-2">
                        <i class="bi bi-arrow-left"></i>
                        <span>Quay lại</span>
                    </a>
                </div>
            </div>
        </div>
        
        <!-- Breadcrumb -->
        <div class="p-4 bg-gradient-to-r from-purple-50 to-indigo-50 border-b border-purple-100">
            <nav class="flex items-center space-x-2 text-sm">
                <a asp-action="Index" class="text-purple-600 hover:text-purple-700 transition-colors duration-200 flex items-center space-x-1">
                    <i class="bi bi-house"></i>
                    <span>Danh sách điều trị</span>
                </a>
                <i class="bi bi-chevron-right text-gray-400"></i>
                <span class="text-gray-600 font-medium">@Model.TreatmentName</span>
            </nav>
        </div>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
        <!-- Treatment Information Sidebar -->
        <div class="lg:col-span-1 space-y-6">
            <!-- Basic Information -->
            <div class="bg-white rounded-2xl shadow-lg border border-purple-200 overflow-hidden">
                <div class="bg-gradient-to-r from-purple-50 to-indigo-50 border-b border-purple-100 p-6">
                    <h3 class="text-lg font-semibold text-gray-800 flex items-center space-x-2">
                        <div class="w-8 h-8 bg-purple-100 rounded-lg flex items-center justify-center">
                            <i class="bi bi-info-circle text-purple-600"></i>
                        </div>
                        <span>Thông tin điều trị</span>
                    </h3>
                </div>
                
                <div class="p-6 space-y-4">
                    <div class="text-center mb-6">
                        <div class="w-16 h-16 bg-purple-50 rounded-full flex items-center justify-center mx-auto mb-3">
                            <i class="bi bi-clipboard2-pulse text-purple-600 text-2xl"></i>
                        </div>
                        <h3 class="text-lg font-semibold text-gray-800">@Model.TreatmentName</h3>
                        <p class="text-purple-600 font-medium">@Model.TreatmentType</p>
                    </div>
                    
                    <div class="space-y-4">
                        <div class="flex items-center space-x-3">
                            <div class="w-10 h-10 bg-green-50 rounded-lg flex items-center justify-center">
                                <i class="bi bi-person text-green-600"></i>
                            </div>
                            <div>
                                <div class="text-sm text-gray-500">Bệnh nhân</div>
                                <div class="font-medium text-gray-800">
                                    <a asp-controller="Patients" asp-action="Details" asp-route-id="@Model.PatientId" 
                                       class="text-green-600 hover:text-green-700 hover:underline transition-colors duration-200">
                                        @Model.Patient.FullName
                                    </a>
                                </div>
                            </div>
                        </div>
                        
                        <div class="flex items-center space-x-3">
                            <div class="w-10 h-10 bg-blue-50 rounded-lg flex items-center justify-center">
                                <i class="bi bi-person-badge text-blue-600"></i>
                            </div>
                            <div>
                                <div class="text-sm text-gray-500">Bác sĩ phụ trách</div>
                                <div class="font-medium text-gray-800">
                                    <a asp-controller="Doctors" asp-action="Details" asp-route-id="@Model.DoctorId" 
                                       class="text-blue-600 hover:text-blue-700 hover:underline transition-colors duration-200">
                                        @Model.Doctor.FullName
                                    </a>
                                </div>
                            </div>
                        </div>
                        
                        <div class="flex items-center space-x-3">
                            <div class="w-10 h-10 bg-orange-50 rounded-lg flex items-center justify-center">
                                <i class="bi bi-calendar3 text-orange-600"></i>
                            </div>
                            <div>
                                <div class="text-sm text-gray-500">Ngày bắt đầu</div>
                                <div class="font-medium text-gray-800">@Model.StartDate.ToString("dd/MM/yyyy")</div>
                            </div>
                        </div>
                        
                        <div class="flex items-center space-x-3">
                            <div class="w-10 h-10 bg-amber-50 rounded-lg flex items-center justify-center">
                                <i class="bi bi-calendar-check text-amber-600"></i>
                            </div>
                            <div>
                                <div class="text-sm text-gray-500">Ngày kết thúc</div>
                                <div class="font-medium text-gray-800">
                                    @(Model.EndDate.HasValue ? Model.EndDate.Value.ToString("dd/MM/yyyy") : "Chưa kết thúc")
                                </div>
                            </div>
                        </div>
                        
                        <div class="flex items-center space-x-3">
                            <div class="w-10 h-10 bg-indigo-50 rounded-lg flex items-center justify-center">
                                <i class="bi bi-check-circle text-indigo-600"></i>
                            </div>
                            <div>
                                <div class="text-sm text-gray-500">Trạng thái</div>
                                <div class="font-medium text-gray-800">
                                    @switch (Model.Status)
                                    {
                                        case "In Progress":
                                            <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-blue-100 text-blue-800">
                                                <i class="bi bi-arrow-clockwise mr-1"></i>Đang tiến hành
                                            </span>
                                            break;
                                        case "Completed":
                                            <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-green-100 text-green-800">
                                                <i class="bi bi-check-circle mr-1"></i>Hoàn thành
                                            </span>
                                            break;
                                        case "Cancelled":
                                            <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-red-100 text-red-800">
                                                <i class="bi bi-x-circle mr-1"></i>Đã hủy
                                            </span>
                                            break;
                                        default:
                                            <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-gray-100 text-gray-800">
                                                @Model.Status
                                            </span>
                                            break;
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    @if (!string.IsNullOrEmpty(Model.Description))
                    {
                        <div class="mt-6 p-4 bg-gradient-to-r from-purple-50 to-indigo-50 rounded-xl border border-purple-100">
                            <div class="flex items-start space-x-3">
                                <div class="w-8 h-8 bg-purple-100 rounded-lg flex items-center justify-center mt-1">
                                    <i class="bi bi-file-text text-purple-600"></i>
                                </div>
                                <div class="flex-1">
                                    <div class="text-sm text-purple-600 font-medium mb-2">Mô tả</div>
                                    <div class="text-gray-700 leading-relaxed">@Model.Description</div>
                                </div>
                            </div>
                        </div>
                    }
                    
                    @if (!string.IsNullOrEmpty(Model.Notes))
                    {
                        <div class="mt-4 p-4 bg-gradient-to-r from-blue-50 to-indigo-50 rounded-xl border border-blue-100">
                            <div class="flex items-start space-x-3">
                                <div class="w-8 h-8 bg-blue-100 rounded-lg flex items-center justify-center mt-1">
                                    <i class="bi bi-chat-dots text-blue-600"></i>
                                </div>
                                <div class="flex-1">
                                    <div class="text-sm text-blue-600 font-medium mb-2">Ghi chú</div>
                                    <div class="text-gray-700 leading-relaxed">@Model.Notes</div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Main Content -->
        <div class="lg:col-span-2 space-y-6">
            <!-- Treatment Stages -->
            <div class="bg-white rounded-2xl shadow-lg border border-purple-200 overflow-hidden">
                <div class="bg-gradient-to-r from-purple-50 to-indigo-50 border-b border-purple-100 p-6">
                    <div class="flex items-center justify-between">
                        <h3 class="text-lg font-semibold text-gray-800 flex items-center space-x-2">
                            <div class="w-8 h-8 bg-purple-100 rounded-lg flex items-center justify-center">
                                <i class="bi bi-list-check text-purple-600"></i>
                            </div>
                            <span>Các giai đoạn điều trị</span>
                        </h3>
                        <div class="flex items-center space-x-2">
                            <a asp-controller="TreatmentStages" asp-action="TreatmentStages" asp-route-id="@Model.Id" 
                               class="bg-purple-100 text-purple-700 px-3 py-2 rounded-lg hover:bg-purple-200 transition-all duration-300 text-sm flex items-center space-x-1">
                                <i class="bi bi-list-check"></i>
                                <span>Xem tất cả</span>
                            </a>
                            <a asp-controller="TreatmentStages" asp-action="Create" asp-route-treatmentId="@Model.Id" 
                               class="bg-gradient-to-r from-purple-500 to-indigo-500 text-white px-3 py-2 rounded-lg hover:from-purple-600 hover:to-indigo-600 transition-all duration-300 text-sm flex items-center space-x-1">
                                <i class="bi bi-plus-circle"></i>
                                <span>Thêm giai đoạn</span>
                            </a>
                        </div>
                    </div>
                </div>
                
                <div class="p-6">
                    @if (Model.TreatmentStages != null && Model.TreatmentStages.Any())
                    {
                        <div class="overflow-x-auto">
                            <table class="w-full">
                                <thead>
                                    <tr class="border-b border-gray-200">
                                        <th class="text-left py-3 px-4 font-medium text-gray-700">Thứ tự</th>
                                        <th class="text-left py-3 px-4 font-medium text-gray-700">Tên giai đoạn</th>
                                        <th class="text-left py-3 px-4 font-medium text-gray-700">Ngày bắt đầu</th>
                                        <th class="text-left py-3 px-4 font-medium text-gray-700">Ngày kết thúc</th>
                                        <th class="text-left py-3 px-4 font-medium text-gray-700">Trạng thái</th>
                                        <th class="text-left py-3 px-4 font-medium text-gray-700"></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var stage in Model.TreatmentStages.OrderBy(s => s.StageOrder))
                                    {
                                        <tr class="border-b border-gray-100 hover:bg-gray-50 transition-colors duration-200">
                                            <td class="py-3 px-4">
                                                <div class="w-8 h-8 bg-purple-100 rounded-full flex items-center justify-center">
                                                    <span class="text-purple-600 font-medium">@stage.StageOrder</span>
                                                </div>
                                            </td>
                                            <td class="py-3 px-4 font-medium text-gray-800">@stage.StageName</td>
                                            <td class="py-3 px-4 text-gray-600">@stage.StartDate.ToString("dd/MM/yyyy")</td>
                                            <td class="py-3 px-4 text-gray-600">@(stage.EndDate.HasValue ? stage.EndDate.Value.ToString("dd/MM/yyyy") : "-")</td>
                                            <td class="py-3 px-4">
                                                @switch (stage.Status)
                                                {
                                                    case "Not Started":
                                                        <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-gray-100 text-gray-800">
                                                            Chưa bắt đầu
                                                        </span>
                                                        break;
                                                    case "In Progress":
                                                        <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                                                            Đang tiến hành
                                                        </span>
                                                        break;
                                                    case "Completed":
                                                        <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-green-100 text-green-800">
                                                            Hoàn thành
                                                        </span>
                                                        break;
                                                    case "Cancelled":
                                                        <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-red-100 text-red-800">
                                                            Đã hủy
                                                        </span>
                                                        break;
                                                    default:
                                                        <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-gray-100 text-gray-800">
                                                            @stage.Status
                                                        </span>
                                                        break;
                                                }
                                            </td>
                                            <td class="py-3 px-4">
                                                <a asp-controller="TreatmentStages" asp-action="Details" asp-route-id="@stage.Id" 
                                                   class="text-purple-600 hover:text-purple-700 hover:underline transition-colors duration-200 text-sm">
                                                    Chi tiết
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-8">
                            <div class="w-16 h-16 bg-gray-100 rounded-full flex items-center justify-center mx-auto mb-4">
                                <i class="bi bi-list-check text-gray-400 text-2xl"></i>
                            </div>
                            <p class="text-gray-500">Chưa có giai đoạn điều trị nào</p>
                            <a asp-controller="TreatmentStages" asp-action="Create" asp-route-treatmentId="@Model.Id" 
                               class="mt-3 inline-flex items-center space-x-2 bg-gradient-to-r from-purple-500 to-indigo-500 text-white px-4 py-2 rounded-lg hover:from-purple-600 hover:to-indigo-600 transition-all duration-300">
                                <i class="bi bi-plus-circle"></i>
                                <span>Thêm giai đoạn đầu tiên</span>
                            </a>
                        </div>
                    }
                </div>
            </div>

            <!-- Medications -->
            <div class="bg-white rounded-2xl shadow-lg border border-purple-200 overflow-hidden">
                <div class="bg-gradient-to-r from-green-50 to-emerald-50 border-b border-green-100 p-6">
                    <div class="flex items-center justify-between">
                        <h3 class="text-lg font-semibold text-gray-800 flex items-center space-x-2">
                            <div class="w-8 h-8 bg-green-100 rounded-lg flex items-center justify-center">
                                <i class="bi bi-capsule text-green-600"></i>
                            </div>
                            <span>Thuốc điều trị</span>
                        </h3>
                        <div class="flex items-center space-x-2">
                            <a asp-controller="Medications" asp-action="TreatmentMedications" asp-route-id="@Model.Id" 
                               class="bg-green-100 text-green-700 px-3 py-2 rounded-lg hover:bg-green-200 transition-all duration-300 text-sm flex items-center space-x-1">
                                <i class="bi bi-capsule"></i>
                                <span>Xem tất cả</span>
                            </a>
                            <a asp-controller="Medications" asp-action="Create" asp-route-treatmentId="@Model.Id" 
                               class="bg-gradient-to-r from-green-500 to-emerald-500 text-white px-3 py-2 rounded-lg hover:from-green-600 hover:to-emerald-600 transition-all duration-300 text-sm flex items-center space-x-1">
                                <i class="bi bi-plus-circle"></i>
                                <span>Thêm thuốc</span>
                            </a>
                        </div>
                    </div>
                </div>
                
                <div class="p-6">
                    @if (Model.Medications != null && Model.Medications.Any())
                    {
                        <div class="overflow-x-auto">
                            <table class="w-full">
                                <thead>
                                    <tr class="border-b border-gray-200">
                                        <th class="text-left py-3 px-4 font-medium text-gray-700">Tên thuốc</th>
                                        <th class="text-left py-3 px-4 font-medium text-gray-700">Liều lượng</th>
                                        <th class="text-left py-3 px-4 font-medium text-gray-700">Ngày bắt đầu</th>
                                        <th class="text-left py-3 px-4 font-medium text-gray-700">Ngày kết thúc</th>
                                        <th class="text-left py-3 px-4 font-medium text-gray-700">Trạng thái</th>
                                        <th class="text-left py-3 px-4 font-medium text-gray-700"></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var medication in Model.Medications.OrderBy(m => m.StartDate))
                                    {
                                        <tr class="border-b border-gray-100 hover:bg-gray-50 transition-colors duration-200">
                                            <td class="py-3 px-4 font-medium text-gray-800">@medication.MedicationName</td>
                                            <td class="py-3 px-4 text-gray-600">@medication.Dosage</td>
                                            <td class="py-3 px-4 text-gray-600">@medication.StartDate.ToString("dd/MM/yyyy")</td>
                                            <td class="py-3 px-4 text-gray-600">@(medication.EndDate.HasValue ? medication.EndDate.Value.ToString("dd/MM/yyyy") : "-")</td>
                                            <td class="py-3 px-4">
                                                @switch (medication.Status)
                                                {
                                                    case "Active":
                                                        <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                                                            Đang sử dụng
                                                        </span>
                                                        break;
                                                    case "Completed":
                                                        <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-green-100 text-green-800">
                                                            Hoàn thành
                                                        </span>
                                                        break;
                                                    case "Discontinued":
                                                        <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-red-100 text-red-800">
                                                            Đã ngừng
                                                        </span>
                                                        break;
                                                    default:
                                                        <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-gray-100 text-gray-800">
                                                            @medication.Status
                                                        </span>
                                                        break;
                                                }
                                            </td>
                                            <td class="py-3 px-4">
                                                <a asp-controller="Medications" asp-action="Details" asp-route-id="@medication.Id" 
                                                   class="text-green-600 hover:text-green-700 hover:underline transition-colors duration-200 text-sm">
                                                    Chi tiết
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-8">
                            <div class="w-16 h-16 bg-gray-100 rounded-full flex items-center justify-center mx-auto mb-4">
                                <i class="bi bi-capsule text-gray-400 text-2xl"></i>
                            </div>
                            <p class="text-gray-500">Chưa có thuốc điều trị nào</p>
                            <a asp-controller="Medications" asp-action="Create" asp-route-treatmentId="@Model.Id" 
                               class="mt-3 inline-flex items-center space-x-2 bg-gradient-to-r from-green-500 to-emerald-500 text-white px-4 py-2 rounded-lg hover:from-green-600 hover:to-emerald-600 transition-all duration-300">
                                <i class="bi bi-plus-circle"></i>
                                <span>Thêm thuốc đầu tiên</span>
                            </a>
                        </div>
                    }
                </div>
            </div>

            <!-- Appointments -->
            <div class="bg-white rounded-2xl shadow-lg border border-purple-200 overflow-hidden">
                <div class="bg-gradient-to-r from-orange-50 to-amber-50 border-b border-orange-100 p-6">
                    <div class="flex items-center justify-between">
                        <h3 class="text-lg font-semibold text-gray-800 flex items-center space-x-2">
                            <div class="w-8 h-8 bg-orange-100 rounded-lg flex items-center justify-center">
                                <i class="bi bi-calendar-check text-orange-600"></i>
                            </div>
                            <span>Lịch hẹn</span>
                        </h3>
                        <div class="flex items-center space-x-2">
                            <a asp-controller="Appointments" asp-action="Index" asp-route-treatmentId="@Model.Id" 
                               class="bg-orange-100 text-orange-700 px-3 py-2 rounded-lg hover:bg-orange-200 transition-all duration-300 text-sm flex items-center space-x-1">
                                <i class="bi bi-calendar-check"></i>
                                <span>Xem tất cả</span>
                            </a>
                            <a asp-controller="Appointments" asp-action="Create" asp-route-treatmentId="@Model.Id" 
                               class="bg-gradient-to-r from-orange-500 to-amber-500 text-white px-3 py-2 rounded-lg hover:from-orange-600 hover:to-amber-600 transition-all duration-300 text-sm flex items-center space-x-1">
                                <i class="bi bi-plus-circle"></i>
                                <span>Thêm lịch hẹn</span>
                            </a>
                        </div>
                    </div>
                </div>
                
                <div class="p-6">
                    @if (Model.Appointments != null && Model.Appointments.Any())
                    {
                        <div class="overflow-x-auto">
                            <table class="w-full">
                                <thead>
                                    <tr class="border-b border-gray-200">
                                        <th class="text-left py-3 px-4 font-medium text-gray-700">Ngày</th>
                                        <th class="text-left py-3 px-4 font-medium text-gray-700">Giờ</th>
                                        <th class="text-left py-3 px-4 font-medium text-gray-700">Bác sĩ</th>
                                        <th class="text-left py-3 px-4 font-medium text-gray-700">Loại</th>
                                        <th class="text-left py-3 px-4 font-medium text-gray-700">Trạng thái</th>
                                        <th class="text-left py-3 px-4 font-medium text-gray-700"></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var appointment in Model.Appointments.OrderByDescending(a => a.AppointmentDate).ThenBy(a => a.AppointmentTime))
                                    {
                                        <tr class="border-b border-gray-100 hover:bg-gray-50 transition-colors duration-200">
                                            <td class="py-3 px-4 text-gray-800">@appointment.AppointmentDate.ToString("dd/MM/yyyy")</td>
                                            <td class="py-3 px-4 text-gray-600">@appointment.AppointmentTime.ToString(@"hh\:mm")</td>
                                            <td class="py-3 px-4 text-gray-800">@appointment.Doctor.FullName</td>
                                            <td class="py-3 px-4 text-gray-600">@appointment.AppointmentType</td>
                                            <td class="py-3 px-4">
                                                @switch (appointment.Status)
                                                {
                                                    case "Scheduled":
                                                        <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                                                            Đã lên lịch
                                                        </span>
                                                        break;
                                                    case "Completed":
                                                        <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-green-100 text-green-800">
                                                            Hoàn thành
                                                        </span>
                                                        break;
                                                    case "Cancelled":
                                                        <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-red-100 text-red-800">
                                                            Đã hủy
                                                        </span>
                                                        break;
                                                    case "Rescheduled":
                                                        <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800">
                                                            Đổi lịch
                                                        </span>
                                                        break;
                                                    default:
                                                        <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-gray-100 text-gray-800">
                                                            @appointment.Status
                                                        </span>
                                                        break;
                                                }
                                            </td>
                                            <td class="py-3 px-4">
                                                <a asp-controller="Appointments" asp-action="Details" asp-route-id="@appointment.Id" 
                                                   class="text-orange-600 hover:text-orange-700 hover:underline transition-colors duration-200 text-sm">
                                                    Chi tiết
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-8">
                            <div class="w-16 h-16 bg-gray-100 rounded-full flex items-center justify-center mx-auto mb-4">
                                <i class="bi bi-calendar-x text-gray-400 text-2xl"></i>
                            </div>
                            <p class="text-gray-500">Chưa có lịch hẹn nào</p>
                            <a asp-controller="Appointments" asp-action="Create" asp-route-treatmentId="@Model.Id" 
                               class="mt-3 inline-flex items-center space-x-2 bg-gradient-to-r from-orange-500 to-amber-500 text-white px-4 py-2 rounded-lg hover:from-orange-600 hover:to-amber-600 transition-all duration-300">
                                <i class="bi bi-plus-circle"></i>
                                <span>Thêm lịch hẹn đầu tiên</span>
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div> 