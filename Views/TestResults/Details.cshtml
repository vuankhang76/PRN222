@model InfertilityApp.Models.TestResult

@{
    ViewData["Title"] = "Chi tiết kết quả xét nghiệm";
}

<div class="p-6 space-y-6 bg-gray-50 min-h-screen">
    <!-- Header Section -->
    <div class="flex justify-between items-center mb-6">
        <h1 class="text-2xl font-bold text-gray-900">Chi tiết kết quả xét nghiệm</h1>
        <a asp-action="Index" 
           class="inline-flex items-center px-4 py-2 bg-gray-500 hover:bg-gray-600 text-white text-sm font-medium rounded-lg transition-colors duration-200">
            <i class="bi bi-arrow-left mr-2"></i>
            Quay lại danh sách
        </a>
    </div>

    <!-- Main Form Container -->
    <div class="bg-white rounded-lg shadow-sm border border-gray-200 overflow-hidden">
        <!-- Form Content -->
        <div class="p-6 space-y-6">
            <!-- Thông tin xét nghiệm -->
            <div class="mb-6 p-4 bg-blue-50 border border-blue-200 rounded-lg">
                <h3 class="text-lg font-semibold text-blue-800 mb-3">
                    <i class="bi bi-clipboard-data mr-2"></i>Thông tin xét nghiệm
                </h3>
                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                    <div>
                        <label class="block text-sm font-semibold text-gray-700 mb-2">Tên xét nghiệm</label>
                        <div class="w-full px-3 py-2 border border-gray-300 rounded-lg bg-white text-gray-900">
                            @Model.TestName
                        </div>
                    </div>
                    <div>
                        <label class="block text-sm font-semibold text-gray-700 mb-2">Loại xét nghiệm</label>
                        <div class="w-full px-3 py-2 border border-gray-300 rounded-lg bg-white text-gray-900">
                            @Model.TestType
                        </div>
                    </div>
                </div>
                
                <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mt-4">
                    <div>
                        <label class="block text-sm font-semibold text-gray-700 mb-2">Ngày xét nghiệm</label>
                        <div class="w-full px-3 py-2 border border-gray-300 rounded-lg bg-white text-gray-900">
                            @Model.TestDate.ToString("dd/MM/yyyy")
                        </div>
                    </div>
                    <div>
                        <label class="block text-sm font-semibold text-gray-700 mb-2">Phòng xét nghiệm</label>
                        <div class="w-full px-3 py-2 border border-gray-300 rounded-lg bg-white text-gray-900">
                            @(Model.TestingLab ?? "Không có thông tin")
                        </div>
                    </div>
                    <div>
                        <label class="block text-sm font-semibold text-gray-700 mb-2">Trạng thái</label>
                        <div class="w-full px-3 py-2 border border-gray-300 rounded-lg bg-white">
                            @switch (Model.Status?.ToLower())
                            {
                                case "normal":
                                    <span class="bg-green-100 text-green-800 px-3 py-1 rounded-full text-sm font-medium">Bình thường</span>
                                    break;
                                case "abnormal":
                                    <span class="bg-red-100 text-red-800 px-3 py-1 rounded-full text-sm font-medium">Bất thường</span>
                                    break;
                                case "borderline":
                                    <span class="bg-yellow-100 text-yellow-800 px-3 py-1 rounded-full text-sm font-medium">Biên giới</span>
                                    break;
                                case "critical":
                                    <span class="bg-red-100 text-red-800 px-3 py-1 rounded-full text-sm font-medium">Nghiêm trọng</span>
                                    break;
                                default:
                                    <span class="bg-gray-100 text-gray-800 px-3 py-1 rounded-full text-sm font-medium">@(Model.Status ?? "Chưa xác định")</span>
                                    break;
                            }
                        </div>
                    </div>
                </div>
            </div>

            <!-- Thông tin bệnh nhân -->
            <div class="mb-6">
                <h3 class="text-lg font-semibold text-gray-800 mb-4">
                    <i class="bi bi-person-circle mr-2"></i>Thông tin bệnh nhân
                </h3>
                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                    <div>
                        <label class="block text-sm font-semibold text-gray-700 mb-2">Bệnh nhân</label>
                        <div class="w-full px-3 py-2 border border-gray-300 rounded-lg bg-gray-50 text-gray-900">
                            @if (Model.Patient != null)
                            {
                                <a asp-controller="Patients" asp-action="Details" asp-route-id="@Model.PatientId" class="text-blue-600 hover:text-blue-800 hover:underline">
                                    @Model.Patient.FullName
                                </a>
                            }
                            else
                            {
                                <span class="text-gray-500">Không có thông tin</span>
                            }
                        </div>
                    </div>
                    <div>
                        <label class="block text-sm font-semibold text-gray-700 mb-2">Người phối ngẫu (nếu có)</label>
                        <div class="w-full px-3 py-2 border border-gray-300 rounded-lg bg-gray-50 text-gray-900">
                            @if (Model.Partner != null)
                            {
                                <a asp-controller="Partners" asp-action="Details" asp-route-id="@Model.PartnerId" class="text-blue-600 hover:text-blue-800 hover:underline">
                                    @Model.Partner.FullName
                                </a>
                            }
                            else
                            {
                                <span class="text-gray-500">Không có</span>
                            }
                        </div>
                    </div>
                </div>
            </div>

            <!-- Kết quả xét nghiệm -->
            <div class="mb-6">
                <h3 class="text-lg font-semibold text-gray-800 mb-4">
                    <i class="bi bi-file-earmark-text mr-2"></i>Kết quả xét nghiệm
                </h3>
                <div class="grid grid-cols-1 gap-4">
                    <div>
                        <label class="block text-sm font-semibold text-gray-700 mb-2">Kết quả chi tiết</label>
                        <div class="w-full px-3 py-3 border border-gray-300 rounded-lg bg-gray-50 text-gray-900 min-h-[120px] whitespace-pre-wrap">@Model.Results</div>
                    </div>
                    
                    @if (!string.IsNullOrEmpty(Model.ReferenceRange))
                    {
                        <div>
                            <label class="block text-sm font-semibold text-gray-700 mb-2">Chỉ số tham chiếu</label>
                            <div class="w-full px-3 py-2 border border-gray-300 rounded-lg bg-gray-50 text-gray-900">
                                @Model.ReferenceRange
                            </div>
                        </div>
                    }
                    
                    @if (!string.IsNullOrEmpty(Model.Notes))
                    {
                        <div>
                            <label class="block text-sm font-semibold text-gray-700 mb-2">Ghi chú</label>
                            <div class="w-full px-3 py-3 border border-gray-300 rounded-lg bg-gray-50 text-gray-900 min-h-[80px] whitespace-pre-wrap">@Model.Notes</div>
                        </div>
                    }
                </div>
            </div>

            <!-- Thông tin bác sĩ -->
            <div class="mb-6">
                <h3 class="text-lg font-semibold text-gray-800 mb-4">
                    <i class="bi bi-person-badge mr-2"></i>Thông tin bác sĩ
                </h3>
                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                    <div>
                        <label class="block text-sm font-semibold text-gray-700 mb-2">Bác sĩ phụ trách</label>
                        <div class="w-full px-3 py-2 border border-gray-300 rounded-lg bg-gray-50 text-gray-900">
                            @if (Model.Doctor != null)
                            {
                                <a asp-controller="Doctors" asp-action="Details" asp-route-id="@Model.DoctorId" class="text-blue-600 hover:text-blue-800 hover:underline">
                                    @Model.Doctor.FullName
                                </a>
                            }
                            else
                            {
                                <span class="text-gray-500">Chưa chỉ định</span>
                            }
                        </div>
                    </div>
                    <div>
                        <label class="block text-sm font-semibold text-gray-700 mb-2">Ngày tạo</label>
                        <div class="w-full px-3 py-2 border border-gray-300 rounded-lg bg-gray-50 text-gray-900">
                            @Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")
                        </div>
                    </div>
                </div>
            </div>

            <!-- File đính kèm -->
            @if (!string.IsNullOrEmpty(Model.AttachmentPath))
            {
                <div class="mb-6 p-4 bg-green-50 border border-green-200 rounded-lg">
                    <h3 class="text-lg font-semibold text-green-800 mb-3">
                        <i class="bi bi-paperclip mr-2"></i>File đính kèm
                    </h3>
                    <div class="flex items-center space-x-3">
                        <div class="w-12 h-12 bg-green-100 rounded-lg flex items-center justify-center">
                            <i class="bi bi-file-earmark text-green-600 text-xl"></i>
                        </div>
                        <div class="flex-1">
                            <p class="text-sm font-medium text-gray-900">File kết quả xét nghiệm</p>
                            <p class="text-sm text-gray-500">Nhấp để tải xuống</p>
                        </div>
                        <a asp-action="DownloadAttachment" asp-route-id="@Model.Id" 
                           class="bg-green-600 text-white px-4 py-2 rounded-lg hover:bg-green-700 transition-colors duration-200 flex items-center">
                            <i class="bi bi-download mr-2"></i>
                            Tải xuống
                        </a>
                    </div>
                </div>
            }

            <!-- Action Buttons -->
            <div class="flex justify-end space-x-4 pt-6 border-t border-gray-200">
                <a asp-action="Edit" asp-route-id="@Model.Id" 
                   class="bg-orange-600 text-white px-6 py-2 rounded-lg hover:bg-orange-700 transition-colors duration-200 flex items-center">
                    <i class="bi bi-pencil mr-2"></i>Cập nhật
                </a>
                <a asp-action="Delete" asp-route-id="@Model.Id" 
                   class="bg-red-600 text-white px-6 py-2 rounded-lg hover:bg-red-700 transition-colors duration-200 flex items-center"
                   onclick="return confirm('Bạn có chắc chắn muốn xóa kết quả xét nghiệm này?')">
                    <i class="bi bi-trash mr-2"></i>Xóa
                </a>
            </div>
        </div>
    </div>
</div>
