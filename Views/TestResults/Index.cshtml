@model IEnumerable<InfertilityApp.Models.TestResult>

@{
    ViewData["Title"] = "Danh sách kết quả xét nghiệm";
    string? patientName = ViewData["PatientName"] as string;
    int? patientId = ViewData["PatientId"] as int?;
    int? treatmentId = ViewData["TreatmentId"] as int?;
}

@if (TempData["Success"] != null)
{
    <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded mb-4 flex items-center justify-between" role="alert">
        <span>@TempData["Success"]</span>
        <button type="button" class="text-green-700 hover:text-green-900" onclick="this.parentElement.remove()">
            <i class="bi bi-x-lg"></i>
        </button>
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4 flex items-center justify-between" role="alert">
        <span>@TempData["Error"]</span>
        <button type="button" class="text-red-700 hover:text-red-900" onclick="this.parentElement.remove()">
            <i class="bi bi-x-lg"></i>
        </button>
    </div>
}

<div class="container mx-auto px-4 py-8">
    <div class="flex justify-between items-center mb-6">
        <div>
            <h2 class="text-3xl font-bold text-gray-900">Danh sách kết quả xét nghiệm</h2>
            @if (!string.IsNullOrEmpty(patientName))
            {
                <p class="text-gray-600 mt-1">Bệnh nhân: <span class="font-semibold">@patientName</span></p>
            }
            @if (!string.IsNullOrEmpty(ViewData["MedicalRecordTitle"] as string))
            {
                <p class="text-gray-600 mt-1">Hồ sơ y tế: <span class="font-semibold">@ViewData["MedicalRecordTitle"]</span></p>
            }
        </div>
        <div class="flex space-x-3">
            @if (patientId.HasValue)
            {
                <a asp-controller="Patients" asp-action="Details" asp-route-id="@patientId" class="bg-gray-600 text-white px-4 py-2 rounded-lg hover:bg-gray-700 transition-colors duration-200 flex items-center">
                    <i class="bi bi-person mr-2"></i> Xem thông tin bệnh nhân
                </a>
            }
            @if (!string.IsNullOrEmpty(ViewData["MedicalRecordTitle"] as string))
            {
                <a asp-controller="MedicalRecords" asp-action="Index" class="bg-gray-600 text-white px-4 py-2 rounded-lg hover:bg-gray-700 transition-colors duration-200 flex items-center">
                    <i class="bi bi-arrow-left mr-2"></i> Quay lại hồ sơ y tế
                </a>
            }
            <a asp-action="Create" asp-route-patientId="@patientId" class="bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700 transition-colors duration-200 flex items-center">
                <i class="bi bi-plus-circle mr-2"></i> Thêm kết quả mới
            </a>
        </div>
    </div>

    <div class="bg-white rounded-lg shadow-lg">
        <div class="p-6">
            <div class="mb-6">
                <div class="relative">
                    <input type="text" id="searchInput" class="w-full pl-10 pr-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent" placeholder="Tìm kiếm kết quả xét nghiệm...">
                    <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                        <i class="bi bi-search text-gray-400"></i>
                    </div>
                </div>
            </div>
            
            <div class="overflow-x-auto">
                <table class="w-full" id="testResultsTable">
                    <thead>
                        <tr class="border-b border-gray-200">
                            <th class="text-left py-3 px-4 font-semibold text-gray-700">Loại xét nghiệm</th>
                            <th class="text-left py-3 px-4 font-semibold text-gray-700">Tên xét nghiệm</th>
                            @if (string.IsNullOrEmpty(patientName))
                            {
                                <th class="text-left py-3 px-4 font-semibold text-gray-700">Bệnh nhân</th>
                            }
                            <th class="text-left py-3 px-4 font-semibold text-gray-700">Ngày xét nghiệm</th>
                            <th class="text-left py-3 px-4 font-semibold text-gray-700">Trạng thái</th>
                            <th class="text-left py-3 px-4 font-semibold text-gray-700">Bác sĩ</th>
                            <th class="text-left py-3 px-4 font-semibold text-gray-700">Phòng XN</th>
                            <th class="text-left py-3 px-4 font-semibold text-gray-700 w-32">Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            @foreach (var item in Model)
                            {
                                <tr class="border-b border-gray-100 hover:bg-gray-50 transition-colors duration-150">
                                    <td class="py-4 px-4 text-sm text-gray-900 font-medium">
                                        @switch (item.TestType)
                                        {
                                            case "Hormone":
                                                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-purple-100 text-purple-800">Hormone</span>
                                                break;
                                            case "Semen Analysis":
                                                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">Tinh dịch</span>
                                                break;
                                            case "HSG":
                                                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">HSG</span>
                                                break;
                                            case "Blood Test":
                                                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800">Máu</span>
                                                break;
                                            case "Ultrasound":
                                                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800">Siêu âm</span>
                                                break;
                                            case "Genetic":
                                                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-indigo-100 text-indigo-800">Di truyền</span>
                                                break;
                                            case "Infection":
                                                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-orange-100 text-orange-800">Nhiễm trùng</span>
                                                break;
                                            default:
                                                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800">@item.TestType</span>
                                                break;
                                        }
                                    </td>
                                    <td class="py-4 px-4 text-sm text-gray-900 font-medium">
                                        @item.TestName
                                    </td>
                                    @if (string.IsNullOrEmpty(patientName))
                                    {
                                        <td class="py-4 px-4 text-sm text-gray-900">
                                            <a asp-controller="Patients" asp-action="Details" asp-route-id="@item.PatientId" class="text-blue-600 hover:text-blue-800 hover:underline">
                                                @item.Patient?.FullName
                                            </a>
                                        </td>
                                    }
                                    <td class="py-4 px-4 text-sm text-gray-900">
                                        @item.TestDate.ToString("dd/MM/yyyy")
                                    </td>
                                    <td class="py-4 px-4 text-sm">
                                        @switch (item.Status)
                                        {
                                            case "Normal":
                                                <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-green-100 text-green-800">Bình thường</span>
                                                break;
                                            case "Abnormal":
                                                <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-red-100 text-red-800">Bất thường</span>
                                                break;
                                            case "Borderline":
                                                <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-yellow-100 text-yellow-800">Biên giới</span>
                                                break;
                                            case "Critical":
                                                <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-red-100 text-red-800">Nguy hiểm</span>
                                                break;
                                            default:
                                                <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-gray-100 text-gray-800">@item.Status</span>
                                                break;
                                        }
                                    </td>
                                    <td class="py-4 px-4 text-sm text-gray-900">
                                        @if (item.Doctor != null)
                                        {
                                            <a asp-controller="Doctors" asp-action="Details" asp-route-id="@item.DoctorId" class="text-blue-600 hover:text-blue-800 hover:underline">
                                                @item.Doctor.FullName
                                            </a>
                                        }
                                        else
                                        {
                                            <span class="text-gray-400">-</span>
                                        }
                                    </td>
                                    <td class="py-4 px-4 text-sm text-gray-600">
                                        @(string.IsNullOrEmpty(item.TestingLab) ? "-" : item.TestingLab)
                                    </td>
                                    <td class="py-4 px-4 text-sm">
                                        <div class="flex space-x-2">
                                            <a asp-action="Details" asp-route-id="@item.Id" class="text-blue-600 hover:text-blue-900 text-xs font-medium" title="Chi tiết">
                                                Chi tiết
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@item.Id" class="text-red-600 hover:text-red-900 text-xs font-medium" title="Xóa" onclick="return confirm('Bạn có chắc chắn muốn xóa kết quả xét nghiệm này?')">
                                                Xóa
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="@(string.IsNullOrEmpty(patientName) ? "8" : "7")" class="py-12 text-center">
                                    <div class="flex flex-col items-center">
                                        <i class="bi bi-clipboard-data text-4xl text-gray-400 mb-4"></i>
                                        <p class="text-gray-600 text-lg">Chưa có kết quả xét nghiệm nào</p>
                                        <p class="text-gray-400 text-sm mt-1">Hãy thêm kết quả xét nghiệm đầu tiên</p>
                                        <a asp-action="Create" asp-route-patientId="@patientId" class="mt-4 bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700 transition-colors duration-200">
                                            <i class="bi bi-plus-circle mr-2"></i> Thêm kết quả mới
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Initialize search functionality
            $('#searchInput').on('keyup', function() {
                var value = $(this).val().toLowerCase();
                $('#testResultsTable tbody tr').filter(function() {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                });
            });
        });
    </script>
}
